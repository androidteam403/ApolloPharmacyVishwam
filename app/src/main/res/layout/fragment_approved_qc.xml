<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools">


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/parentLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_marginBottom="50dp">

            <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
                android:id="@+id/refreshSwipe"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewApproved"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:itemCount="5"
                    tools:listitem="@layout/qc_approvedlayout" />
            </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="@dimen/value_40dp"
                android:backgroundTint="@color/splash_color"
                android:elevation="20dp"
                android:src="@drawable/ic_filter"


                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent" />


            <RelativeLayout
                android:id="@+id/emptyList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/emptyImage"
                    android:layout_width="@dimen/value_120dp"
                    android:layout_height="@dimen/value_120dp"
                    android:layout_centerInParent="true"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/qca" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/emptyImage"
                    android:text="Approved List is Empty"
                    android:textColor="@color/backgroundColor"
                    android:textSize="15dp" />

            </RelativeLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

        <!--        <View-->
        <!--            android:id="@+id/filter_indication"-->
        <!--            android:layout_width="@dimen/text_12sp"-->
        <!--            android:layout_height="@dimen/text_12sp"-->
        <!--            android:layout_alignParentBottom="true"-->
        <!--            android:layout_marginLeft="284dp"-->
        <!--            android:layout_marginBottom="73dp"-->
        <!--            android:background="@drawable/red_indication"-->
        <!--            android:visibility="gone"-->

        <!--            tools:ignore="MissingConstraints,NotSibling" />-->


        <RelativeLayout
            android:id="@+id/continue_btn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/value_50dp"
            android:layout_alignParentBottom="true"
            android:background="@color/splash_color"
            android:gravity="center_vertical"
            android:visibility="visible">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <RelativeLayout
                    android:id="@+id/spinner_layout"
                    android:layout_width="@dimen/value_75dp"
                    android:layout_height="@dimen/value_50dp"
                    android:layout_marginTop="@dimen/value_3dp"
                    android:background="@drawable/spinner_background">

                    <Spinner
                        android:id="@+id/item_count_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:minHeight="0dp"
                        android:textSize="16sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/value_10dp"
                        android:src="@drawable/bottomarrow" />
                </RelativeLayout>
            </RelativeLayout>

            <ImageView
                android:id="@+id/prev_page"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="5dp"
                android:contentDescription="@string/app_name"
                android:fontFamily="@font/roboto_medium"
                android:gravity="center"
                android:padding="@dimen/text_10sp"
                android:rotation="180"
                android:src="@drawable/ic_arrow__next_page"
                android:textColor="@color/black"
                android:textSize="9sp" />

            <TextView
                android:id="@+id/pgno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:fontFamily="@font/roboto_medium"
                android:text=""
                android:textColor="@color/white"
                android:textSize="@dimen/text_13sp" />

            <ImageView
                android:id="@+id/next_page"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="5dp"
                android:contentDescription="@string/app_name"
                android:fontFamily="@font/roboto_medium"
                android:gravity="center"
                android:padding="@dimen/text_10sp"
                android:src="@drawable/ic_arrow__next_page"
                android:textColor="@color/black"
                android:textSize="9sp" />
        </RelativeLayout>
    </RelativeLayout>
</layout>
