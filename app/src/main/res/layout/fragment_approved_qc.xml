<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools">


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="@dimen/value_45dp"
            android:id="@+id/search_layout"
            android:layout_marginStart="@dimen/five5_sp"
            android:layout_marginTop="@dimen/value_5dp"
            android:layout_marginEnd="@dimen/five5_sp"
            android:background="@drawable/search_view_pendency"
            android:orientation="horizontal"
            android:weightSum="2"
            app:layout_constraintTop_toTopOf="parent">

            <EditText
                android:textAllCaps="true"
                android:id="@+id/search_view"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="@dimen/value_60dp"
                android:layout_weight="1.8"
                android:background="@color/transparent"
                android:gravity="left|center"
                android:hint="Search by Order ID"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:maxLines="1"
                android:paddingStart="@dimen/text_15sp"

                android:textColor="@color/black"
                android:textColorHint="@android:color/black"
                android:textSize="@dimen/text_14sp" />

            <ImageView
                android:id="@+id/close"
                android:layout_width="0dp"
                android:layout_height="match_parent"

                android:layout_marginEnd="@dimen/text_10sp"
                android:layout_weight=".2"


                android:src="@drawable/ic_search_24" />


            <ImageView
                android:id="@+id/close_arrow"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/text_10sp"
                android:layout_weight=".2"
                android:src="@drawable/closee_black"


                android:visibility="gone" />
        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/parentLayout"
            android:layout_marginTop="@dimen/value_2dp"
            android:layout_below="@id/search_layout"
            android:layout_width="match_parent"
            android:layout_marginBottom="50dp"

            android:layout_height="match_parent">

            <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
                android:id="@+id/refreshSwipe"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewApproved"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:itemCount="5"
                tools:listitem="@layout/qc_approvedlayout" />
            </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="@dimen/value_40dp"
                android:backgroundTint="@color/splash_color"
                android:elevation="20dp"
                android:src="@drawable/ic_filter"


                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent" />


            <RelativeLayout
                android:id="@+id/emptyList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/emptyImage"
                    android:layout_width="@dimen/value_120dp"
                    android:layout_height="@dimen/value_120dp"
                    android:layout_centerInParent="true"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/qca" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/emptyImage"
                    android:text="Approved List is Empty"
                    android:textColor="@color/backgroundColor"
                    android:textSize="15dp" />

            </RelativeLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

<!--        <View-->
<!--            android:id="@+id/filter_indication"-->
<!--            android:layout_width="@dimen/text_12sp"-->
<!--            android:layout_height="@dimen/text_12sp"-->
<!--            android:layout_alignParentBottom="true"-->
<!--            android:layout_marginLeft="284dp"-->
<!--            android:layout_marginBottom="73dp"-->
<!--            android:background="@drawable/red_indication"-->
<!--            android:visibility="gone"-->

<!--            tools:ignore="MissingConstraints,NotSibling" />-->


        <RelativeLayout
            android:id="@+id/continue_btn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/value_50dp"
            android:layout_alignParentBottom="true"
            android:background="@color/splash_color"
            android:gravity="center_vertical"
            android:visibility="visible">

            <RelativeLayout
                android:id="@+id/spinnerlayout"
                android:layout_width="@dimen/value_140dp"
                android:layout_height="wrap_content"
                >

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/filtertype"

                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/value_15dp"
                    android:layout_marginTop="@dimen/value_10dp"
                    android:layout_marginRight="@dimen/value_15dp"
                    android:focusable="true"
                    android:textColorHint="@color/white"

                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:id="@+id/selectfiltertype"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:clickable="true"
                        android:drawableEnd="@drawable/ic_baseline_arrow"
                        android:editable="false"
                        android:enabled="true"
                        android:focusable="false"
                        android:hint="Select Rows"
                        android:paddingStart="@dimen/value_10dp"
                        android:paddingEnd="@dimen/value_10dp"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        android:textSize="@dimen/text_12sp" />
                </com.google.android.material.textfield.TextInputLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_toEndOf="@+id/spinnerlayout"
                android:layout_alignParentEnd="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:visibility="invisible"
                    android:id="@+id/prev_page"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="5dp"

                    android:contentDescription="@string/app_name"
                    android:fontFamily="@font/roboto_medium"
                    android:gravity="center"
                    android:padding="@dimen/text_10sp"
                    android:rotation="180"
                    android:src="@drawable/ic_arrow__next_page"
                    android:textColor="@color/black"
                    android:textSize="9sp" />

                <TextView
                    android:layout_toEndOf="@+id/prev_page"
                    android:gravity="center"
                    android:id="@+id/pgno"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/roboto_medium"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_13sp" />

                <ImageView
                    android:id="@+id/next_page"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_toEndOf="@+id/pgno"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="5dp"

                    android:contentDescription="@string/app_name"
                    android:fontFamily="@font/roboto_medium"
                    android:gravity="center"

                    android:padding="@dimen/text_10sp"
                    android:src="@drawable/ic_arrow__next_page"
                    android:textColor="@color/black"
                    android:textSize="9sp" />
            </RelativeLayout>



        </RelativeLayout>

    </RelativeLayout>
</layout>
