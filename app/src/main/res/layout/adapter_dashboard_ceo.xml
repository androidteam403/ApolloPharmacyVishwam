<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/text_dimen_10"
            android:layout_marginTop="@dimen/value_1dp"
            android:layout_marginEnd="@dimen/text_dimen_10"
            android:background="@drawable/background_for_champs_names"
            android:gravity="center_vertical"
            android:padding="@dimen/value_2dp"
            android:weightSum="1">


            <TextView
                android:id="@+id/name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/value_5dp"
                android:layout_weight="0.25"
                android:fontFamily="@font/roboto_medium"
                android:text="N.Senthil Kumar"
                android:textAlignment="viewStart"
                android:textColor="@color/label_color_ceo"
                android:textSize="@dimen/text_12sp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/value_2dp"
                android:layout_weight="0.12"
                android:background="@drawable/background_for_closed"
                android:padding="@dimen/four4_dp">

                <TextView
                    android:id="@+id/closed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium"
                    android:gravity="center"
                    android:text="32"
                    android:textColor="@color/white_for_both"
                    android:textSize="@dimen/dimen11sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/value_2dp"
                android:layout_weight="0.085"
                android:background="@drawable/orange_background_qc"
                android:padding="@dimen/four4_dp">

                <TextView
                    android:id="@+id/lessThanTwo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium"
                    android:gravity="center"
                    android:text="5"
                    android:textColor="@color/white_for_both"
                    android:textSize="@dimen/dimen11sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/value_2dp"
                android:layout_weight="0.1"
                android:background="@drawable/red_background_qc"
                android:padding="@dimen/four4_dp">

                <TextView
                    android:id="@+id/threeToEight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/white_for_both"
                    android:textSize="@dimen/dimen11sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/value_2dp"
                android:layout_weight="0.085"
                android:background="@drawable/monitoring_greaterthan_eight_bg"
                android:padding="@dimen/four4_dp">

                <TextView
                    android:id="@+id/greaterThanEight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/white_for_both"
                    android:textSize="@dimen/dimen11sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/value_2dp"
                android:layout_weight="0.13"
                android:background="@drawable/redd_background_qc"
                android:padding="@dimen/four4_dp">

                <TextView
                    android:id="@+id/rejected"
                    android:layout_width="32dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/white_for_both"
                    android:textSize="@dimen/dimen11sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/value_2dp"
                android:layout_weight="0.12"
                android:background="@drawable/skyblue_background_qc"
                android:padding="@dimen/four4_dp">

                <TextView
                    android:id="@+id/pending"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/white_for_both"
                    android:textSize="@dimen/dimen11sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/value_5dp"
                android:layout_weight="0.13"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/total_arrow_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="1">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.7"
                        android:gravity="center">

                        <LinearLayout
                            android:layout_width="@dimen/value_30dp"
                            android:layout_height="@dimen/value_30dp"
                            android:layout_centerInParent="true"
                            android:layout_gravity="center"
                            android:background="@drawable/round_bg_blue_navy"
                            android:gravity="center"
                            android:visibility="visible">

                            <TextView
                                android:id="@+id/total_qc"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:padding="5dp"
                                android:text="387"
                                android:textAlignment="center"
                                android:textColor="@color/white_for_both"
                                android:textSize="@dimen/dimen8sp"
                                android:textStyle="bold" />
                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/right_arrow_qc"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.3"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/black_right_arroww"
                            android:tint="@color/black"
                            tools:ignore="UseAppTint" />
                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

    </RelativeLayout>
</layout>