<?xml version="1.0" encoding="utf-8"?>
<layout>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:padding="@dimen/value_2dp"
        android:layout_marginTop="@dimen/value_1dp"
        android:weightSum="1"
        android:layout_marginStart="@dimen/text_dimen_10"
        android:layout_marginEnd="@dimen/text_dimen_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_for_champs_names"
        android:gravity="center_vertical">


        <TextView
            android:textAlignment="viewStart"
            android:id="@+id/name"
            android:layout_marginStart="@dimen/value_5dp"
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_medium"
            android:text="N.Senthil Kumar"
            android:lines="1"
            android:ellipsize="end"
            android:textColor="@color/black"
            android:textSize="@dimen/text_12sp" />

        <LinearLayout
            android:layout_marginStart="@dimen/value_2dp"
            android:background="@drawable/background_for_closed"
            android:padding="@dimen/four4_dp"
            android:layout_width="0dp"
            android:layout_weight="0.12"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/closed"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium"
                android:text="32"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen11sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginStart="@dimen/value_2dp"
            android:background="@drawable/orange_background_qc"
            android:padding="@dimen/four4_dp"
            android:layout_width="0dp"
            android:layout_weight="0.085"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/lessThanTwo"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium"
                android:text="5"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen11sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginStart="@dimen/value_2dp"
            android:background="@drawable/red_background_qc"
            android:padding="@dimen/four4_dp"
            android:layout_width="0dp"
            android:layout_weight="0.1"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/threeToEight"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen11sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginStart="@dimen/value_2dp"
            android:background="@drawable/ash_background_qc"
            android:padding="@dimen/four4_dp"
            android:layout_width="0dp"
            android:layout_weight="0.085"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/greaterThanEight"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen11sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginStart="@dimen/value_2dp"
            android:background="@drawable/redd_background_qc"
            android:padding="@dimen/four4_dp"
            android:layout_width="0dp"
            android:layout_weight="0.13"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/rejected"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen11sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginStart="@dimen/value_2dp"
            android:background="@drawable/skyblue_background_qc"
            android:padding="@dimen/four4_dp"
            android:layout_width="0dp"
            android:layout_weight="0.12"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/pending"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen11sp" />
        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_margin="@dimen/value_5dp"
            android:layout_width="0dp"
            android:layout_weight="0.13"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1">
                <LinearLayout
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="0.7"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:visibility="visible"

                        android:background="@drawable/round_bg_blue_navy"
                        android:layout_centerInParent="true"
                        android:layout_width="@dimen/value_25dp"
                        android:layout_height="@dimen/value_25dp"
                        android:layout_gravity="center"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/total_qc"
                            android:text="38"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:padding="5dp"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_12sp"
                            android:textStyle="bold" />
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/right_arrow_qc"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/black_right_arroww"/>
                </LinearLayout>


            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

</RelativeLayout>
</layout>