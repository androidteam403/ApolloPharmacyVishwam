<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.home.discount.pending.DiscountPendingActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/title_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/vishwam_actionbar_height"
                android:background="@color/vishwam_actionbar_color"
                android:orientation="horizontal"
                android:padding="@dimen/four4_dp">

                <ImageView
                    android:id="@+id/back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:contentDescription="@string/app_name"
                    android:onClick="@{()-> callback.onClickBack()}"
                    android:src="@drawable/icon_back_arrow"
                    tools:ignore="UseAppTint" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/list_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginStart="15sp"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Pending List"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_16sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_marginStart="15sp"
                            android:fontFamily="@font/poppins_medium"
                            android:text="ORDER ID :"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_12sp" />

                        <TextView
                            android:id="@+id/orderid"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:fontFamily="@font/poppins_semi_bold"
                            android:paddingStart="8sp"
                            android:text="Rv00005"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_dimen_12" />

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/heaader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fcf6e4"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/value_5dp">

                    <TextView
                        android:id="@+id/store"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Store Id : "
                        android:textColor="#548389"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/store_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/store"
                        android:layout_marginEnd="@dimen/value_1dp"
                        android:fontFamily="@font/poppins_medium"
                        android:paddingStart="@dimen/five5_sp"
                        android:text="16001"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_12sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/value_10dp"
                        android:gravity="end"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/postedDateText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:fontFamily="@font/poppins_medium"
                            android:text="Req. Date : "
                            android:textColor="#548389"
                            android:textSize="11sp" />

                        <TextView
                            android:id="@+id/postedDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/postedDateText"
                            android:fontFamily="@font/poppins_medium"
                            android:paddingStart="@dimen/five5_sp"
                            android:text="25-sep-2020"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_12sp" />

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/value_10dp"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/value_5dp">


                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Store Name : "
                        android:textColor="#548389"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/store_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/name"
                        android:layout_marginEnd="@dimen/value_1dp"
                        android:fontFamily="@font/poppins_medium"
                        android:paddingStart="@dimen/five5_sp"
                        android:text="Apollo"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_12sp" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:gravity="end"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/customernumber"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_medium"
                            android:text="Customer No : "

                            android:textColor="#548389"
                            android:textSize="11sp" />

                        <TextView
                            android:id="@+id/custmer_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/customer"
                            android:fontFamily="@font/poppins_medium"
                            android:paddingStart="@dimen/five5_sp"
                            android:text="999999123"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_12sp" />
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="4dp"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/value_5dp">


                    <TextView
                        android:id="@+id/customer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Customer Name : "
                        android:textColor="#548389"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/custmer_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/customer"
                        android:layout_marginEnd="@dimen/value_1dp"
                        android:fontFamily="@font/poppins_medium"
                        android:paddingStart="@dimen/five5_sp"
                        android:text="Apollo"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_12sp" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:gravity="end"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/dc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_medium"
                            android:text="DC Name : "
                            android:textColor="#548389"
                            android:textSize="11sp" />

                        <TextView
                            android:id="@+id/dc_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/dc"
                            android:fontFamily="@font/poppins_medium"
                            android:paddingStart="@dimen/five5_sp"
                            android:text="999999123"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_12sp" />
                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="1">


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_view_pending"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="8dp"
                    android:layout_weight=".45"
                    android:visibility="visible"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:itemCount="3"
                    tools:listitem="@layout/order_adapter" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_alignParentBottom="true"
                    android:layout_weight=".32"

                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/categoryLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/value_5dp"

                        android:layout_marginBottom="@dimen/value_8dp"
                        android:background="@drawable/lite_blue_border"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/value_5dp"
                            android:orientation="horizontal"
                            android:weightSum="1">

                            <LinearLayout
                                android:id="@+id/pharmaAvgLayout"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="3dp"
                                android:layout_weight="0.35"
                                android:orientation="vertical"
                                android:visibility="gone"
                                android:weightSum="0.5">

                                <TextView
                                    android:id="@+id/pharmaDiscLabel"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingStart="15dp"
                                    android:text="Pharma"

                                    android:textSize="12sp"
                                    app:fontFamily="@font/poppins_medium" />

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <ImageView
                                        android:id="@+id/pharmaSub"
                                        android:layout_width="@dimen/value_35dp"
                                        android:layout_height="@dimen/value_35dp"
                                        android:layout_centerVertical="true"
                                        android:layout_marginStart="@dimen/value_5dp"
                                        android:contentDescription="@string/app_name"
                                        android:padding="@dimen/value_5dp"
                                        android:src="@drawable/minus"
                                        app:tint="@color/grey" />

                                    <EditText
                                        android:id="@+id/pharmaBulkDisc"
                                        android:layout_width="wrap_content"
                                        android:layout_height="@dimen/value_30dp"
                                        android:layout_centerHorizontal="true"
                                        android:layout_marginTop="@dimen/value_2dp"
                                        android:layout_toStartOf="@+id/pharmaAdd"
                                        android:layout_toEndOf="@+id/pharmaSub"
                                        android:background="@drawable/bulk_discount_edittext"
                                        android:gravity="center"
                                        android:imeOptions="flagNoExtractUi"
                                        android:inputType="numberDecimal"
                                        android:text="0.00"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/text_13sp"
                                        app:fontFamily="@font/droidsans" />

                                    <ImageView
                                        android:id="@+id/pharmaAdd"
                                        android:layout_width="@dimen/value_35dp"
                                        android:layout_height="@dimen/value_35dp"
                                        android:layout_alignParentEnd="true"
                                        android:layout_centerVertical="true"
                                        android:layout_marginEnd="@dimen/value_5dp"
                                        android:contentDescription="@string/app_name"
                                        android:padding="@dimen/value_5dp"
                                        android:src="@drawable/add_circle"
                                        app:tint="#27abe4" />
                                </RelativeLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/fmcgAvgLayout"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="3dp"
                                android:layout_weight="0.35"
                                android:orientation="vertical"
                                android:visibility="gone"
                                android:weightSum="0.5">

                                <TextView
                                    android:id="@+id/fmcgDiscLabel"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingStart="15dp"
                                    android:text="FMCG"
                                    android:textSize="12sp"
                                    app:fontFamily="@font/poppins_medium" />

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center">

                                    <ImageView
                                        android:id="@+id/fmcgSub"
                                        android:layout_width="@dimen/value_35dp"
                                        android:layout_height="@dimen/value_35dp"
                                        android:layout_centerVertical="true"
                                        android:layout_marginStart="5dp"
                                        android:contentDescription="@string/app_name"
                                        android:padding="@dimen/value_5dp"
                                        android:src="@drawable/minus"
                                        app:tint="@color/grey" />

                                    <EditText
                                        android:id="@+id/fmcgBulkDisc"
                                        android:layout_width="wrap_content"
                                        android:layout_height="@dimen/value_30dp"
                                        android:layout_centerHorizontal="true"
                                        android:layout_marginTop="@dimen/value_2dp"
                                        android:layout_toStartOf="@+id/fmcgAdd"
                                        android:layout_toEndOf="@+id/fmcgSub"
                                        android:background="@drawable/bulk_discount_edittext"
                                        android:gravity="center"
                                        android:imeOptions="flagNoExtractUi"
                                        android:inputType="numberDecimal"
                                        android:text="0.00"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/text_13sp"
                                        app:fontFamily="@font/droidsans" />

                                    <ImageView
                                        android:id="@+id/fmcgAdd"
                                        android:layout_width="@dimen/value_35dp"
                                        android:layout_height="@dimen/value_35dp"
                                        android:layout_alignParentEnd="true"
                                        android:layout_centerVertical="true"
                                        android:layout_marginEnd="@dimen/value_5dp"
                                        android:contentDescription="@string/app_name"
                                        android:padding="@dimen/value_5dp"
                                        android:src="@drawable/add_circle"
                                        app:tint="#27abe4" />
                                </RelativeLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/remarksLayout"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="3dp"
                                android:layout_weight="0.25"
                                android:orientation="vertical"
                                android:visibility="visible"
                                android:weightSum="0.5">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Remarks"
                                    android:textAlignment="center"
                                    android:textSize="12sp"
                                    app:fontFamily="@font/poppins_medium" />

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <TextView
                                        android:id="@+id/remarksText"
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/value_30dp"
                                        android:layout_centerHorizontal="true"
                                        android:layout_marginTop="@dimen/value_2dp"
                                        android:background="#27abe4"
                                        android:gravity="center"

                                        android:imeOptions="flagNoExtractUi"
                                        android:inputType="numberDecimal"
                                        android:onClick="@{()-> callback.onClickRemarks()}"
                                        android:text="Write"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/text_13sp"
                                        app:fontFamily="@font/poppins_medium" />


                                </RelativeLayout>
                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"

                            android:weightSum="1">

                            <LinearLayout
                                android:id="@+id/plAvgLayout"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="3dp"
                                android:layout_weight="0.35"

                                android:orientation="vertical"
                                android:visibility="gone"
                                android:weightSum="0.5">

                                <TextView
                                    android:id="@+id/plDiscLabel"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingStart="15dp"

                                    android:text="PL"
                                    android:textSize="12sp"
                                    app:fontFamily="@font/poppins_medium" />

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"

                                    android:gravity="center">

                                    <ImageView
                                        android:id="@+id/plSub"
                                        android:layout_width="@dimen/value_35dp"
                                        android:layout_height="@dimen/value_35dp"
                                        android:layout_centerVertical="true"
                                        android:layout_marginStart="5dp"
                                        android:contentDescription="@string/app_name"
                                        android:padding="@dimen/value_5dp"
                                        android:src="@drawable/minus"
                                        app:tint="@color/grey" />

                                    <EditText
                                        android:id="@+id/plBulkDisc"
                                        android:layout_width="wrap_content"
                                        android:layout_height="@dimen/value_30dp"
                                        android:layout_centerHorizontal="true"
                                        android:layout_marginTop="@dimen/value_2dp"
                                        android:layout_toStartOf="@+id/plAdd"
                                        android:layout_toEndOf="@+id/plSub"
                                        android:background="@drawable/bulk_discount_edittext"
                                        android:gravity="center"
                                        android:imeOptions="flagNoExtractUi"
                                        android:inputType="numberDecimal"
                                        android:text="0.00"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/text_13sp"
                                        app:fontFamily="@font/droidsans" />

                                    <ImageView
                                        android:id="@+id/plAdd"
                                        android:layout_width="@dimen/value_35dp"
                                        android:layout_height="@dimen/value_35dp"
                                        android:layout_alignParentEnd="true"
                                        android:layout_centerVertical="true"
                                        android:layout_marginEnd="@dimen/value_5dp"
                                        android:contentDescription="@string/app_name"
                                        android:padding="@dimen/value_5dp"
                                        android:src="@drawable/add_circle"
                                        app:tint="#27abe4" />
                                </RelativeLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/surgicalAvgLayout"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="3dp"
                                android:layout_weight="0.35"

                                android:orientation="vertical"
                                android:visibility="gone"
                                android:weightSum="0.5">

                                <TextView
                                    android:id="@+id/surgicalDiscLabel"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingStart="15dp"

                                    android:text="Surgical"
                                    android:textSize="12sp"
                                    app:fontFamily="@font/poppins_medium" />

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"

                                    android:gravity="center">

                                    <ImageView
                                        android:id="@+id/surgicalSub"
                                        android:layout_width="@dimen/value_35dp"
                                        android:layout_height="@dimen/value_35dp"
                                        android:layout_centerVertical="true"
                                        android:layout_marginStart="5dp"
                                        android:contentDescription="@string/app_name"
                                        android:padding="@dimen/value_5dp"
                                        android:src="@drawable/minus"
                                        app:tint="@color/grey" />

                                    <EditText
                                        android:id="@+id/surgicalBulkDisc"
                                        android:layout_width="wrap_content"
                                        android:layout_height="@dimen/value_30dp"
                                        android:layout_centerHorizontal="true"
                                        android:layout_marginTop="@dimen/value_2dp"
                                        android:layout_toStartOf="@+id/surgicalAdd"
                                        android:layout_toEndOf="@+id/surgicalSub"
                                        android:background="@drawable/bulk_discount_edittext"
                                        android:gravity="center"
                                        android:imeOptions="flagNoExtractUi"
                                        android:inputType="numberDecimal"
                                        android:text="0.00"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/text_13sp"
                                        app:fontFamily="@font/droidsans" />

                                    <ImageView
                                        android:id="@+id/surgicalAdd"
                                        android:layout_width="@dimen/value_35dp"
                                        android:layout_height="@dimen/value_35dp"
                                        android:layout_alignParentEnd="true"
                                        android:layout_centerVertical="true"
                                        android:layout_marginEnd="@dimen/value_5dp"
                                        android:contentDescription="@string/app_name"
                                        android:padding="@dimen/value_5dp"
                                        android:src="@drawable/add_circle"
                                        app:tint="#27abe4" />
                                </RelativeLayout>
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="1">

                            <LinearLayout
                                android:id="@+id/otherAvgLayout"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="3dp"
                                android:layout_weight="0.35"
                                android:orientation="vertical"

                                android:visibility="gone"
                                android:weightSum="0.5">

                                <TextView
                                    android:id="@+id/otherDiscLabel"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingStart="15dp"

                                    android:text=""
                                    android:textSize="12sp"
                                    app:fontFamily="@font/poppins_medium" />

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <ImageView
                                        android:id="@+id/otherSub"
                                        android:layout_width="@dimen/value_35dp"
                                        android:layout_height="@dimen/value_35dp"
                                        android:layout_centerVertical="true"
                                        android:layout_marginStart="5dp"
                                        android:contentDescription="@string/app_name"
                                        android:padding="@dimen/value_5dp"
                                        android:src="@drawable/minus"
                                        app:tint="@color/grey" />

                                    <EditText
                                        android:id="@+id/otherBulkDisc"
                                        android:layout_width="wrap_content"
                                        android:layout_height="@dimen/value_30dp"
                                        android:layout_centerHorizontal="true"
                                        android:layout_marginTop="@dimen/value_2dp"
                                        android:layout_toStartOf="@+id/otherAdd"
                                        android:layout_toEndOf="@+id/otherSub"
                                        android:background="@drawable/bulk_discount_edittext"
                                        android:gravity="center"
                                        android:imeOptions="flagNoExtractUi"
                                        android:inputType="numberDecimal"
                                        android:text="0.00"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/text_13sp"
                                        app:fontFamily="@font/droidsans" />

                                    <ImageView
                                        android:id="@+id/otherAdd"
                                        android:layout_width="@dimen/value_35dp"
                                        android:layout_height="@dimen/value_35dp"
                                        android:layout_alignParentEnd="true"
                                        android:layout_centerVertical="true"
                                        android:layout_marginEnd="@dimen/value_5dp"
                                        android:contentDescription="@string/app_name"
                                        android:padding="@dimen/value_5dp"
                                        android:src="@drawable/add_circle"
                                        app:tint="#27abe4" />
                                </RelativeLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/updateAvgLayout"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="3dp"
                                android:layout_marginTop="15dp"
                                android:layout_weight="0.3"
                                android:orientation="horizontal"

                                android:visibility="gone"

                                android:weightSum="0.5">

                                <androidx.appcompat.widget.AppCompatButton
                                    android:id="@+id/updateAvgBtn"
                                    android:layout_width="wrap_content"
                                    android:layout_height="@dimen/value_35dp"
                                    android:layout_gravity="center"
                                    android:layout_marginStart="@dimen/value_15dp"
                                    android:layout_marginEnd="@dimen/value_15dp"
                                    android:layout_marginBottom="@dimen/value_5dp"
                                    android:background="@color/dark_yellow"
                                    android:fontFamily="@font/poppins_medium"
                                    android:gravity="center"
                                    android:paddingStart="12dp"
                                    android:paddingEnd="12dp"

                                    android:text="Update"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/text_13sp" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight=".23"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:layout_marginEnd="20dp"
                            android:gravity="start">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_medium"
                                android:text="Total : "

                                android:textColor="#548389"
                                android:textSize="13sp" />

                            <TextView
                                android:id="@+id/total"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="@dimen/value_1dp"
                                android:drawableLeft="@drawable/qc_ic_rupee_indian"
                                android:fontFamily="@font/poppins_medium"
                                android:paddingStart="@dimen/five5_sp"
                                android:text="2900 "
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_12sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:layout_marginTop="3dp"
                            android:layout_marginEnd="20dp"
                            android:gravity="start">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_medium"
                                android:text="Discount : "
                                android:textColor="#548389"
                                android:textSize="13sp" />

                            <TextView
                                android:id="@+id/discount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="@dimen/value_1dp"
                                android:drawableLeft="@drawable/qc_ic_rupee_indian"
                                android:fontFamily="@font/poppins_medium"
                                android:paddingStart="@dimen/five5_sp"
                                android:text="2900 "
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_12sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:layout_marginTop="3dp"
                            android:layout_marginEnd="20dp"
                            android:gravity="start">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_medium"
                                android:text="Net Payment : "
                                android:textColor="#548389"
                                android:textSize="13sp" />

                            <TextView
                                android:id="@+id/payment"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="@dimen/value_1dp"
                                android:drawableLeft="@drawable/qc_ic_rupee_indian"
                                android:fontFamily="@font/poppins_medium"
                                android:paddingStart="@dimen/five5_sp"
                                android:text="2900 "

                                android:textColor="@color/black"
                                android:textSize="@dimen/text_12sp" />
                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/action_layout"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginTop="@dimen/value_10dp"
                            android:layout_weight="2"
                            android:orientation="horizontal">

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/rejectClick"
                                android:layout_width="@dimen/value_250dp"
                                android:layout_height="45dp"
                                android:layout_marginStart="@dimen/value_15dp"
                                android:layout_marginEnd="@dimen/value_15dp"
                                android:layout_weight="1"
                                android:background="#ef1c23"
                                android:fontFamily="@font/poppins_medium"
                                android:gravity="center_vertical"
                                android:onClick="@{()-> callback.reject()}"
                                android:text="Reject"

                                android:textAlignment="center"
                                android:textColor="@color/white"
                                tools:ignore="RtlCompat" />

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/acceptClick"
                                android:layout_width="@dimen/value_250dp"
                                android:layout_height="45dp"
                                android:layout_marginStart="@dimen/value_10dp"
                                android:layout_marginEnd="@dimen/value_15dp"
                                android:layout_weight="1"
                                android:background="#045a71"
                                android:fontFamily="@font/poppins_medium"
                                android:gravity="center_vertical"
                                android:onClick="@{()-> callback.accept()}"
                                android:text="Accept"

                                android:textAlignment="center"
                                android:textColor="@color/white"
                                tools:ignore="RtlCompat" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/approvedbylayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#045a71"
                android:visibility="gone">


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/status_recyleview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:itemCount="1"
                    tools:listitem="@layout/qc_status_layout" />
            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>

    <data>

        <variable
            name="callback"
            type="com.apollopharmacy.vishwam.ui.home.discount.pending.DiscountActivityCallback" />
    </data>
</layout>