<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/light_blue"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/splash_start_color"
                android:orientation="horizontal"
                android:padding="@dimen/four4_dp">

                <ImageView
                    android:layout_marginStart="@dimen/value_10dp"
                    android:layout_marginEnd="@dimen/value_10dp"
                    android:id="@+id/backButton"
                    android:layout_width="37dp"
                    android:layout_height="37dp"
                    android:layout_gravity="center"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/app_name"
                    android:onClick="@{()-> callback.onClickBack()}"
                    android:src="@drawable/icon_back_arrow"
                    />

<!--                <ImageView-->
<!--                    android:layout_width="@dimen/value_40dp"-->
<!--                    android:layout_height="@dimen/value_40dp"-->
<!--                    android:layout_gravity="center"-->
<!--                    android:contentDescription="@string/app_name"-->
<!--                    android:onClick="@{()-> callback.onClickBack()}"-->
<!--                    android:src="@drawable/ic_baseline_keyboard_arrow_left_24" />-->

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="APNA RETRO REVIEW"
                        android:id="@+id/stageName"

                        android:textColor="@color/white"
                        android:textSize="@dimen/text_17sp"
                        android:textStyle="bold" />


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/three3_sp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/categoty"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"

                            android:textColor="@color/white"
                            android:textSize="@dimen/text_14sp"
                            android:textStyle="bold"
                            android:visibility="visible" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="@string/label_completed_successfully"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_15sp"
                            android:textStyle="bold"
                            android:visibility="gone" />

                    </LinearLayout>

                </LinearLayout>


                <!--                <TextView-->
                <!--                    android:layout_width="wrap_content"-->
                <!--                    android:layout_height="wrap_content"-->
                <!--                    android:layout_gravity="center"-->
                <!--                    android:text="@{imageId}"-->
                <!--                    android:textColor="@color/white"-->
                <!--                    android:textSize="@dimen/text_17sp"-->
                <!--                    android:textStyle="bold" />-->


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:gravity="end">

                    <ImageView
                        android:onClick="@{()-> callback.onClickBack()}"
                        android:layout_width="@dimen/value_40dp"
                        android:layout_height="@dimen/value_45dp"
                        android:layout_gravity="center"
                        android:layout_marginEnd="15dp"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/close_white_icon"
                        android:tint="@color/white"
                        android:visibility="visible"
                        tools:ignore="UseAppTint" />
                </LinearLayout>


            </LinearLayout>


            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginStart="@dimen/value_15dp"
                    android:layout_marginTop="@dimen/value_10dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/value_25dp"
                            android:layout_height="@dimen/value_25dp"
                            android:layout_gravity="center"
                            android:src="@drawable/storehome" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/value_8dp"

                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_medium"
                                android:text="Store ID"

                                android:textColor="@color/black"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/storeId"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_medium"
                                android:text="Ameerpet, Hyderabad-16015"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_12sp" />


                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/value_25dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/text_22sp"
                            android:layout_height="@dimen/text_22sp"
                            android:layout_gravity="center"
                            android:src="@drawable/calendar" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/value_6dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_medium"
                                android:text="Uploaded Date"

                                android:textColor="@color/black"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/uploadedDate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_medium"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_12sp" />
                        </LinearLayout>
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/value_10dp"
                    android:layout_marginBottom="@dimen/value_60dp"
                    android:orientation="vertical">

                    <androidx.viewpager.widget.ViewPager
                        android:id="@+id/preview_image_viewpager"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/text_10sp" />
                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:weightSum="1">


            <LinearLayout
                android:id="@+id/totalImagesandaction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="@dimen/value_60dp"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".3"
                        android:background="@color/header_blue"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppin_bold"
                            android:text="Total Images"
                            android:textColor="@color/white" />

                        <TextView
                            android:id="@+id/totalimages"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppin_bold"

                            android:text="1/1"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_18sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="@dimen/value_10dp"
                        android:layout_weight=".7"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="45dp"
                            android:fontFamily="@font/roboto_medium"
                            android:text="action"

                            android:textAllCaps="true"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_18sp" />

                        <ImageView
                            android:id="@+id/reshoot"
                            android:layout_width="@dimen/value_40dp"
                            android:layout_height="@dimen/value_40dp"
                            android:layout_marginStart="@dimen/value_40dp"

                            android:contentDescription="@string/app_name"
                            android:onClick="@{()-> callback.onClickReShoot()}"
                            android:src="@drawable/action_reshoot" />

                        <ImageView
                            android:id="@+id/accept"
                            android:layout_width="@dimen/value_40dp"
                            android:layout_height="@dimen/value_40dp"
                            android:layout_marginStart="@dimen/value_15dp"
                            android:contentDescription="@string/app_name"
                            android:layout_gravity="center"
                            android:onClick="@{()-> callback.onClickAccept()}"
                            android:src="@drawable/action_accept" />


                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/deleteImage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/twenty20_dp"

            android:layout_marginBottom="@dimen/value_80dp"
            android:background="@drawable/red_rounded_corners"
            android:gravity="center"
            android:onClick="@{()-> callback.onClickDelete()}"
            android:visibility="@{isLastPos ? view.GONE: view.VISIBLE }">


            <ImageView
                android:id="@+id/showcapturedimage"
                android:layout_width="19dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:src="@drawable/trash" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/completeButton"
            android:layout_width="match_parent"
            android:layout_height="@dimen/value_60dp"
            android:layout_alignParentBottom="true"
            android:background="@color/greenn"
            android:gravity="center"
            android:onClick="@{()-> callback.onClickCompleted()}"
            android:orientation="horizontal"
            android:padding="@dimen/value_12dp"
            android:visibility="@{isLastPos ? view.VISIBLE: view.GONE }">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Submit"
                android:textColor="@color/white"
                android:textSize="@dimen/text_17sp"
                android:textStyle="bold" />
        </LinearLayout>


    </RelativeLayout>

    <data>

        <variable
            name="callback"
            type="com.apollopharmacy.vishwam.ui.home.apnarectro.prerectro.previewlmageRetro.PreviewLastImageCallback" />

        <variable
            name="isLastPos"
            type="Boolean" />

        <variable
            name="isAllComplete"
            type="Boolean" />

        <variable
            name="actionStatus"
            type="String" />

        <variable
            name="view"
            type="android.view.View" />
    </data>


</layout>