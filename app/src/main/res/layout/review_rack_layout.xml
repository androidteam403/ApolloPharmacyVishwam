<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/value_8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">




            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/value_15dp"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="70dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="@dimen/value_2dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginBottom="@dimen/value_2dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="@dimen/value_10dp"
                    app:cardElevation="@dimen/value_5dp">

                    <RelativeLayout
                        android:id="@+id/beforeCaptureLayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="visible"
                        tools:ignore="Orientation">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/cameraIcon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:background="@drawable/rounded_background"
                                android:backgroundTint="#ec9da8"
                                android:contentDescription="@string/app_name"
                                android:padding="@dimen/value_5dp"
                                android:src="@drawable/ic_outline_camera_alt_24"
                                android:tint="@color/white"
                                tools:ignore="UseAppTint" />

                            <!--                            <ImageView-->
                            <!--                                android:layout_width="@dimen/dimen20dp"-->
                            <!--                                android:layout_height="@dimen/dimen20dp"-->
                            <!--                                android:layout_gravity="center"-->
                            <!--                                android:src="@drawable/qr" />-->

                            <!--<TextView
                                android:id="@+id/imageTextandNumber"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="SCAN"
                                android:textColor="@color/black"
                                android:textSize="@dimen/seven7_sp"
                                android:textStyle="bold" />-->
                        </LinearLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/afterCaptureLayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/afterCapturedImage"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:alpha="0.5"
                            android:contentDescription="@string/app_name"
                            android:scaleType="fitXY"
                            android:src="@drawable/capture" />

                        <ImageView
                            android:id="@+id/delete"
                            android:layout_width="@dimen/value_30dp"
                            android:layout_height="@dimen/value_30dp"
                            android:layout_centerInParent="true"
                            android:background="@drawable/rounded_background"
                            android:backgroundTint="@color/red"
                            android:padding="@dimen/value_5dp"
                            android:src="@drawable/delete"
                            android:tint="@color/white"
                            tools:ignore="UseAppTint" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/value_5dp"
                android:orientation="horizontal">


                <LinearLayout
                    android:id="@+id/matchingPercentageLayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.33"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/rating"
                        android:layout_width="@dimen/text_14sp"
                        android:layout_height="@dimen/text_14sp"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/value_5dp"
                        android:background="@drawable/round_rating_bar_green"
                        android:textColor="@color/black"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/value_5dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Matching"
                            android:textColor="#6b6b6b"
                            android:textSize="@dimen/dimen11sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/matchingPercentage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="60%"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_14sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/compareIconLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/compareIcon"
                        android:layout_width="@dimen/value_45dp"
                        android:layout_height="@dimen/value_45dp"
                        android:layout_marginStart="@dimen/dimen20dp"
                        android:background="@drawable/rounded_background"
                        android:backgroundTint="#f2f2f2"
                        android:padding="@dimen/value_8dp"
                        android:src="@drawable/ic_baseline_compare_24"
                        android:tint="#5c5c5c"
                        tools:ignore="UseAppTint" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</layout>