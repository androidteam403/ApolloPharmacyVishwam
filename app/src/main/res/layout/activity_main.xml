<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/value_60dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/value_60dp"
            android:background="@color/splash_start_color" />

        <ImageView
            android:id="@+id/openDrawer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/value_20dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_baseline_menu_24" />

        <TextView
            android:id="@+id/headerTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/value_20dp"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/text_18sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/value_20dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:orientation="horizontal"
                android:visibility="visible">
                <ImageView
                    android:id="@+id/plusIconapna"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:layout_marginEnd="@dimen/value_5dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:src="@drawable/plus" />
<!--                android:background="@drawable/green_backgroundplus"-->

                <ImageView
                    android:id="@+id/filtericonapna"
                    android:layout_width="22dp"
                    android:layout_height="22dp"

                    android:layout_gravity="center"
                    android:src="@drawable/filtersnew" />
            </LinearLayout>

            <ImageView
                android:id="@+id/siteId_icon"
                android:layout_width="@dimen/value_20dp"
                android:layout_height="@dimen/value_20dp"
                android:contentDescription="@string/app_name"
                android:src="@drawable/siteid_icon"
                android:visibility="gone" />

            <RelativeLayout
                android:id="@+id/filterIcon"
                android:layout_width="@dimen/value_20dp"
                android:layout_height="@dimen/value_20dp"
                android:layout_marginStart="@dimen/value_10dp"
                android:visibility="gone">

                <ImageView
                    android:layout_width="@dimen/value_20dp"
                    android:layout_height="@dimen/value_20dp"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/filtersnew"
                    android:visibility="visible" />

                <View
                    android:id="@+id/filter_indication"
                    android:layout_width="@dimen/value_5dp"
                    android:layout_height="@dimen/value_5dp"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/red_indication"
                    android:visibility="gone" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/qc_filter_icon"
                android:layout_width="@dimen/value_20dp"
                android:layout_height="@dimen/value_20dp"
                android:layout_marginStart="@dimen/value_10dp"
                android:visibility="gone">

                <ImageView
                    android:layout_width="@dimen/value_20dp"
                    android:layout_height="@dimen/value_20dp"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/filtersnew"
                    android:visibility="visible" />

                <View
                    android:id="@+id/qc_filter_indication"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/red_indication"
                    android:visibility="gone" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rider_notification_layout"
                android:layout_width="@dimen/value_25dp"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:clickable="true">

                <ImageView
                    android:id="@+id/notify_image"
                    android:layout_width="@dimen/twenty_five_dp"
                    android:layout_height="@dimen/twenty_five_dp"
                    android:contentDescription="@string/app_name"
                    android:gravity="center"
                    android:src="@drawable/icon_notification" />

                <TextView
                    android:id="@+id/notification_text"
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/notification_dot"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/text_dimen_12"
                    android:visibility="gone" />
            </RelativeLayout>
        </LinearLayout>


        <FrameLayout
            android:id="@+id/notificationLayout"
            style="?attr/actionButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/value_10dp"
            android:layout_marginEnd="@dimen/value_10dp"
            android:clipToPadding="false"
            android:focusable="true"
            android:visibility="gone">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_baseline_notifications_24" />

            <TextView
                android:id="@+id/cart_badge"
                android:layout_width="@dimen/value_20dp"
                android:layout_height="@dimen/value_20dp"
                android:layout_gravity="end|top"
                android:layout_marginTop="@dimen/value_3dp"
                android:layout_marginEnd="@dimen/value_minus_5dp"
                android:background="@drawable/badge_background"
                android:gravity="center"
                android:padding="@dimen/value_3dp"
                android:text="0"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_10sp" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toolbar"
            android:background="@color/white" />

        <LinearLayout
            android:id="@+id/gpsLoaderLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:background="#8C000000"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/value_25dp"
                android:text="Fetching Location..."
                android:textColor="@color/white"
                android:textSize="@dimen/text_20sp" />

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:indeterminateTint="@color/white" />
        </LinearLayout>
    </RelativeLayout>


    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@drawable/bg_for_menu"
        android:fitsSystemWindows="true"
        android:theme="@style/AppTheme"
        app:headerLayout="@layout/nav_header_main"
        app:itemIconTint="@color/white"
        app:itemTextColor="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:orientation="vertical"
            android:weightSum="1">

            <LinearLayout
                android:id="@+id/linear"
                android:layout_width="match_parent"

                android:layout_height="0dp"
                android:layout_marginTop="@dimen/value_175dp"
                android:layout_weight="0.8"
                android:orientation="vertical">

                <ScrollView

                    android:id="@+id/scrollView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <LinearLayout
                        android:id="@+id/view_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.dvinfosys.ui.NavigationListView
                            android:id="@+id/expandable_navigation"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="left"
                            android:background="@color/splash_start_color"
                            android:groupIndicator="@null"
                            android:scrollbars="vertical"
                            android:textColor="#ffffff"
                            android:theme="@style/AppTheme"
                            app:itemIconTint="@color/white"
                            app:itemTextColor="@color/white" />


                    </LinearLayout>


                </ScrollView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_below="@id/linear"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/value_40dp"
                android:layout_weight="0.2"
                android:gravity="bottom"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/logout_menu"
                    android:layout_width="@dimen/value_120dp"
                    android:layout_height="@dimen/value_40dp"
                    android:layout_gravity="center"
                    android:background="@drawable/scan_btn_bg_pl"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Logout"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_18sp"
                        android:textStyle="bold" />


                </LinearLayout>

                <TextView
                    android:id="@+id/versionInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/value_10dp"
                    android:layout_marginBottom="@dimen/value_10dp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_15sp" />
            </LinearLayout>


        </LinearLayout>


    </com.google.android.material.navigation.NavigationView>

    <LinearLayout
        android:id="@+id/location_denied"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/twenty_dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/location_permission_denied_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_medium"
            android:gravity="center"
            android:text="Location permission must be required to access application" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/location_permission_btn"
            android:layout_width="@dimen/one_hundred_fifty_dp"
            android:layout_height="@dimen/forty_five_dp"
            android:layout_marginTop="@dimen/forty_dp"
            android:background="@drawable/btn_signin_ripple_effect"
            android:fontFamily="@font/roboto_bold"
            android:text="Location permission" />
    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>