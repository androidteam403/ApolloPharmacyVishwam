<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/value_75dp"
                android:layout_height="@dimen/value_73dp"
                android:layout_marginStart="@dimen/value_7dp"
                android:layout_marginTop="@dimen/value_5dp"
                android:layout_marginEnd="@dimen/value_5dp"
                android:layout_marginBottom="@dimen/value_5dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/value_4dp">


                <RelativeLayout
                    android:id="@+id/beforeCaptureLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone"
                    tools:ignore="Orientation">

                    <!--                    <ImageView-->
                    <!--                        android:id="@+id/image"-->
                    <!--                        android:layout_width="match_parent"-->
                    <!--                        android:layout_height="match_parent"-->
                    <!--                        android:scaleType="fitXY" />-->

                    <LinearLayout
                        android:id="@+id/plusButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:padding="@dimen/value_4dp"
                        android:visibility="visible">

                        <ImageView
                            android:layout_width="@dimen/value_20dp"
                            android:layout_height="@dimen/value_20dp"
                            android:layout_gravity="center"
                            android:contentDescription="@string/app_name"
                            android:src="@drawable/ic_camera" />
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/afterCaptureLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="visible">

                    <ImageView
                        android:id="@+id/afterCapturedImage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:alpha="0.5"
                        android:scaleType="fitXY"
                        android:src="@drawable/capture" />

                    <LinearLayout
                        android:id="@+id/eyeImage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:visibility="visible">

                        <ImageView
                            android:layout_width="@dimen/value_20dp"
                            android:layout_height="@dimen/value_20dp"
                            android:layout_marginTop="@dimen/value_4dp"
                            android:src="@drawable/eye2withbackground" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/deleteImage"
                        android:layout_width="@dimen/eighteen18_dp"
                        android:layout_height="@dimen/eighteen18_dp"
                        android:layout_alignParentRight="true"
                        android:layout_margin="@dimen/value_3dp"
                        android:layout_marginEnd="@dimen/value_2dp"
                        android:background="@drawable/white_rounded_bg"
                        android:gravity="center"
                        android:visibility="visible">

                        <ImageView
                            android:id="@+id/deleteImgBtn"
                            android:layout_width="@dimen/value_12dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:src="@drawable/closee_black" />
                    </LinearLayout>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </RelativeLayout>
</layout>