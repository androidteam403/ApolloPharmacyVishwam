<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:background="@color/transparent"
        android:layout_margin="@dimen/value_10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical"
            android:padding="@dimen/value_20dp">



            <LinearLayout
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/dialog_background"
                android:layout_width="match_parent"
                android:layout_height="@dimen/value_150dp"
                android:orientation="vertical">
                <ImageButton
                    android:id="@+id/close"
                    android:layout_width="@dimen/value_40dp"
                    android:layout_height="@dimen/value_40dp"
                    android:layout_gravity="end"
                    android:background="@drawable/close_icon"
                    android:contentDescription="@string/app_name"
                    android:scaleType="center"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/messagetext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/value_50dp"
                    android:textAlignment="center"
                    android:gravity="center_horizontal"
                    android:maxLines="3"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_18sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/value_2dp"
                    >

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/ok_button"
                        android:layout_width="@dimen/value_100dp"
                        android:layout_height="@dimen/value_60dp"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:background="#035b71"
                        android:gravity="center"
                        android:text="Ok"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_16sp" />

                    <!--<androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/sign_out_button"
                        android:layout_width="@dimen/value_200dp"
                        android:layout_height="@dimen/value_45dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginStart="@dimen/value_10dp"
                        android:layout_weight="1"
                        android:background="@drawable/yellow_drawable"
                        android:gravity="center"
                        android:text="@string/label_logout"
                        android:textAllCaps="false"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_16sp" />-->
                </RelativeLayout>

            </LinearLayout>


        </LinearLayout>

        <RelativeLayout
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:background="@drawable/circle_for_tickk_mark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <ImageView

                android:layout_gravity="center"
                android:layout_width="@dimen/value_35dp"
                android:layout_height="@dimen/value_35dp"
                android:src="@drawable/white_tick_1"/>


        </RelativeLayout>
    </RelativeLayout>

</layout>