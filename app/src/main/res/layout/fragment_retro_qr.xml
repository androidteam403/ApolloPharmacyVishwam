<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.home.retroqr.RetroQrFragment">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="UselessParent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/value_8dp"
                    android:layout_marginTop="@dimen/value_20dp"
                    android:layout_marginEnd="@dimen/value_8dp"
                    android:background="@drawable/retro_qr_store_id_bg"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/value_8dp"
                    android:paddingTop="@dimen/value_8dp"
                    android:paddingEnd="@dimen/value_8dp"
                    android:paddingBottom="@dimen/value_12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Store ID"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_12sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/value_8dp"
                        android:layout_marginBottom="@dimen/value_15dp"
                        android:orientation="vertical">

                        <!-- Search Bar -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/value_30dp"
                            android:id="@+id/search_bar"

                            android:background="@drawable/retro_qr_search_bg"
                            android:weightSum="2">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginEnd="@dimen/value_60dp"
                                android:layout_weight="1.8"
                                android:background="@color/transparent"
                                android:gravity="left|center"
                                android:hint="Search by Store ID"
                                android:imeOptions="actionSearch"
                                android:inputType="text"
                                android:maxLines="1"
                                android:editable="false"
                                android:id="@+id/searchbystore"
                                android:paddingStart="@dimen/value_10dp"
                                android:textColor="@color/black"
                                android:textColorHint="@android:color/black"
                                android:textSize="@dimen/dimen11sp" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight=".2"
                                android:gravity="center_vertical|center_horizontal">

                                <ImageView
                                    android:layout_width="@dimen/value_12dp"
                                    android:layout_height="@dimen/value_12dp"
                                    android:layout_marginEnd="@dimen/value_10dp"
                                    android:contentDescription="@string/app_name"
                                    android:src="@drawable/ic_search" />
                            </LinearLayout>

                            <!--<ImageView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginEnd="@dimen/value_10dp"
                                android:layout_weight=".2"
                                android:src="@drawable/ic_search_24"
                                android:contentDescription="@string/app_name" />-->
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/value_8dp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginStart="@dimen/value_8dp"
                                android:layout_marginTop="@dimen/value_8dp"
                                android:layout_marginEnd="@dimen/value_5dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Store Name: "
                                    android:textColor="#b7b8b9"
                                    android:textSize="@dimen/dimen11sp"
                                    android:fontFamily="@font/roboto_medium" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:id="@+id/storename"
                                    android:layout_height="wrap_content"
                                    android:text="Ameerpet, Hyderabad"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/dimen11sp"
                                    android:fontFamily="@font/roboto_medium" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginStart="@dimen/value_8dp"
                                android:layout_marginTop="@dimen/value_2dp"
                                android:layout_marginEnd="@dimen/value_5dp"
                                android:layout_marginBottom="@dimen/value_12dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Incharge: "
                                    android:textColor="#b7b8b9"
                                    android:textSize="@dimen/dimen11sp"
                                    android:fontFamily="@font/roboto_medium" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="APL48627"
                                    android:id="@+id/incharge"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/dimen11sp"
                                    android:fontFamily="@font/roboto_medium" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/uploadButton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/value_8dp"
                                android:layout_marginTop="@dimen/value_5dp"
                                android:background="@drawable/green_background"
                                android:paddingStart="@dimen/value_15dp"
                                android:paddingTop="@dimen/value_2dp"
                                android:paddingEnd="@dimen/value_15dp"
                                android:paddingBottom="@dimen/value_3dp"
                                android:text="Upload"
                                android:textColor="@color/white_for_both"
                                android:textSize="@dimen/dimen11sp" />

                            <TextView
                                android:id="@+id/reviewButton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/value_8dp"
                                android:layout_marginTop="@dimen/value_5dp"
                                android:background="@drawable/green_background"
                                android:paddingStart="@dimen/value_15dp"
                                android:paddingTop="@dimen/value_2dp"
                                android:paddingEnd="@dimen/value_15dp"
                                android:paddingBottom="@dimen/value_3dp"
                                android:text="Review"
                                android:textColor="@color/white_for_both"
                                android:textSize="@dimen/dimen11sp" />



                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</layout>