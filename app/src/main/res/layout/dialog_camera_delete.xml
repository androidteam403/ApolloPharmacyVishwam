<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/value_10dp"
        android:background="@drawable/dialog_background"
        android:orientation="vertical"
        android:padding="@dimen/value_20dp">

        <ImageView
            android:layout_width="@dimen/value_40dp"
            android:layout_height="@dimen/value_40dp"
            android:src="@drawable/cameradelete"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/value_15dp"
            android:layout_marginBottom="@dimen/value_25dp"
            android:gravity="center_horizontal"
            android:text="Are you sure \nyou want to delete the Image?"
            android:textColor="@color/black"
            android:textSize="@dimen/text_18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
           android:paddingBottom="@dimen/value_5dp"
            android:layout_marginBottom="@dimen/value_5dp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/no_btnN"
                android:layout_width="@dimen/value_70dp"
                android:layout_height="@dimen/value_30dp"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/value_10dp"
                android:background="@drawable/grey_rectangle1"
                android:gravity="center"
                android:text="Cancel"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="@dimen/text_15sp"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/yes_btnN"
                android:textStyle="bold"
                android:layout_width="@dimen/value_70dp"
                android:layout_height="@dimen/value_30dp"
                android:layout_gravity="center"
               android:textAlignment="center"
                android:layout_marginStart="@dimen/value_10dp"
                android:background="@drawable/red_rounded_corners"
                android:gravity="center"
                android:text="Delete"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/text_15sp"/>
        </LinearLayout>
    </LinearLayout>
</layout>