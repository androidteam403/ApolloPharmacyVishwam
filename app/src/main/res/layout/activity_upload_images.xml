<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_above="@+id/cancel_upload_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/splash_start_color"
            android:orientation="horizontal"
            android:padding="@dimen/value_10dp">

            <ImageView
                android:onClick="@{()-> callback.onClickBackIcon()}"
                android:id="@+id/backButton"
                android:layout_width="@dimen/value_40dp"
                android:layout_height="@dimen/value_40dp"
                android:src="@drawable/ic_baseline_keyboard_arrow_left_24" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Create New Pre Rectro"
                android:textColor="@color/white"
                android:textSize="@dimen/text_17sp"
                android:textStyle="bold" />


        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <LinearLayout
                    android:layout_margin="@dimen/value_5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorWhite"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/value_10dp"
                        android:layout_marginTop="@dimen/value_10dp"
                        android:layout_marginEnd="@dimen/value_5dp"
                        android:orientation="horizontal">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Store ID: "
                            android:textSize="@dimen/text_12sp" />

                        <TextView
                            android:id="@+id/store_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_12sp"
                            android:textStyle="bold" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:gravity="end">

                            <LinearLayout
                                android:onClick="@{()-> callback.onClickCancel()}"
                                android:layout_width="@dimen/twenty20_dp"
                                android:layout_height="@dimen/twenty20_dp"
                                android:layout_gravity="end">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/close_ashh"/>


                            </LinearLayout>




                        </LinearLayout>



                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/value_10dp"
                        android:layout_marginEnd="@dimen/value_5dp"
                        android:orientation="horizontal">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Store Name: "
                            android:textSize="@dimen/text_12sp" />

                        <TextView
                            android:id="@+id/store_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_12sp"
                            android:textStyle="bold" />



                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/value_10dp"
                        android:layout_marginTop="@dimen/value_5dp"
                        android:layout_marginEnd="@dimen/value_5dp"
                        android:orientation="horizontal">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Incharge: "
                            android:textSize="@dimen/text_12sp" />

                        <TextView
                           android:id="@+id/incharge"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_12sp"
                            android:textStyle="bold" />




                    </LinearLayout>



                </LinearLayout>



                <LinearLayout
                    android:layout_marginTop="@dimen/text_dimen_10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ecf6f8"
                    android:orientation="horizontal">


                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/categoryNameApnaRecyclerView"
                        android:layout_width="match_parent"
                        android:visibility="visible"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/value_10dp" />





                </LinearLayout>
                <TextView
                    android:gravity="center"
                    android:visibility="gone"
                    android:id="@+id/noOrdersFound"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No List Found"
                    android:textColor="@color/red"
                    android:textAlignment="center"
                    android:layout_gravity="center"/>


                <LinearLayout
                    android:layout_marginStart="@dimen/value_15dp"
                    android:layout_marginEnd="@dimen/text_dimen_15"
                    android:layout_marginTop="@dimen/text_dimen_10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pre Retro Update"
                        android:textStyle="bold"
                        android:textSize="@dimen/text_16sp"
                        android:textColor="@color/black"/>

                    <TextView
                        android:layout_marginTop="@dimen/text_dimen_10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Uploaded"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/uploaded_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/red"
                            android:textSize="@dimen/text_18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/overAllCount"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_18sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:visibility="visible"
                        android:id="@+id/warning_layout"
                        android:layout_marginTop="@dimen/value_7dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/value_25dp"
                            android:layout_height="@dimen/value_25dp"
                            android:src="@drawable/red_warning"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="To upload complete all the shoots, without pending"
                            android:textColor="@color/red"
                            android:textStyle="bold"
                            android:textAlignment="center"
                            android:layout_gravity="center"
                            android:textSize="@dimen/text_12sp"
                            android:layout_marginStart="@dimen/value_5dp"/>



                    </LinearLayout>

                    <LinearLayout
                        android:visibility="gone"
                        android:id="@+id/completed_message"
                        android:layout_marginTop="@dimen/value_7dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/twenty_three23dp"
                            android:layout_height="@dimen/twenty_three23dp"
                            android:src="@drawable/tick_icon_green"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="You have uploaded all the images send for review"
                            android:textColor="#39b54a"
                            android:textStyle="bold"
                            android:textAlignment="center"
                            android:layout_gravity="center"
                            android:textSize="@dimen/text_12sp"
                            android:layout_marginStart="@dimen/value_5dp"/>



                    </LinearLayout>

                    <TextView
                        android:id="@+id/state"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/regionSelect"
                        android:layout_marginTop="@dimen/value_10dp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_marginBottom="@dimen/value_4dp"
                        android:text="Add Comments" />

                    <androidx.appcompat.widget.AppCompatEditText
                        android:padding="@dimen/value_5dp"
                        android:id="@+id/stateSelect"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/state"
                        android:background="@drawable/grey_border_bg"
                        android:drawableEnd="@drawable/bottomarrow"
                        android:drawableTint="#cacaca"
                        android:editable="false"
                        android:hint="Select Pre filled comment"
                        android:paddingLeft="@dimen/value_15dp"
                        android:textSize="@dimen/text_14sp" />





                </LinearLayout>

            </LinearLayout>
        </ScrollView>





    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/text_dimen_10"
        android:id="@+id/cancel_upload_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:layout_alignParentBottom="true">
        <LinearLayout
            android:onClick="@{()-> callback.onClickCancel()}"
            android:layout_marginEnd="@dimen/text_dimen_10"
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/yellowbackground_for_buttons"
            android:orientation="horizontal"
            android:padding="@dimen/value_9dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="@dimen/text_20sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/value_10dp"
                android:gravity="center"
                android:text="CANCEL"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="@dimen/text_20sp" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/uploadnowbutton"
            android:onClick="@{()-> callback.onClickUpload()}"
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/ashbackgrounf_for_buttons"
            android:orientation="horizontal"
            android:padding="@dimen/value_9dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/text_15sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="@dimen/text_20sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="UPLOAD"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="@dimen/text_20sp" />


        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
    <data>

        <variable
            name="callback"
            type="com.apollopharmacy.vishwam.ui.home.apnarectro.prerectro.uploadactivity.UploadImagesCallback" />
    </data>
</layout>