<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/value_5dp"
            android:layout_marginTop="@dimen/value_5dp"
            android:layout_marginEnd="@dimen/value_5dp">

            <LinearLayout
                android:id="@+id/category_details_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/value_50dp"
                android:background="@drawable/background_for_champs_names"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="@dimen/value_30dp"
                    android:layout_height="@dimen/value_30dp"
                    android:background="@drawable/round_background_ash"
                    android:gravity="center"
                    android:text="@{position}"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_17sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/value_10dp"
                        android:layout_weight=".45"
                        android:text="@{model.categoryName}"
                        android:textColor="@color/grey_for_text"
                        android:textSize="@dimen/text_16sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".55"
                        android:gravity="end|center_vertical"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/cleanlinessOverallPoints"
                                android:layout_width="@dimen/value_40dp"
                                android:layout_height="@dimen/value_30dp"
                                android:background="@drawable/grey_orange_rectangle"
                                android:gravity="center_vertical|center_horizontal"
                                android:text="@{String.valueOf(sumOfSubCategoryMaxRatings)}"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_17sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/value_5dp"
                                android:gravity="center_vertical|center_horizontal"
                                android:text="/"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_20sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="@dimen/value_30dp"
                                android:layout_height="@dimen/value_30dp"
                                android:gravity="center_vertical|center_horizontal"
                                android:text="@{model.rating}"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_20sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <ImageView
                            android:layout_width="@dimen/value_25dp"
                            android:layout_height="@dimen/value_25dp"
                            android:layout_marginStart="@dimen/value_10dp"
                            android:background="@drawable/blue_circle"
                            android:contentDescription="@string/app_name"
                            android:onClick="@{()-> mCallback.onClickEditOverall(model, sumOfSubCategoryMaxRatings, position)}"
                            android:padding="@dimen/value_5dp"
                            android:src="@drawable/white_pencil" />

                        <ImageView
                            android:id="@+id/arrowImage"
                            android:layout_width="@dimen/value_35dp"
                            android:layout_height="@dimen/value_35dp"
                            android:layout_marginStart="@dimen/value_10dp"
                            android:background="@drawable/background_for_pending"
                            android:contentDescription="@string/app_name"
                            android:onClick="@{()-> mCallback.onClickSubCategoryDetailsItem(model)}"
                            android:rotation="@{isItemExpanded ? 90 : 0}"
                            android:src="@drawable/ic_baseline_keyboard_arrow_right_24" />

                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/get_sub_category_details_recyclerview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/category_details_layout"
                android:visibility="@{isItemExpanded ? view.VISIBLE : view.GONE}" />

        </RelativeLayout>

    </RelativeLayout>

    <data>

        <variable
            name="mCallback"
            type="com.apollopharmacy.vishwam.ui.home.champs.admin.adminmodule.AdminModuleCallBack" />

        <variable
            name="model"
            type="com.apollopharmacy.vishwam.ui.home.champs.admin.adminmodule.model.GetCategoryDetailsResponse.CategoryDetails" />

        <variable
            name="position"
            type="String" />

        <variable
            name="isItemExpanded"
            type="Boolean" />

        <variable
            name="view"
            type="android.view.View" />

        <variable
            name="sumOfSubCategoryMaxRatings"
            type="Double" />
    </data>
</layout>