<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:id="@+id/cardView"

            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="3dp">

            <LinearLayout
                android:id="@+id/parentLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">

                <LinearLayout
                    android:id="@+id/generalmanager_layout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/value_55dp"
                    android:background="#00acae"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">


                            <TextView
                                android:id="@+id/gm_empname"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="15dp"
                                android:layout_marginTop="8dp"
                                android:layout_weight="0.6"
                                android:fontFamily="@font/roboto_medium"
                                android:text="Dhanalakshmi\nGeneral Manager"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_14sp" />

                            <LinearLayout
                                android:id="@+id/arrowlayout"
                                android:layout_width="wrap_content"
                                android:orientation="horizontal"
                                android:layout_alignParentEnd="true"
                                android:layout_marginEnd="10dp"
                                android:layout_height="match_parent"
                                >
                                <TextView
                                    android:id="@+id/sumOfRtValues"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/roboto_medium"
                                    android:paddingStart="10dp"
                                    android:layout_gravity="center"
                                    android:drawablePadding="1dp"

                                    android:drawableLeft="@drawable/rupee_indian"
                                    android:drawableTint="@color/white"
                                    android:text="22755"
                                    android:textColor="@color/white"
                                    android:textSize="13sp" />


                                <ImageView
                                    android:id="@+id/generalmanager_arrow"
                                    android:layout_width="35dp"
                                    android:layout_height="35dp"
                                    android:layout_marginTop="@dimen/text_10sp"
                                    android:rotation="180"
                                    android:src="@drawable/icon_back" />


                                <ImageView
                                    android:id="@+id/close_arrow"
                                    android:layout_width="35dp"
                                    android:layout_height="35dp"
                                    android:layout_marginTop="@dimen/text_10sp"
                                    android:rotation="270"
                                    android:src="@drawable/icon_back"
                                    android:visibility="gone" />
                            </LinearLayout>


                        </RelativeLayout>

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/rto_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#00acae"

                    android:visibility="visible">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:orientation="horizontal"

                        android:weightSum="4">

                        <LinearLayout
                            android:id="@+id/rtolayout"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginBottom="8dp"
                            android:layout_weight=".91"
                            android:background="@drawable/background_for_champs_green"
                            android:backgroundTint="@color/white"

                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppin_bold"
                                android:paddingTop="5dp"
                                android:text="Sum of RTO"
                                android:textColor="#959595"
                                android:textAlignment="center"
                                android:textSize="10sp" />

                            <TextView
                                android:id="@+id/rtCount"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_medium"
                                android:paddingStart="2dp"
                                android:paddingBottom="7dp"
                                android:text="0"
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                android:textSize="12sp" />


                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/rtovaluelayout"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginBottom="8dp"
                            android:layout_weight=".99"
                            android:background="@drawable/background_for_champs_green"
                            android:backgroundTint="@color/white"

                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppin_bold"
                                android:paddingTop="5dp"
                                android:text="RTO Value"
                                android:textColor="#959595"

                                android:textAlignment="center"
                                android:textSize="10sp" />

                            <TextView
                                android:id="@+id/rtovalue"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_medium"
                                android:paddingStart="10dp"

                                android:drawableLeft="@drawable/qc_ic_rupee_indian"
                                android:paddingBottom="7dp"
                                android:text="0"
                                android:textColor="@color/black"
                                android:textSize="12sp" />


                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/rrtocountlayout"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginBottom="8dp"
                            android:layout_weight=".91"
                            android:background="@drawable/background_for_champs_green"
                            android:backgroundTint="@color/white"

                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppin_bold"
                                android:paddingTop="5dp"
                                android:textColor="#959595"

                                android:text="Sum of RRTO"
                                android:textAlignment="center"
                                android:textSize="10sp" />

                            <TextView
                                android:id="@+id/rrtoCount"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_medium"
                                android:paddingStart="2dp"
                                android:paddingBottom="7dp"
                                android:text="0"
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                android:textSize="12sp" />


                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/rrtovaluelayout"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginBottom="8dp"
                            android:layout_weight=".99"
                            android:background="@drawable/background_for_champs_green"
                            android:backgroundTint="@color/white"

                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppin_bold"
                                android:paddingTop="5dp"
                                android:text="RRTO Value"
                                android:textColor="#959595"

                                android:textAlignment="center"
                                android:textSize="10sp" />

                            <TextView
                                android:id="@+id/rrtovalue"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_medium"
                                android:paddingStart="10dp"

                                android:drawableLeft="@drawable/qc_ic_rupee_indian"                                android:paddingBottom="7dp"
                                android:text="0"
                                android:textColor="@color/black"
                                android:textSize="12sp" />


                        </LinearLayout>


                    </LinearLayout>


                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/gmsitesRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="vertical"
                    android:visibility="gone"

                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:itemCount="1"
                    tools:listitem="@layout/rto_sites" />



            </LinearLayout>

            <LinearLayout
                android:id="@+id/no_order_found_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/roboto_bold"
                    android:gravity="center"
                    android:text="No Pending Orders Found"
                    android:textAlignment="center"
                    android:textColor="@color/black" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/managerRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cardView"
            android:layout_marginTop="8dp"
            android:scrollbars="vertical"
            android:visibility="gone"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:itemCount="1"
            tools:listitem="@layout/manager_layout" />


    </RelativeLayout>

</layout>