<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/header"
        android:layout_height="wrap_content"
        >

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:strokeColor="#606db3"
            app:strokeWidth="4dp"
            app:cardCornerRadius="5dp">

            <LinearLayout
                android:id="@+id/parentLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">

                <LinearLayout
                    android:id="@+id/generalmanager_layout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/value_55dp"
                    android:background="#00acae"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">


                            <TextView
                                android:id="@+id/gm_empname"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="15dp"
                                android:layout_marginTop="8dp"
                                android:layout_weight="0.6"
                                android:fontFamily="@font/roboto_medium"
                                android:text="Dhanalakshmi\nGeneral Manager"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_14sp" />

                            <LinearLayout
                                android:id="@+id/arrowlayout"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_alignParentEnd="true"
                                android:layout_marginEnd="10dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/sumOfRtValues"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:drawableLeft="@drawable/rupee_indian"
                                    android:drawablePadding="1dp"
                                    android:drawableTint="@color/white"

                                    android:fontFamily="@font/roboto_medium"
                                    android:paddingStart="10dp"
                                    android:text="22755"
                                    android:textColor="@color/white"
                                    android:textSize="13sp" />


                                <ImageView
                                    android:id="@+id/generalmanager_arrow"
                                    android:layout_width="35dp"
                                    android:layout_height="35dp"
                                    android:layout_marginTop="@dimen/text_10sp"
                                    android:rotation="180"
                                    android:src="@drawable/icon_back" />


                                <ImageView
                                    android:id="@+id/close_arrow"
                                    android:layout_width="35dp"
                                    android:layout_height="35dp"
                                    android:layout_marginTop="@dimen/text_10sp"
                                    android:rotation="270"
                                    android:src="@drawable/icon_back"
                                    android:visibility="gone" />
                            </LinearLayout>


                        </RelativeLayout>

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/rto_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#00acae"
                    android:orientation="vertical"

                    android:visibility="visible">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:orientation="horizontal"

                        android:weightSum="4">

                        <LinearLayout
                            android:id="@+id/rtolayout"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginBottom="8dp"
                            android:layout_weight=".91"
                            android:background="@drawable/background_for_champs_green"
                            android:backgroundTint="@color/white"

                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppin_bold"
                                android:paddingTop="5dp"
                                android:text="Sum of RTO"
                                android:textAlignment="center"
                                android:textColor="#959595"
                                android:textSize="10sp" />

                            <TextView
                                android:id="@+id/rtCount"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_medium"
                                android:paddingStart="2dp"
                                android:paddingBottom="7dp"
                                android:text="0"
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                android:textSize="12sp" />


                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/rtovaluelayout"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginBottom="8dp"
                            android:layout_weight=".99"
                            android:background="@drawable/background_for_champs_green"
                            android:backgroundTint="@color/white"

                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppin_bold"
                                android:paddingTop="5dp"
                                android:text="RTO Value"
                                android:textAlignment="center"

                                android:textColor="#959595"
                                android:textSize="10sp" />

                            <TextView
                                android:id="@+id/rtovalue"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawableLeft="@drawable/qc_ic_rupee_indian"
                                android:fontFamily="@font/roboto_medium"

                                android:paddingStart="10dp"
                                android:paddingBottom="7dp"
                                android:text="0"
                                android:textColor="@color/black"
                                android:textSize="12sp" />


                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/rrtocountlayout"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginBottom="8dp"
                            android:layout_weight=".91"
                            android:background="@drawable/background_for_champs_green"
                            android:backgroundTint="@color/white"

                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppin_bold"
                                android:paddingTop="5dp"
                                android:text="Sum of RRTO"

                                android:textAlignment="center"
                                android:textColor="#959595"
                                android:textSize="10sp" />

                            <TextView
                                android:id="@+id/rrtoCount"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_medium"
                                android:paddingStart="2dp"
                                android:paddingBottom="7dp"
                                android:text="0"
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                android:textSize="12sp" />


                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/rrtovaluelayout"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginBottom="8dp"
                            android:layout_weight=".99"
                            android:background="@drawable/background_for_champs_green"
                            android:backgroundTint="@color/white"

                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppin_bold"
                                android:paddingTop="5dp"
                                android:text="RRTO Value"
                                android:textAlignment="center"

                                android:textColor="#959595"
                                android:textSize="10sp" />

                            <TextView
                                android:id="@+id/rrtovalue"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawableLeft="@drawable/qc_ic_rupee_indian"
                                android:fontFamily="@font/roboto_medium"

                                android:paddingStart="10dp"
                                android:paddingBottom="7dp"
                                android:text="0"
                                android:textColor="@color/black"
                                android:textSize="12sp" />


                        </LinearLayout>


                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/rtoHeader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#F9EBE2"
                    android:orientation="horizontal"
                    android:visibility="gone"

                    android:weightSum="4">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="4dp"
                        android:layout_weight=".91"
                        android:fontFamily="@font/poppin_bold"
                        android:paddingStart="4sp"
                        android:paddingTop="5dp"
                        android:paddingBottom="4dp"

                        android:text="RTO Count"
                        android:textAlignment="center"
                        android:textColor="#959595"
                        android:textSize="@dimen/dimen11sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="4dp"
                        android:layout_weight=".99"
                        android:fontFamily="@font/poppin_bold"
                        android:paddingStart="4sp"
                        android:paddingTop="5dp"
                        android:paddingBottom="4dp"

                        android:text="RTO Value"
                        android:textAlignment="center"

                        android:textColor="#959595"
                        android:textSize="@dimen/dimen11sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="4dp"
                        android:layout_weight=".91"
                        android:fontFamily="@font/poppin_bold"
                        android:paddingStart="4sp"
                        android:paddingTop="5dp"
                        android:paddingBottom="4dp"
                        android:text="RRTO Count"
                        android:textAlignment="center"
                        android:textColor="#959595"
                        android:textSize="@dimen/dimen11sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="4dp"
                        android:layout_weight=".99"
                        android:fontFamily="@font/poppin_bold"
                        android:paddingStart="4sp"
                        android:paddingTop="5dp"
                        android:paddingBottom="4dp"

                        android:text="RRTO Value"
                        android:textAlignment="center"

                        android:textColor="#959595"
                        android:textSize="@dimen/dimen11sp" />
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/gmsitesRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="vertical"
                    android:visibility="gone"

                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:itemCount="1"
                    tools:listitem="@layout/rto_sites" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/managerRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="vertical"

                    android:visibility="gone"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:itemCount="1"
                    tools:listitem="@layout/manager_layout" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/no_order_found_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/roboto_bold"
                    android:gravity="center"
                    android:text="No Pending Orders Found"
                    android:textAlignment="center"
                    android:textColor="@color/black" />
            </LinearLayout>




        </com.google.android.material.card.MaterialCardView>



    </RelativeLayout>

</layout>