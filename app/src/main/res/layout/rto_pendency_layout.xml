<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <LinearLayout
            android:id="@+id/parentLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4sp"
            android:orientation="vertical"
            android:visibility="visible">

            <LinearLayout
                android:id="@+id/generalmanager_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/value_55dp"
                android:background="#00acae"
                android:orientation="horizontal"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/logo"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/value_35dp"
                            android:layout_marginTop="@dimen/text_10sp"
                            android:layout_weight="0.2"
                            android:src="@drawable/qc_generalmanager" />

                        <TextView
                            android:id="@+id/gm_empname"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:layout_weight="0.6"
                            android:fontFamily="@font/roboto_medium"
                            android:text="Dhanalakshmi\nGeneral Manager"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_14sp" />

                        <LinearLayout
                            android:id="@+id/arrowlayout"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.2"
                            android:background="#33bdbd">


                            <ImageView
                                android:id="@+id/generalmanager_arrow"
                                android:layout_width="0dp"
                                android:layout_height="28dp"

                                android:layout_marginTop="@dimen/text_10sp"
                                android:layout_weight="0.1"
                                android:src="@drawable/ic_baseline_arrow_forward_ios_24" />


                            <ImageView
                                android:id="@+id/close_arrow"
                                android:layout_width="0dp"
                                android:layout_height="28dp"
                                android:layout_marginTop="@dimen/text_10sp"
                                android:layout_weight="0.1"
                                android:rotation="90"
                                android:src="@drawable/ic_baseline_arrow_forward_ios_24"
                                android:visibility="gone" />
                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/rto_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:background="@drawable/sitependencysquareboxright"
                    android:orientation="horizontal"

                    android:weightSum="4">


                    <TableLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"

                        android:background="@drawable/dashquarebox_right"

                        android:orientation="horizontal">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/value_5dp"
                            android:fontFamily="@font/roboto_medium"
                            android:paddingStart="4sp"
                            android:paddingTop="8dp"
                            android:paddingBottom="8dp"
                            android:text="Sum Of RTO"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="@dimen/dimen11sp" />

                    </TableLayout>

                    <TableLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.017"

                        android:background="@drawable/site_dashquarebox_right"


                        android:orientation="vertical">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/value_5dp"
                            android:fontFamily="@font/roboto_medium"
                            android:paddingStart="4sp"
                            android:paddingTop="8dp"
                            android:paddingBottom="8dp"

                            android:text="Sum Of RTO Value"
                            android:textAlignment="center"

                            android:textColor="@color/black"
                            android:textSize="@dimen/dimen11sp" />

                    </TableLayout>

                    <TableLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/dashquarebox_right"

                        android:orientation="horizontal">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/value_5dp"
                            android:fontFamily="@font/roboto_medium"
                            android:paddingStart="4sp"
                            android:paddingTop="8dp"
                            android:paddingBottom="8dp"
                            android:text="Sum Of RRTO"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="@dimen/dimen11sp" />

                    </TableLayout>

                    <TableLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"

                        android:background="@drawable/site_dashquarebox_right"


                        android:orientation="vertical">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/value_5dp"
                            android:fontFamily="@font/roboto_medium"
                            android:paddingStart="4sp"
                            android:paddingTop="8dp"
                            android:paddingBottom="8dp"

                            android:text="Sum Of RRTO Value"
                            android:textAlignment="center"

                            android:textColor="@color/black"
                            android:textSize="@dimen/dimen11sp" />

                    </TableLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/squareboxright"
                        android:orientation="horizontal"

                        android:weightSum="4">


                        <TableLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/dashquarebox_right"

                            android:orientation="vertical">


                            <TextView
                                android:id="@+id/rtocounts"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/value_5dp"
                                android:drawablePadding="5dp"
                                android:fontFamily="@font/roboto_medium"
                                android:paddingTop="8dp"
                                android:paddingBottom="8dp"
                                android:text="-"
                                android:textAlignment="center"

                                android:textColor="@color/black"
                                android:textSize="@dimen/dimen11sp" />

                        </TableLayout>

                        <TableLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.017"

                            android:background="@drawable/site_dashquarebox_right"


                            android:orientation="vertical">


                            <TextView
                                android:id="@+id/rtovalues"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/value_5dp"
                                android:drawableLeft="@drawable/qc_ic_rupee_indian"
                                android:drawablePadding="@dimen/value_2dp"
                                android:fontFamily="@font/roboto_medium"
                                android:paddingStart="@dimen/text_15sp"
                                android:paddingTop="8dp"
                                android:paddingBottom="8dp"
                                android:text="-"
                                android:textAlignment="textStart"
                                android:textColor="@color/black"
                                android:textSize="@dimen/dimen11sp"
                                tools:ignore="UseCompatTextViewDrawableXml" />

                        </TableLayout>

                        <TableLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/dashquarebox_right"

                            android:orientation="vertical">


                            <TextView
                                android:id="@+id/rrrtocounts"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/value_5dp"
                                android:drawablePadding="5dp"
                                android:fontFamily="@font/roboto_medium"
                                android:paddingTop="8dp"
                                android:paddingBottom="8dp"
                                android:text="-"
                                android:textAlignment="center"

                                android:textColor="@color/black"
                                android:textSize="@dimen/dimen11sp" />

                        </TableLayout>


                        <TableLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.017"

                            android:background="@drawable/site_dashquarebox_right"


                            android:orientation="vertical">


                            <TextView
                                android:id="@+id/rrrtovalues"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/value_5dp"
                                android:drawableLeft="@drawable/qc_ic_rupee_indian"
                                android:drawablePadding="2dp"
                                android:fontFamily="@font/roboto_medium"
                                android:paddingStart="@dimen/text_15sp"
                                android:paddingTop="8dp"

                                android:paddingBottom="8dp"
                                android:text="-"
                                android:textAlignment="textStart"
                                android:textColor="@color/black"
                                android:textSize="@dimen/dimen11sp"
                                tools:ignore="UseCompatTextViewDrawableXml" />

                        </TableLayout>


                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/gmsitesRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="vertical"
                android:visibility="gone"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:itemCount="1"
                tools:listitem="@layout/rto_sites" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/managerRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:scrollbars="vertical"
                android:visibility="gone"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:itemCount="1"
                tools:listitem="@layout/manager_layout" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/no_order_found_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/roboto_bold"
                android:gravity="center"
                android:text="No Pending Orders Found"
                android:textAlignment="center"
                android:textColor="@color/black" />
        </LinearLayout>
    </RelativeLayout>
</layout>