<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/value_10dp"
        android:background="@drawable/dialog_bg"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingBottom="30dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/vishwam_actionbar_color"

            android:weightSum="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_weight=".8"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="start"
                android:layout_marginStart="@dimen/dimen20dp"
                android:paddingTop="@dimen/value_10dp"
                android:paddingBottom="@dimen/value_10dp"

                android:text="Upload Photo"
                android:textColor="@color/white_for_both"
                android:textSize="@dimen/text_16sp"
                android:textStyle="bold" />
            <ImageView
                android:layout_width="0dp"
                android:layout_weight=".2"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:id="@+id/cancel"
                android:tint="@color/white_for_both"
                android:src="@drawable/close_icon"/>
        </LinearLayout>







        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:gravity="center_horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="110dp"
                    android:layout_gravity="center"
                    android:layout_weight=".37"
                    android:background="@drawable/dotted_lines"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/camera"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/cam_ash"
                        android:tint="@color/light_blue_500"
                        tools:ignore="UseAppTint" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Take Photo"
                        android:fontFamily="@font/roboto_bold"
                        android:textColor="@color/black_for_both"
                        android:textSize="@dimen/dimen11sp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.37"
                    android:layout_height="110dp"
                    android:layout_marginStart="@dimen/value_25dp"
                    android:background="@drawable/dotted_lines"

                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/gallery"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:tint="@color/light_blue_500"
                        android:src="@drawable/gallery"
                        tools:ignore="UseAppTint" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Choose From\n       Gallery"
                        android:textColor="@color/black_for_both"
                        android:fontFamily="@font/roboto_bold"
                        android:textSize="@dimen/dimen11sp"
                         />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:visibility="gone"
            android:layout_marginTop="@dimen/value_40dp"
            android:gravity="end">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/value_50dp"
                android:text="Cancel"
                android:textColor="@color/black"
                android:textSize="@dimen/text_16sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</layout>