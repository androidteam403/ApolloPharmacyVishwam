                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/cleanliness_edit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/value_10dp"
                    android:layout_weight="0.1"
                    android:gravity="center">


                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/value_50dp"
                        android:layout_marginStart="@dimen/value_5dp"
                        android:contentDescription="@string/app_name"
                        android:onClick="@{()-> mCallback.onClickEditSubCategoryRatingRange(model, position)}"
