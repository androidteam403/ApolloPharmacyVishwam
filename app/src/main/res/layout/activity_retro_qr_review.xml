                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_16sp"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/text_dimen_10"
                            android:background="#eeeceb" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/value_5dp"
                            android:text="Pending:"
                            android:textColor="#7e7f83"
                            android:textSize="@dimen/dimen11sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/pending"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_16sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#eeeceb" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/value_10dp"
                        android:weightSum="1">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.33"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="@dimen/value_10dp"
                                android:layout_height="@dimen/value_10dp"
                                android:layout_gravity="center"
                                android:layout_marginStart="@dimen/value_5dp"
                                android:background="@drawable/round_rating_bar_green"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/value_5dp"
                                android:text="0"


                                android:textColor="@color/black"
                                android:textSize="@dimen/text_16sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.33"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="@dimen/value_10dp"
                                android:layout_height="@dimen/value_10dp"
                                android:layout_gravity="center"
                                android:layout_marginStart="@dimen/value_5dp"
                                android:background="@drawable/round_rating_bar_orane"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/value_5dp"
                                android:text="0"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_16sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.33"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="@dimen/value_10dp"
                                android:layout_height="@dimen/value_10dp"
                                android:layout_gravity="center"
                                android:layout_marginStart="@dimen/value_5dp"
                                android:background="@drawable/round_rating_bar_red"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/value_5dp"
                                android:text="0"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_16sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/submitButton"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="0.25"
                    android:background="#9b9b9b"
                    android:gravity="center"
                    android:onClick="@{()->callback.onClickSubmit()}"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SUBMIT"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_18sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.001"
                    android:background="#eeeceb" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <data>

        <variable
            name="callback"
            type="com.apollopharmacy.vishwam.ui.home.retroqr.activity.retroqrreview.RetroQrReviewCallback" />
    </data>
