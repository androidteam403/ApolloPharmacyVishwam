                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/value_5dp">

                        <LinearLayout
                            android:layout_width="@dimen/value_40dp"
                            android:layout_height="@dimen/value_70dp"
                            android:layout_gravity="center"
                            android:layout_weight="0.10"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="@dimen/value_55dp"
                                android:layout_height="@dimen/value_55dp"
                                android:layout_gravity="center"
                                android:scaleType="fitXY"
                                android:src="@drawable/right_greenn" />
                        </LinearLayout>
                    </LinearLayout>

