<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="UselessParent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#0c273a"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/value_10dp"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <LinearLayout
                        android:id="@+id/greetingsToChairmanMenu"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/value_8dp"
                        android:layout_weight="1"
                        android:background="@drawable/rectangular_rounded_corners_bg"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:paddingTop="@dimen/value_7dp"
                        android:paddingBottom="@dimen/value_7dp">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/greetings" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/value_3dp"
                            android:text="Greetings\nto Chairman"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="@dimen/dimen10sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/cashDepositMenu"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/value_8dp"
                        android:layout_weight="1"
                        android:background="@drawable/rectangular_rounded_corners_bg"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:paddingTop="@dimen/value_7dp"
                        android:paddingBottom="@dimen/value_7dp">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/cash_deposit" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/value_3dp"
                            android:text="Cash\nDeposit"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="@dimen/dimen10sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/apolloSensingMenu"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/value_8dp"
                        android:layout_weight="1"
                        android:background="@drawable/rectangular_rounded_corners_bg"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:paddingTop="@dimen/value_7dp"
                        android:paddingBottom="@dimen/value_7dp">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/apollo_sensing" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/value_3dp"
                            android:text="Apollo\nSensing"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="@dimen/dimen10sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/retroQrMenu"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/rectangular_rounded_corners_bg"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:paddingTop="@dimen/value_7dp"
                        android:paddingBottom="@dimen/value_7dp">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/retro_qr" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/value_3dp"
                            android:text="Retro\nQR"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="@dimen/dimen10sp" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Attendance Management -->
                <LinearLayout
                    android:id="@+id/attendanceManagementMenu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/value_10dp"
                    android:layout_marginEnd="@dimen/value_10dp"
                    android:layout_marginBottom="@dimen/value_10dp"
                    android:background="@drawable/rectangular_rounded_corners_bg"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/value_7dp"
                    android:paddingTop="@dimen/value_5dp"
                    android:paddingEnd="@dimen/value_15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_bold"
                        android:text="Attendance Management"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dimen11sp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/attendanceManagementRcv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:itemCount="2"
                        tools:listitem="@layout/layout_menu_item" />
                </LinearLayout>

                <!-- CMS -->
                <LinearLayout
                    android:id="@+id/cmsMenu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/value_10dp"
                    android:layout_marginEnd="@dimen/value_10dp"
                    android:layout_marginBottom="@dimen/value_10dp"
                    android:background="@drawable/rectangular_rounded_corners_bg"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/value_7dp"
                    android:paddingTop="@dimen/value_5dp"
                    android:paddingEnd="@dimen/value_15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_bold"
                        android:text="CMS"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dimen11sp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/cmsRcv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:itemCount="3"
                        tools:listitem="@layout/layout_menu_item" />
                </LinearLayout>

                <!-- Discount -->
                <LinearLayout
                    android:id="@+id/discountMenu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/value_10dp"
                    android:layout_marginEnd="@dimen/value_10dp"
                    android:layout_marginBottom="@dimen/value_10dp"
                    android:background="@drawable/rectangular_rounded_corners_bg"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/value_7dp"
                    android:paddingTop="@dimen/value_5dp"
                    android:paddingEnd="@dimen/value_15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_bold"
                        android:text="Discount"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dimen11sp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/discountRcv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:itemCount="4"
                        tools:listitem="@layout/layout_menu_item" />
                </LinearLayout>

                <!-- New Drug Request -->
                <LinearLayout
                    android:id="@+id/drugRequestMenu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/value_10dp"
                    android:layout_marginEnd="@dimen/value_10dp"
                    android:layout_marginBottom="@dimen/value_10dp"
                    android:background="@drawable/rectangular_rounded_corners_bg"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/value_7dp"
                    android:paddingTop="@dimen/value_5dp"
                    android:paddingEnd="@dimen/value_15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_bold"
                        android:text="Raise New Drug Request"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dimen11sp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/newDrugRequestRcv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:itemCount="2"
                        tools:listitem="@layout/layout_menu_item" />
                </LinearLayout>

                <!-- OMS QC -->
                <LinearLayout
                    android:id="@+id/omsQcMenu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/value_10dp"
                    android:layout_marginEnd="@dimen/value_10dp"
                    android:layout_marginBottom="@dimen/value_10dp"
                    android:background="@drawable/rectangular_rounded_corners_bg"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/value_7dp"
                    android:paddingTop="@dimen/value_5dp"
                    android:paddingEnd="@dimen/value_15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_bold"
                        android:text="OMS QC"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dimen11sp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/omsQcRcv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:itemCount="4"
                        tools:listitem="@layout/layout_menu_item" />
                </LinearLayout>

                <!-- Swachh -->
                <LinearLayout
                    android:id="@+id/swachhMenu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/value_10dp"
                    android:layout_marginEnd="@dimen/value_10dp"
                    android:layout_marginBottom="@dimen/value_10dp"
                    android:background="@drawable/rectangular_rounded_corners_bg"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/value_7dp"
                    android:paddingTop="@dimen/value_5dp"
                    android:paddingEnd="@dimen/value_15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_bold"
                        android:text="Swachh"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dimen11sp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/swachhRcv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:itemCount="2"
                        tools:listitem="@layout/layout_menu_item" />
                </LinearLayout>

                <!-- Monitoring -->
                <LinearLayout
                    android:id="@+id/monitoringMenu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/value_10dp"
                    android:layout_marginEnd="@dimen/value_10dp"
                    android:layout_marginBottom="@dimen/value_10dp"
                    android:background="@drawable/rectangular_rounded_corners_bg"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/value_7dp"
                    android:paddingTop="@dimen/value_5dp"
                    android:paddingEnd="@dimen/value_15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_bold"
                        android:text="Monitoring"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dimen11sp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/monitoringRcv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:itemCount="1"
                        tools:listitem="@layout/layout_menu_item" />
                </LinearLayout>

                <!-- Champs -->
                <LinearLayout
                    android:id="@+id/champsMenu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/value_10dp"
                    android:layout_marginEnd="@dimen/value_10dp"
                    android:layout_marginBottom="@dimen/value_10dp"
                    android:background="@drawable/rectangular_rounded_corners_bg"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/value_7dp"
                    android:paddingTop="@dimen/value_5dp"
                    android:paddingEnd="@dimen/value_15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_bold"
                        android:text="Champs"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dimen11sp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/champsRcv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:itemCount="3"
                        tools:listitem="@layout/layout_menu_item" />
                </LinearLayout>

                <!-- Planogram -->
                <LinearLayout
                    android:id="@+id/planogramMenu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/value_10dp"
                    android:layout_marginEnd="@dimen/value_10dp"
                    android:layout_marginBottom="@dimen/value_10dp"
                    android:background="@drawable/rectangular_rounded_corners_bg"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/value_7dp"
                    android:paddingTop="@dimen/value_5dp"
                    android:paddingEnd="@dimen/value_15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_bold"
                        android:text="Planogram"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dimen11sp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/planogramRcv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:itemCount="1"
                        tools:listitem="@layout/layout_menu_item" />
                </LinearLayout>

                <!-- Apna Retro -->
                <LinearLayout
                    android:id="@+id/apnaRetroMenu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/value_10dp"
                    android:layout_marginEnd="@dimen/value_10dp"
                    android:layout_marginBottom="@dimen/value_10dp"
                    android:background="@drawable/rectangular_rounded_corners_bg"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/value_7dp"
                    android:paddingTop="@dimen/value_5dp"
                    android:paddingEnd="@dimen/value_15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_bold"
                        android:text="Apna Retro"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dimen11sp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/apnaRetroRcv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:itemCount="2"
                        tools:listitem="@layout/layout_menu_item" />
                </LinearLayout>

                <!-- Apna -->
                <LinearLayout
                    android:id="@+id/apnaMenu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/value_10dp"
                    android:layout_marginEnd="@dimen/value_10dp"
                    android:layout_marginBottom="@dimen/value_10dp"
                    android:background="@drawable/rectangular_rounded_corners_bg"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/value_7dp"
                    android:paddingTop="@dimen/value_5dp"
                    android:paddingEnd="@dimen/value_15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_bold"
                        android:text="Apna"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dimen11sp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/apnaRcv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:itemCount="1"
                        tools:listitem="@layout/layout_menu_item" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

