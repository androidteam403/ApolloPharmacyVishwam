<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/value_70dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:weightSum="3">

                <ImageView
                    android:id="@+id/apolloLogo"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/value_50dp"
                    android:layout_marginStart="@dimen/value_25dp"
                    android:layout_weight=".5"
                    android:contentDescription="@string/app_name"
                    android:paddingTop="@dimen/value_5dp"
                    android:src="@drawable/apollo_vishwam_logo_new"
                    android:visibility="visible" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/value_15dp"
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/userName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_medium"
                        android:text="Nagarajuna"
                        android:textColor="#3B8169"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/designation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/userId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ID: APL39847"
                        android:textColor="@color/black"
                        android:textSize="13sp" />
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/notification_layout"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="@dimen/value_5dp"
                    android:clickable="true"
                    android:visibility="visible">

                    <ImageView
                        android:id="@+id/notify_image"
                        android:layout_width="@dimen/twenty_five_dp"
                        android:layout_height="@dimen/twenty_five_dp"
                        android:contentDescription="@string/app_name"
                        android:gravity="center"
                        android:onClick="@{()->callback.onclickNotificationIcon()}"
                        android:src="@drawable/notification_icon"
                        tools:ignore="UseAppTint" />

                    <TextView
                        android:id="@+id/notification_text"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_alignParentEnd="true"
                        android:background="@drawable/notification_dot"
                        android:fontFamily="@font/roboto_regular"
                        android:paddingStart="@dimen/value_5dp"
                        android:paddingEnd="5dp"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/text_dimen_12"
                        android:visibility="visible" />
                </RelativeLayout>

                <!--                    <ImageView-->
                <!--                        android:id="@+id/notification"-->
                <!--                        android:layout_width="30dp"-->
                <!--                        android:layout_height="30dp"-->
                <!--                        -->
                <!--                        android:layout_marginTop="15dp"-->
                <!--                        android:layout_marginStart="@dimen/value_10dp"-->
                <!--                        android:contentDescription="@string/app_name"-->
                <!--                        android:src="@drawable/notification_icon"-->
                <!--                        android:tint="@color/dark_grey"-->
                <!--                        android:visibility="gone" />-->
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen20dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="@dimen/value_10dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp">

                <RelativeLayout
                    android:id="@+id/search_layout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/value_50dp"
                    android:layout_gravity="center"
                    android:background="@color/home_search_box_bg"
                    android:padding="@dimen/value_10dp"
                    app:layout_constraintTop_toTopOf="parent">

                    <!--
                                        <LinearLayout
                                            android:id="@+id/search_icon"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_centerVertical="true"
                                            android:layout_marginStart="@dimen/value_10dp"
                                            android:gravity="center">

                                            <ImageView
                                                android:layout_width="@dimen/value_25dp"
                                                android:layout_height="@dimen/value_25dp"
                                                android:layout_gravity="center"
                                                android:contentDescription="@string/app_name"
                                                android:src="@drawable/close_blue_new"
                                                android:tint="@color/grey" />
                                        </LinearLayout>
                    -->

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/search_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:background="@null"
                        android:drawableStart="@drawable/close_blue_new"
                        android:drawablePadding="@dimen/dimen20dp"
                        android:drawableTint="@color/grey"
                        android:gravity="left|center"
                        android:hint="@string/label_search_module"
                        android:imeOptions="actionSearch"
                        android:inputType="text"
                        android:maxLines="1"
                        android:padding="@dimen/value_5dp"
                        android:paddingTop="@dimen/value_5dp"
                        android:paddingBottom="@dimen/value_5dp"
                        android:textSize="@dimen/text_14sp" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/newMenuRecycleview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_marginTop="@dimen/value_10dp"
                android:orientation="horizontal"
                app:spanCount="4" />

            <RelativeLayout
                android:id="@+id/no_module_found_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/empty_image"
                    android:layout_width="@dimen/value_60dp"
                    android:layout_height="@dimen/value_60dp"
                    android:layout_centerHorizontal="true"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/qca" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/empty_image"
                    android:layout_centerHorizontal="true"
                    android:text="@string/label_no_module_found"
                    android:textColor="@color/backgroundColor"
                    android:textSize="@dimen/text_15sp" />
            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/value_40dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/value_15dp"
            android:layout_marginEnd="@dimen/value_15dp"
            android:layout_marginBottom="@dimen/value_20dp"
            android:background="@drawable/rounded_gray_bg">

            <LinearLayout
                android:id="@+id/dark_mode_layout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingStart="@dimen/value_12dp"
                android:paddingEnd="@dimen/value_12dp">

                <ImageView
                    android:id="@+id/dark_mode_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_night_mode"
                    tools:ignore="UseAppTint" />

                <TextView
                    android:id="@+id/dark_mode_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppin_bold"
                    android:text="Dark Mode"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/dimen11sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/light_mode_layout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:paddingStart="@dimen/value_12dp"
                android:paddingEnd="@dimen/value_12dp">

                <ImageView
                    android:id="@+id/light_mode_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_day_mode"
                    tools:ignore="UseAppTint" />

                <TextView
                    android:id="@+id/light_mode_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppin_bold"
                    android:text="Light Mode"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/dimen11sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/device_mode_layout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:gravity="center"
                android:paddingStart="@dimen/value_12dp"
                android:paddingEnd="@dimen/value_12dp">

                <ImageView
                    android:id="@+id/device_mode_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/device_mode"
                    tools:ignore="ContentDescription,UseAppTint" />

                <TextView
                    android:id="@+id/device_mode_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppin_bold"
                    android:text="Device Mode"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/dimen11sp" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

    <data>

        <variable
            name="callback"
            type="com.apollopharmacy.vishwam.ui.home.home.HomeFragmentCallback" />
    </data>
</layout>