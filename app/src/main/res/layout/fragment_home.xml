<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="UselessParent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <ImageView
                        android:id="@+id/apolloLogo"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/value_50dp"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/value_25dp"
                        android:layout_weight=".5"
                        android:contentDescription="@string/app_name"
                        android:paddingTop="@dimen/value_5dp"
                        android:src="@drawable/apollo_vishwam_logo_new"
                        android:visibility="visible" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="14dp"
                        android:layout_toRightOf="@+id/apolloLogo"
                        android:layout_weight="2"
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <TextView
                            android:id="@+id/userName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_medium"
                            android:text="Nagarajuna"
                            android:textColor="#3B8169"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/designation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/black"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/userId"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ID: APL39847"
                            android:textColor="@color/black"
                            android:textSize="13sp" />


                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/notification_layout"
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="@dimen/value_5dp"
                        android:clickable="true"
                        android:visibility="visible">

                        <ImageView
                            android:id="@+id/notify_image"
                            android:layout_width="@dimen/twenty_five_dp"
                            android:layout_height="@dimen/twenty_five_dp"
                            android:contentDescription="@string/app_name"
                            android:gravity="center"
                            android:src="@drawable/notification_icon"

                            android:tint="@color/dark_grey" />

                        <TextView
                            android:id="@+id/notification_text"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_alignParentEnd="true"
                            android:background="@drawable/notification_dot"
                            android:fontFamily="@font/roboto_regular"
                            android:paddingStart="@dimen/value_5dp"
                            android:paddingEnd="5dp"
                            android:text="3"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/text_dimen_12"
                            android:visibility="gone" />
                    </RelativeLayout>

                    <!--                    <ImageView-->
                    <!--                        android:id="@+id/notification"-->
                    <!--                        android:layout_width="30dp"-->
                    <!--                        android:layout_height="30dp"-->
                    <!--                        -->
                    <!--                        android:layout_marginTop="15dp"-->
                    <!--                        android:layout_marginStart="@dimen/value_10dp"-->
                    <!--                        android:contentDescription="@string/app_name"-->
                    <!--                        android:src="@drawable/notification_icon"-->
                    <!--                        android:tint="@color/dark_grey"-->
                    <!--                        android:visibility="gone" />-->
                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen20dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="@dimen/value_10dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="8dp">

                    <RelativeLayout
                        android:id="@+id/search_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="#F2F2F2"
                        android:paddingTop="9dp"

                        android:paddingBottom="9dp"
                        app:layout_constraintTop_toTopOf="parent">

                        <LinearLayout
                            android:id="@+id/search_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/value_10dp"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="@dimen/value_25dp"
                                android:layout_height="@dimen/value_25dp"
                                android:layout_gravity="center"
                                android:contentDescription="@string/app_name"
                                android:src="@drawable/close_blue_new"
                                android:tint="@color/grey" />
                        </LinearLayout>

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/search_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="@dimen/value_5dp"
                            android:layout_toEndOf="@id/search_icon"
                            android:background="@null"
                            android:drawablePadding="22dp"
                            android:gravity="left|center"
                            android:hint="@string/label_search_module"
                            android:imeOptions="actionSearch"
                            android:inputType="text"
                            android:maxLines="1"
                            android:padding="5dp"
                            android:paddingTop="@dimen/five5_sp"
                            android:paddingBottom="@dimen/five5_sp"
                            android:textColorHint="@android:color/darker_gray"
                            android:textSize="@dimen/text_14sp" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/newMenuRecycleview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="@dimen/value_10dp"
                    android:orientation="horizontal"
                    app:spanCount="4" />


            </LinearLayout>
        </ScrollView>


    </RelativeLayout>
</layout>