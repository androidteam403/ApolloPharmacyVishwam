<!--                    android:layout_marginTop="@dimen/text_dimen_10"-->
<!--                    android:id="@+id/other_img_view"-->
<!--                    android:layout_gravity="center"-->
<!--                    android:layout_width="@dimen/value_100dp"-->
<!--                    android:layout_height="@dimen/value_100dp"-->
