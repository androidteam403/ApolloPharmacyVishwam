<!--                    android:visibility="gone"-->
<!--                    app:layout_constraintStart_toStartOf="@+id/other_img_label"-->
<!--                    app:layout_constraintTop_toBottomOf="@+id/other_img_label" />-->



        </LinearLayout>

        <LinearLayout
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_gravity="center"
                android:gravity="center"
                android:id="@+id/attacheImages"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/value_5dp"
                android:layout_marginTop="@dimen/value_10dp"
                android:orientation="horizontal">

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_gravity="center"
                    android:id="@+id/addedImagesRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:itemCount="2"
                    tools:listitem="@layout/view_image_show" />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <RelativeLayout
        android:id="@+id/emptyList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@color/white"
        android:gravity="center"
        android:visibility="gone">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No attachments available"
            android:textColor="@color/black"
            android:textSize="@dimen/text_18sp" />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/emptyListProblemImages"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@color/white"
        android:gravity="center"
        android:visibility="gone">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No attachments available"
            android:textColor="@color/black"
            android:textSize="@dimen/text_18sp" />

    </RelativeLayout>


</RelativeLayout>


    <data>

        <variable
            name="callback"
            type="com.apollopharmacy.vishwam.ui.home.cms.complainList.activity.fragments.callback.AttachmentsCallback" />
