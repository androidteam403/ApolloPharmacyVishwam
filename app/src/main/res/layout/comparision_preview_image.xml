<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/light_blue">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:visibility="visible"
            android:layout_height="@dimen/dimen400dp">

            <LinearLayout
                android:id="@+id/first_image_layout"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5">

                <TextView
                    android:id="@+id/image_heading_1"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Post Rectro Image"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:paddingBottom="@dimen/four4_dp"
                    android:textAlignment="center"
                    android:layout_marginTop="@dimen/value_5dp"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <com.apollopharmacy.vishwam.util.zoomage.ZoomMultiImageView
                            android:id="@+id/image_one"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="@dimen/value_3dp"
                            android:src="@drawable/capture1"
                            app:zoomage_animateOnReset="true"
                            app:zoomage_autoCenter="true"

                            app:zoomage_autoResetMode="UNDER"
                            app:zoomage_maxScale="8"
                            app:zoomage_minScale="0.6"
                            app:zoomage_restrictBounds="false"
                            app:zoomage_translatable="true"
                            app:zoomage_zoomable="true" />
                        <ImageView
                            android:layout_width="22dp"
                            android:src="@drawable/icon_cancel_order_header"
                            android:id="@+id/first_image_zoom"
                            android:tint="@color/white"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="10dp"
                            android:layout_marginTop="88dp"
                            android:layout_height="22dp"
                            tools:ignore="UseAppTint" />
                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/deleteIconPreRetro"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/value_25dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:layout_margin="@dimen/six6_sp"
                        android:background="@drawable/red_rounded_corners"
                        android:padding="@dimen/value_3dp">

                        <ImageView
                            android:layout_width="@dimen/eighteen18_dp"
                            android:layout_height="@dimen/eighteen18_dp"
                            android:layout_gravity="center"
                            android:padding="@dimen/value_3dp"
                            android:src="@drawable/trash" />


                    </LinearLayout>


                    <LinearLayout
                        android:visibility="gone"
                        android:id="@+id/reshootCameraPreRetro"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/value_25dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:layout_margin="@dimen/six6_sp"
                        android:background="@drawable/red_rounded_corners"
                        android:padding="@dimen/value_3dp">

                        <ImageView
                            android:layout_width="@dimen/twenty20_dp"
                            android:layout_height="@dimen/twenty20_dp"
                            android:layout_gravity="center"
                            android:padding="@dimen/value_3dp"
                            android:src="@drawable/camerawhite" />


                    </LinearLayout>
                </RelativeLayout>


            </LinearLayout>




            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:id="@+id/second_image_weight_layout"

                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:visibility="visible"
                    android:id="@+id/second_image_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/image_heading2"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="After Completion Image"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:layout_marginTop="@dimen/value_5dp"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <com.apollopharmacy.vishwam.util.zoomage.ZoomMultiImageView
                                android:id="@+id/image_two"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginStart="@dimen/value_3dp"
                                android:src="@drawable/capture1"
                                app:zoomage_animateOnReset="true"
                                app:zoomage_autoCenter="true"
                                app:zoomage_autoResetMode="UNDER"
                                app:zoomage_maxScale="8"

                                app:zoomage_minScale="0.6"
                                app:zoomage_restrictBounds="false"
                                app:zoomage_translatable="true"
                                app:zoomage_zoomable="true" />

                            <ImageView
                                android:id="@+id/second_image_zoom"
                                android:layout_width="22dp"
                                android:layout_height="22dp"
                                android:layout_alignParentEnd="true"
                                android:layout_marginTop="88dp"
                                android:layout_marginEnd="10dp"
                                android:src="@drawable/icon_cancel_order_header"
                                android:tint="@color/white"
                                tools:ignore="UseAppTint" />
                        </RelativeLayout>
                        <LinearLayout
                            android:id="@+id/deleteIcon"
                            android:visibility="gone"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/value_25dp"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentRight="true"
                            android:layout_margin="@dimen/six6_sp"
                            android:background="@drawable/red_rounded_corners"
                            android:padding="@dimen/value_3dp">

                            <ImageView
                                android:layout_width="@dimen/eighteen18_dp"
                                android:layout_height="@dimen/eighteen18_dp"
                                android:layout_gravity="center"
                                android:padding="@dimen/value_3dp"
                                android:src="@drawable/trash" />


                        </LinearLayout>


                        <LinearLayout
                            android:visibility="gone"
                            android:id="@+id/reshootCamera"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/value_25dp"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:layout_margin="@dimen/six6_sp"
                            android:background="@drawable/red_rounded_corners"


                            android:padding="@dimen/value_3dp">

                            <ImageView
                                android:layout_width="@dimen/twenty20_dp"
                                android:layout_height="@dimen/twenty20_dp"

                                android:layout_gravity="center"
                                android:padding="@dimen/value_3dp"
                                android:src="@drawable/camerawhite" />


                        </LinearLayout>
                    </RelativeLayout>






                </LinearLayout>




                <LinearLayout
                    android:id="@+id/upload_camera_layout"
                    android:visibility="gone"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/very_light_green">

                    <TextView
                        android:id="@+id/upload_postOrAfter_image_text"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textStyle="bold"/>

                    <LinearLayout
                        android:id="@+id/cameraIconImage"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/value_25dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:layout_margin="@dimen/six6_sp"
                        android:background="@drawable/red_rounded_corners"
                        android:padding="@dimen/value_3dp">

                        <ImageView
                            android:id="@+id/showcapturedimage"
                            android:layout_width="@dimen/twenty20_dp"
                            android:layout_height="@dimen/twenty20_dp"
                            android:layout_gravity="center"
                            android:padding="@dimen/value_3dp"
                            android:src="@drawable/camerawhite" />


                    </LinearLayout>




                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/comparison_text"
            android:layout_marginTop="@dimen/value_5dp"
            android:visibility="visible"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Two images selected for comparison"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:gravity="center"/>




        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/text_dimen_10"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:visibility="visible"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/pre_rectro_cb_layout"
                android:layout_width="100dp"
                android:layout_height="@dimen/value_140dp"
                android:background="@color/blue"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/pre_retro_cb_image"
                    android:layout_margin="10dp"
                    android:scaleType="fitXY"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/value_70dp"
                    />

                <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pre Rectro"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_12sp"
                    android:textColor="@color/white"/>

                <CheckBox
                    android:id="@+id/pre_rectro_checkbox"
                    android:checked="true"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/white"
                    android:textColor="@color/black"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/post_rectro_cb_layout"
                android:layout_marginStart="@dimen/value_5dp"
                android:layout_width="100dp"
                android:layout_height="@dimen/value_140dp"
                android:background="@color/blue"
                android:orientation="vertical">

                <ImageView
                    android:layout_margin="10dp"
                    android:scaleType="fitXY"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/value_70dp"
                    android:id="@+id/post_retro_cb_image"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Post Rectro"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_12sp"
                    android:textStyle="bold" />

                <CheckBox
                    android:id="@+id/post_rectro_checkbox"
                    android:checked="true"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/white"
                    android:textColor="@color/black"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/afterCompletionCbLayout"
                android:layout_marginStart="@dimen/value_5dp"
                android:layout_width="100dp"
                android:layout_height="@dimen/value_140dp"
                android:background="@color/grey"
                android:orientation="vertical">

                <ImageView
                    android:layout_margin="10dp"
                    android:scaleType="fitXY"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/value_70dp"
                    android:id="@+id/after_completion_cb_image"/>

                <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="After Completion"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_12sp"
                    android:textColor="@color/white"/>

                <CheckBox
                    android:id="@+id/after_completion_checkbox"
                    android:checked="false"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/white"
                    android:textColor="@color/black"
                    android:textStyle="bold" />


            </LinearLayout>


        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/value_1dp"
            android:layout_marginTop="10dp"
            android:background="@color/another_grey" />

        <LinearLayout
            android:layout_marginBottom="@dimen/value_2dp"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/text_dimen_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:paddingTop="4dp"
                android:layout_height="wrap_content"
                android:text="Status: "
                android:textColor="@color/black" />

            <TextView
                android:layout_gravity="center"
                android:id="@+id/imageStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pending"
                android:paddingTop="4dp"

                android:textColor="@color/black"
                android:textSize="@dimen/text_15sp"
                android:textStyle="bold" />

            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/value_80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/value_7dp"
                    android:layout_marginBottom="@dimen/five5_sp"
                    android:background="@drawable/ash_rounded_corners"
                    android:padding="@dimen/value_6dp"
                    android:text="Re-Shoot"
                    android:paddingTop="4dp"

                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_15sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_marginStart="10dp"
                    android:layout_width="@dimen/value_80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/value_7dp"
                    android:layout_marginBottom="@dimen/five5_sp"
                    android:background="@drawable/ash_rounded_corners"
                    android:padding="@dimen/value_6dp"
                    android:text="Approve"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_15sp"
                    android:textStyle="bold" />
            </LinearLayout>






        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/value_1dp"
            android:layout_marginTop="6dp"
            android:background="@color/another_grey" />
        <LinearLayout
            android:visibility="gone"
            android:layout_marginTop="@dimen/value_15dp"
            android:id="@+id/uploadnowbutton"
            android:layout_marginBottom="5dp"
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/ashcolor"
            android:orientation="horizontal"
            android:padding="@dimen/value_9dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/text_15sp"
                android:textColor="@color/white"
                android:textSize="@dimen/text_20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="UPLOAD"
                android:textColor="@color/white"
                android:textSize="@dimen/text_20sp"
                android:textStyle="bold" />


        </LinearLayout>



    </LinearLayout>


</layout>