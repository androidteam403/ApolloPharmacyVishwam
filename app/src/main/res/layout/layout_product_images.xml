<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_marginBottom="@dimen/text_dimen_10"
    android:layout_height="wrap_content">


    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/text_15sp"
        android:layout_marginTop="5dp"
        android:text="Product Images "
        android:textColor="@color/black"
        android:id="@+id/title"

        android:textSize="@dimen/text_16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_marginTop="@dimen/text_dimen_10"
        android:layout_marginBottom="@dimen/text_dimen_15"
        android:gravity="center"
        android:layout_marginStart="@dimen/value_10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/front_image_layout"
            android:layout_width="100dp"
            android:background="@drawable/grey_rectangle_cap"
            android:layout_height="@dimen/value_85dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toStartOf="@+id/back_image_layout"
            app:layout_constraintStart_toStartOf="@id/title"
            app:layout_constraintTop_toTopOf="@id/title">


            <androidx.appcompat.widget.AppCompatImageView
                android:layout_gravity="center"
                android:id="@+id/product_front_image_preview"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginTop="@dimen/value_15dp"
                android:orientation="horizontal"
                android:src="@drawable/cam_ash"
                android:scaleType="fitXY"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/frnt_label"/>
            <ImageView
                android:id="@+id/front_Image_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/value_5dp"
                android:paddingEnd="@dimen/value_1dp"
                android:paddingBottom="@dimen/value_5dp"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_baseline_close_24"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="@+id/product_front_image_preview"
                app:layout_constraintEnd_toEndOf="@+id/product_front_image_preview"/>
            <TextView
                android:id="@+id/frnt_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/value_10dp"
                android:layout_gravity="center"
                android:text="@string/label_Product_Front_Image"
                android:textColor="@color/black"
                android:textSize="@dimen/text_14sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />




        </LinearLayout>

        <LinearLayout
            android:layout_marginStart="@dimen/text_dimen_10"
            android:id="@+id/back_image_layout"
            android:layout_width="100dp"
            android:background="@drawable/grey_rectangle_cap"
            android:layout_height="@dimen/value_85dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toStartOf="@+id/back_image_layout"
            app:layout_constraintStart_toStartOf="@id/title"
            app:layout_constraintTop_toTopOf="@id/title">


            <androidx.appcompat.widget.AppCompatImageView
                android:layout_gravity="center"
                android:id="@+id/product_back_image_preview"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginTop="@dimen/value_15dp"
                android:orientation="horizontal"
                android:src="@drawable/cam_ash"
                android:scaleType="fitXY"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/frnt_label"/>

            <ImageView
                android:id="@+id/back_Image_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/value_5dp"
                android:paddingEnd="@dimen/value_1dp"
                android:paddingBottom="@dimen/value_5dp"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_baseline_close_24"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="@+id/product_front_image_preview"
                app:layout_constraintEnd_toEndOf="@+id/product_front_image_preview"/>

            <TextView
                android:id="@+id/back_imag_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/value_10dp"
                android:layout_gravity="center"
                android:text="@string/label_Product_Back_Image"
                android:textColor="@color/black"
                android:textSize="@dimen/text_14sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />




        </LinearLayout>

        <LinearLayout
            android:layout_marginStart="@dimen/value_10dp"
            android:id="@+id/other_image_layout"
            android:layout_width="100dp"
            android:background="@drawable/grey_rectangle_cap"
            android:layout_height="@dimen/value_85dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toStartOf="@+id/back_image_layout"
            app:layout_constraintStart_toStartOf="@id/title"
            app:layout_constraintTop_toTopOf="@id/title">


            <androidx.appcompat.widget.AppCompatImageView
                android:layout_gravity="center"
                android:id="@+id/product_other_image_preview"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginTop="@dimen/value_15dp"
                android:orientation="horizontal"
                android:src="@drawable/cam_ash"
                android:scaleType="fitXY"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/frnt_label"/>

            <ImageView
                android:id="@+id/other_Image_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/value_5dp"
                android:paddingEnd="@dimen/value_1dp"
                android:paddingBottom="@dimen/value_5dp"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_baseline_close_24"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="@+id/product_front_image_preview"
                app:layout_constraintEnd_toEndOf="@+id/product_front_image_preview"/>

            <TextView
                android:id="@+id/other_image_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/value_10dp"
                android:layout_gravity="center"
                android:text="@string/label_Other_Image"
                android:textColor="@color/black"
                android:textSize="@dimen/text_14sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />




        </LinearLayout>

        <RelativeLayout
            android:visibility="gone"
            android:layout_marginStart="@dimen/value_10dp"
            android:id="@+id/other_image_layout_forUpload"
            android:layout_width="110dp"
            android:background="@drawable/grey_rectangle_cap"
            android:layout_height="@dimen/value_85dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toStartOf="@+id/back_image_layout"
            app:layout_constraintStart_toStartOf="@id/title"
            app:layout_constraintTop_toTopOf="@id/title">


            <androidx.appcompat.widget.AppCompatImageView
                android:layout_gravity="center"
                android:id="@+id/product_other_image_preview_forUpload"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:scaleType="fitXY"
                app:layout_constraintStart_toStartOf="parent" />




            <ImageView
                android:id="@+id/other_Image_delete_forUpload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/value_5dp"
                android:paddingEnd="@dimen/value_1dp"
                android:paddingBottom="@dimen/value_5dp"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_baseline_close_24"
                android:visibility="gone"
                />
        </RelativeLayout>

