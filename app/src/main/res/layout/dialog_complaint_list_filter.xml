<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="isNewChecked"
            type="Boolean" />

        <variable
            name="isInProgressChecked"
            type="Boolean" />

        <variable
            name="isResolvedChecked"
            type="Boolean" />

        <variable
            name="isRejectedChecked"
            type="Boolean" />

        <variable
            name="isReopenChecked"
            type="Boolean" />

        <variable
            name="isClosedChecked"
            type="Boolean" />

        <variable
            name="isOnHoldChecked"
            type="Boolean" />

        <variable
            name="isSubmitEnable"
            type="Boolean" />

        <variable
            name="isSelectAllChecked"
            type="Boolean" />

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#CC000000"
        android:gravity="center">

        <RelativeLayout
            android:layout_width="@dimen/dimen330dp"
            android:layout_height="wrap_content"
            android:background="@drawable/dialogue_bg_">

            <RelativeLayout
                android:id="@+id/header_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/vishwam_actionbar_color"
                android:paddingTop="@dimen/value_15dp"
                android:paddingBottom="@dimen/value_15dp">

                <TextView
                    android:id="@+id/textHead"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/value_10dp"
                    android:gravity="start"
                    android:text="@string/label_filters"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/text_18sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/close_dialog"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/value_10dp"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/qc_white_close_24"
                    app:tint="@color/white" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/header_layout"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/value_10dp"
                    android:layout_marginEnd="@dimen/value_10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/value_3dp"
                        android:layout_marginTop="@dimen/value_10dp"
                        android:text="@string/label_by_status"
                        android:textAllCaps="true"
                        android:textColor="@color/colorBlack" />

                    <RelativeLayout
                        android:id="@+id/select_all_checkbox_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <CheckBox
                            android:id="@+id/select_all"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:buttonTint="@color/vishwam_actionbar_color"
                            android:checked="@{isSelectAllChecked}"
                            android:clickable="false"
                            android:text="@string/label_select_all"
                            android:textColor="@color/grey"
                            android:textSize="@dimen/text_16sp"
                            android:textStyle="bold" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginTop="@dimen/value_2dp"
                        android:background="@color/grey"
                        android:visibility="gone" />

                    <!--            <RadioGroup-->
                    <!--                android:id="@+id/status_radio_group"-->
                    <!--                android:layout_width="match_parent"-->
                    <!--                android:layout_height="wrap_content"-->
                    <!--                android:orientation="vertical"-->
                    <!--                tools:ignore="UselessParent">-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <CheckBox
                            android:id="@+id/new_status"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".5"
                            android:buttonTint="@color/vishwam_actionbar_color"
                            android:checked="@{isNewChecked}"
                            android:text="@string/label_new"
                            android:textSize="@dimen/text_16sp"
                            android:textStyle="bold" />

                        <CheckBox
                            android:id="@+id/reopen_status"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".5"
                            android:buttonTint="@color/vishwam_actionbar_color"
                            android:checked="@{isReopenChecked}"
                            android:text="@string/label_reopen"
                            android:textSize="@dimen/text_16sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <CheckBox
                            android:id="@+id/in_progress_status"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".5"
                            android:buttonTint="@color/vishwam_actionbar_color"
                            android:checked="@{isInProgressChecked}"
                            android:text="@string/label_in_progress"
                            android:textSize="@dimen/text_16sp"
                            android:textStyle="bold" />

                        <CheckBox
                            android:id="@+id/closed_status"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".5"
                            android:buttonTint="@color/vishwam_actionbar_color"
                            android:checked="@{isClosedChecked}"
                            android:text="@string/label_closed"
                            android:textSize="@dimen/text_16sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <CheckBox
                            android:id="@+id/resolved_status"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".5"
                            android:buttonTint="@color/vishwam_actionbar_color"
                            android:checked="@{isResolvedChecked}"
                            android:text="@string/label_resolved"
                            android:textSize="@dimen/text_16sp"
                            android:textStyle="bold" />

                        <CheckBox
                            android:id="@+id/onhold_status"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".5"
                            android:buttonTint="@color/vishwam_actionbar_color"
                            android:checked="@{isOnHoldChecked}"
                            android:text="@string/label_on_hold"
                            android:textSize="@dimen/text_16sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <CheckBox
                        android:id="@+id/rejected_status"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/vishwam_actionbar_color"
                        android:checked="@{isRejectedChecked}"
                        android:text="@string/label_rejectedd"
                        android:textSize="@dimen/text_16sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/value_1dp"
                    android:layout_marginTop="@dimen/value_2dp"
                    android:background="@color/grey" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/value_10dp"
                    android:layout_marginEnd="@dimen/value_10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/value_10dp"
                        android:text="@string/label_by_date"
                        android:textAllCaps="true"
                        android:textColor="@color/colorBlack" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/value_5dp"
                        android:baselineAligned="false"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <LinearLayout
                            android:id="@+id/from_date"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".5"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="@dimen/value_25dp"
                                android:layout_height="@dimen/value_25dp"
                                android:contentDescription="@string/app_name"
                                android:src="@drawable/calendar_gray" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/value_5dp"
                                android:gravity="center_vertical"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/label_from_date"
                                    android:textColor="@color/grey" />

                                <TextView
