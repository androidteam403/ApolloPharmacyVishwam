<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="status"
            type="String" />
    </data>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_background">

        <RelativeLayout
            android:id="@+id/header_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/splash_start_color"
            android:paddingTop="@dimen/value_15dp"
            android:paddingBottom="@dimen/value_15dp">

            <TextView
                android:id="@+id/textHead"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Complaint list status filter"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/text_18sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/close_dialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:contentDescription="@string/app_name"
                android:paddingStart="@dimen/value_10dp"
                android:paddingEnd="@dimen/value_10dp"
                android:src="@drawable/close_icon"
                android:tint="@color/white" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/header_layout"
            android:orientation="vertical"
            android:paddingStart="@dimen/value_5dp"
            android:paddingEnd="@dimen/value_5dp"
            android:paddingBottom="@dimen/value_5dp">

            <RadioGroup
                android:id="@+id/status_radio_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                tools:ignore="UselessParent">

                <RadioButton
                    android:id="@+id/new_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/value_5dp"
                    android:checked="@{status.equals(`new`) ? true : false}"
                    android:text="@string/label_new" />

                <RadioButton
                    android:id="@+id/in_progress_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/value_5dp"
                    android:checked="@{status.equals(`inprogress`) ? true : false}"
                    android:text="@string/label_in_progress" />

                <RadioButton
                    android:id="@+id/resolved_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/value_5dp"
                    android:checked="@{status.equals(`solved`) ? true : false}"
                    android:text="@string/label_resolved" />

                <RadioButton
                    android:id="@+id/reopen_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/value_5dp"
                    android:checked="@{status.equals(`reopened`) ? true : false}"
                    android:text="@string/label_reopen" />

                <RadioButton
                    android:id="@+id/closed_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/value_5dp"
                    android:checked="@{status.equals(`closed`) ? true : false}"
                    android:text="@string/label_closed" />

            </RadioGroup>

            <Button
                android:id="@+id/submit"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/value_35dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/yellow_drawable"
                android:text="@string/label_submit"
                android:textColor="@color/black"
                android:textSize="@dimen/text_14sp" />

        </LinearLayout>


    </RelativeLayout>
</layout>
