<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="@color/white">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/value_5dp"
            app:cardElevation="3dp">


            <LinearLayout
                android:id="@+id/parentLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/pendency_green"
                android:orientation="vertical"
                android:visibility="visible">

                <LinearLayout
                    android:id="@+id/generalmanager_layout"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"

                    android:orientation="horizontal"
                    android:visibility="visible">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/logo"
                                android:layout_width="0dp"
                                android:layout_height="32dp"
                                android:layout_gravity="center"
                                android:layout_marginStart="@dimen/value_5dp"
                                android:layout_weight="0.1"
                                android:src="@drawable/user" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.5"
                                android:layout_gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/gm_empname"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppin_bold"
                                    android:text="Lena Aravinth"
                                    android:textColor="@color/black"
                                    android:textSize="13sp" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/designation"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/poppin_bold"
                                        android:text="MANAGER"
                                        android:textColor="@color/black"
                                        android:textSize="11sp" />

                                    <View
                                        android:layout_width="2dp"
                                        android:layout_height="12dp"
                                        android:layout_gravity="center"
                                        android:layout_marginStart="10dp"
                                        android:background="@color/grey" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="10dp"
                                        android:fontFamily="@font/poppins_semi_bold"
                                        android:text="ID:"
                                        android:textColor="#959595"

                                        android:textSize="12sp" />

                                    <TextView
                                        android:id="@+id/empId"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/poppin_bold"
                                        android:paddingStart="2dp"
                                        android:text="APL49396"
                                        android:textColor="@color/black"
                                        android:textSize="11sp" />
                                </LinearLayout>


                            </LinearLayout>


                            <LinearLayout
                                android:id="@+id/arrowlayout"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="2dp"
                                android:layout_weight="0.4">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_weight=".24"

                                    android:orientation="horizontal"
                                    android:weightSum="2">

                                    <RelativeLayout
                                        android:id="@+id/frLayout"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="5dp"
                                        android:layout_weight="1"
                                        android:background="@drawable/background_for_champs_green"
                                        >

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/poppin_bold"
                                            android:paddingTop="4dp"
                                            android:text="FR"
                                            android:textAlignment="center"
                                            android:textColor="@color/white"
                                            android:textSize="10sp" />

                                        <TextView
                                            android:id="@+id/frCount"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/roboto_medium"
                                            android:paddingBottom="3dp"
                                            android:text="30"
                                            android:layout_marginTop="16dp"

                                            android:textAlignment="center"
                                            android:textColor="@color/white"
                                            android:textSize="12sp" />


                                    </RelativeLayout>

                                    <RelativeLayout
                                        android:id="@+id/rtlayout"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="5dp"
                                        android:layout_weight="1"
                                        android:background="@drawable/background_for_champs_green"

                                        android:orientation="vertical">

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/poppin_bold"
                                            android:paddingTop="4dp"
                                            android:text="RT"
                                            android:textAlignment="center"
                                            android:textColor="@color/white"
                                            android:textSize="10sp" />

                                        <TextView
                                            android:id="@+id/rtCount"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/roboto_medium"
                                            android:layout_marginTop="16dp"

                                            android:paddingBottom="3dp"
                                            android:text="4"
                                            android:textAlignment="center"
                                            android:textColor="@color/white"
                                            android:textSize="12sp" />


                                    </RelativeLayout>

                                </LinearLayout>


                                <ImageView
                                    android:id="@+id/generalmanager_arrow"
                                    android:layout_width="0dp"
                                    android:layout_height="32dp"
                                    android:layout_gravity="center"
                                    android:layout_weight="0.1"
                                    android:rotation="180"
                                    android:src="@drawable/icon_back"
                                    android:tint="@color/dark_grey" />
                            </LinearLayout>


                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/gmDashboardrecycleview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:scrollbars="vertical"
                    android:visibility="gone"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:itemCount="5"
                    tools:listitem="@layout/dashboard_sites" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/no_order_found_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/roboto_bold"
                    android:gravity="center"
                    android:text="No Pending Orders Found"
                    android:textAlignment="center"
                    android:textColor="@color/black" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </RelativeLayout>
</layout>