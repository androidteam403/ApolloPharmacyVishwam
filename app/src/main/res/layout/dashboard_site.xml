<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/text_10sp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/generalmanager_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/value_55dp"
                android:background="#00acae"
                android:orientation="horizontal"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/logo"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/value_35dp"
                            android:layout_marginTop="@dimen/text_10sp"
                            android:layout_weight="0.2"
                            android:src="@drawable/qc_generalmanager" />

                        <TextView
                            android:id="@+id/gm_empname"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:layout_weight="0.6"
                            android:fontFamily="@font/roboto_medium"
                            android:text="Lena Aravind\nGeneral Manager"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_14sp" />

                        <LinearLayout
                            android:id="@+id/arrowlayout"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.3"
                            android:background="#33bdbd">

                            <TextView
                                android:id="@+id/pending_count_sum"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/text_10sp"
                                android:layout_weight="0.2"
                                android:fontFamily="@font/roboto_medium"
                                android:gravity="center_horizontal"
                                android:paddingTop="5dp"
                                android:text="20"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_18sp" />

                            <ImageView
                                android:id="@+id/generalmanager_arrow"
                                android:layout_width="0dp"
                                android:layout_height="28dp"
                                android:layout_marginTop="@dimen/text_10sp"
                                android:layout_weight="0.1"
                                android:src="@drawable/ic_baseline_arrow_forward_ios_24" />
                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/generalmanager_table_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/squarebox"
                android:orientation="horizontal"
                android:visibility="gone"
                android:weightSum="5">

                <TableLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/squarebox_right"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/empid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/squareboxright"
                        android:fontFamily="@font/roboto_bold"
                        android:paddingStart="4sp"
                        android:paddingTop="@dimen/text_10sp"
                        android:paddingBottom="@dimen/text_10sp"
                        android:text="Emp Id"
                        android:textAlignment="center"
                        android:textColor="#00acae"
                        android:textSize="12sp" />


                </TableLayout>


                <TableLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:background="@drawable/squarebox_right"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/siteId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/squareboxright"
                        android:fontFamily="@font/roboto_bold"
                        android:paddingStart="4sp"
                        android:paddingTop="@dimen/text_10sp"
                        android:paddingBottom="@dimen/text_10sp"
                        android:text="Site Details"
                        android:textAlignment="center"
                        android:textColor="#00acae"
                        android:textSize="12sp" />
                </TableLayout>

                <TableLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/squareboxtopbottom"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/pending"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/squareboxright"
                        android:fontFamily="@font/roboto_bold"
                        android:paddingStart="4sp"
                        android:paddingTop="@dimen/text_10sp"
                        android:paddingBottom="@dimen/text_10sp"
                        android:text="Pending "
                        android:textAlignment="center"
                        android:textColor="#00acae"
                        android:textSize="11sp" />


                </TableLayout>
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/gmDashboardrecycleview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/text_10sp"
                android:scrollbars="vertical"
                android:visibility="gone"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:itemCount="5"
                tools:listitem="@layout/dashboard_sites" />
        </LinearLayout>
    </RelativeLayout>
</layout>