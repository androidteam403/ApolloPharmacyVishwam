<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".ui.home.sampleui.swachlistmodule.previewlastimage.PreviewLastImageActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/light_blue"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/header_blue"
                android:orientation="horizontal"
                android:padding="@dimen/four4_dp">

                <ImageView
                    android:layout_width="@dimen/value_40dp"
                    android:layout_height="@dimen/value_40dp"
                    android:layout_gravity="center"
                    android:onClick="@{()-> callback.onClickBack()}"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_baseline_keyboard_arrow_left_24" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@{imageUrlModel.categoryname+ ` - image `+imageUrlModel.imageid}"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_17sp"
                    android:textStyle="bold" />

                <!--                <TextView-->
                <!--                    android:layout_width="wrap_content"-->
                <!--                    android:layout_height="wrap_content"-->
                <!--                    android:layout_gravity="center"-->
                <!--                    android:text="@{imageId}"-->
                <!--                    android:textColor="@color/white"-->
                <!--                    android:textSize="@dimen/text_17sp"-->
                <!--                    android:textStyle="bold" />-->


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:gravity="end">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/value_50dp"
                        android:layout_gravity="center"
                        android:visibility="gone"
                        android:src="@drawable/close_white_icon"
                        android:contentDescription="@string/app_name" />
                </LinearLayout>


            </LinearLayout>


            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginStart="@dimen/value_15dp"
                    android:layout_marginTop="@dimen/value_10dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/value_25dp"
                            android:layout_height="@dimen/value_25dp"
                            android:layout_gravity="center"
                            android:src="@drawable/storehome" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/value_8dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Store ID"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_12sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@{pendingAndApprovedModel.storeId}"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_12sp"
                                android:textStyle="bold" />


                        </LinearLayout>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/value_25dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/text_22sp"
                            android:layout_height="@dimen/text_22sp"
                            android:layout_gravity="center"
                            android:src="@drawable/calendar" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/value_6dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Uploaded"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_12sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@{pendingAndApprovedModel.status.equals(`PENDING`) ? pendingAndApprovedModel.uploadedDate : pendingAndApprovedModel.status.equals(`APPROVED`) ? pendingAndApprovedModel.approvedDate : pendingAndApprovedModel.status.equals(`RESHOOT`) ? pendingAndApprovedModel.reshootDate : pendingAndApprovedModel.status.equals(`PARTIALLY APPROVED`) ? pendingAndApprovedModel.partiallyApprovedDate : `-`}"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_12sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/value_30dp"
                    android:background="@color/header_blue"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/value_35dp"
                        android:layout_height="@dimen/value_35dp"
                        android:layout_gravity="center"
                        android:contentDescription="@string/app_name"
                        android:padding="@dimen/five5_sp"
                        android:src="@drawable/eye2withbackground" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Preview Last Uploaded"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textStyle="bold" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen400dp"
                    android:orientation="horizontal">

                    <androidx.viewpager.widget.ViewPager
                        android:id="@+id/preview_image_viewpager"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
<!--                                        <ImageView-->
<!--                                            android:layout_width="match_parent"-->
<!--                                            android:layout_height="400dp"-->
<!--                                            android:contentDescription="@string/app_name"-->
<!--                                            android:scaleType="fitXY"-->
<!--                                            android:src="@drawable/capture" />-->

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/value_40dp"
                    android:gravity="center"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Images"
                        android:textAlignment="center"
                        android:textStyle="bold" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{totalImages}"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_20sp"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/completeStatement"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/text_12sp"
                        android:text="This store review is completed Successfully"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:visibility="gone" />


                </LinearLayout>


            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:weightSum="1">

            <LinearLayout
                android:id="@+id/reshootacceptedlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:background="@drawable/redbackgroundforbutton"
                    android:onClick="@{()-> callback.onClickReShoot()}"
                    android:padding="@dimen/text_10sp"
                    android:text="RE- SHOOT"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_20sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/text_15sp"
                    android:layout_weight="0.5"
                    android:background="@drawable/greenbakgroundforbutton"
                    android:onClick="@{()-> callback.onClickAccept()}"
                    android:padding="@dimen/text_10sp"
                    android:text="ACCEPTED"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_20sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/completeButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/greenn"
                android:layout_marginTop="@dimen/value_10dp"
                android:onClick="@{()-> callback.onClickCompleted()}"
                android:orientation="horizontal"
                android:padding="@dimen/value_12dp"
                android:visibility="@{isAllComplete ? view.VISIBLE: view.GONE}">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/value_10dp"
                    android:gravity="center"
                    android:text="COMPLETE"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_17sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <data>

        <variable
            name="pendingAndApprovedModel"
            type="com.apollopharmacy.vishwam.ui.home.sampleui.swachlistmodule.fragment.model.PendingAndApproved" />

        <variable
            name="imageUrlModel"
            type="com.apollopharmacy.vishwam.ui.home.sampleui.swachlistmodule.approvelist.model.GetImageUrlsResponse.ImageUrl" />

        <variable
            name="totalImages"
            type="String" />

        <variable
            name="callback"
            type="com.apollopharmacy.vishwam.ui.home.sampleui.swachlistmodule.previewlastimage.PreviewLastImageCallback" />

        <variable
            name="isAllComplete"
            type="Boolean" />

        <variable
            name="view"
            type="android.view.View" />
    </data>
</layout>