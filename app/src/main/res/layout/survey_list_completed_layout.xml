<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/value_2dp"
        android:background="#e8f7f2"
        android:paddingVertical="@dimen/value_10dp"
        android:paddingStart="@dimen/value_30dp">

        <RelativeLayout
            android:id="@+id/header_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/survey_img"
                android:layout_width="@dimen/value_50dp"
                android:layout_height="@dimen/value_50dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/value_30dp"
                android:src="@drawable/ic_pending_list_icons_survey3" />

            <ImageView
                android:id="@+id/expand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/value_10dp"
                android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
                app:tint="@color/black" />

            <TextView
                android:id="@+id/store_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/droidsans"
                android:paddingTop="@dimen/value_5dp"
                android:text="Store ID: "
                android:textColor="#76828e"
                android:textSize="@dimen/text_12sp" />

            <TextView
                android:id="@+id/store_id_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/store_id"
                android:fontFamily="@font/droidsans"
                android:paddingTop="5dp"
                android:text="16741"
                android:textColor="@color/black"
                android:textSize="@dimen/text_12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/store_id"
                android:fontFamily="@font/droidsans"
                android:text="Gandhi Nagar,Nellore"
                android:textColor="@color/black"
                android:textSize="@dimen/text_12sp"
                android:textStyle="bold" />
        </RelativeLayout>


        <LinearLayout
            android:id="@+id/completed_status_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/header_layout"
            android:layout_marginBottom="@dimen/value_8dp"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/value_30dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/droidsans"
                    android:text="Date of the Visit"
                    android:textColor="#76828e"
                    android:textSize="@dimen/text_12sp" />

                <TextView
                    android:id="@+id/date_of_visit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/droidsans"
                    android:text="20 Dec,2022 - 10:45am"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_12sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/droidsans"
                    android:text="Status"
                    android:textColor="#76828e"
                    android:textSize="@dimen/text_12sp" />

                <TextView
                    android:id="@+id/status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/droidsans"
                    android:text="Completed"
                    android:textColor="#70a81f"
                    android:textSize="@dimen/text_12sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/completed_status_layout"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/executive_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/droidsans"
                android:text="Executive: "
                android:textColor="#76828e"
                android:textSize="@dimen/text_12sp" />

            <TextView
                android:id="@+id/executive_email_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/droidsans"
                android:text="ramesh_p@apollopharmacy.org"
                android:textColor="#1575a5"
                android:textSize="@dimen/text_12sp"
                android:textStyle="bold" />
        </LinearLayout>
    </RelativeLayout>
</layout>