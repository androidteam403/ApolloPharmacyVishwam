<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android">


    <RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7dp"
        android:background="@drawable/search_view_reject">


        <LinearLayout
            android:id="@+id/subHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/category_Image"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"

                android:src="@drawable/pharma" />


            <TextView
                android:id="@+id/medicineName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="5dp"
                android:lines="1"
                android:text="Cirizen"
                android:textColor="#135A6E"
                android:textSize="@dimen/text_12sp"
                android:textStyle="bold"
                app:fontFamily="@font/poppins_semi_bold" />

            <TextView
                android:id="@+id/category_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="24dp"
                android:layout_toRightOf="@id/medicineName"
                android:lines="1"
                android:text="Pharma"

                android:textColor="#135A6E"
                android:textSize="@dimen/text_12sp"
                android:textStyle="bold"
                app:fontFamily="@font/poppins_semi_bold" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/subHeader"
            android:layout_marginStart="@dimen/value_15dp"
            android:layout_marginBottom="8dp"

            android:orientation="horizontal"
            android:weightSum="6">


            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginBottom="8dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/quantityHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="Qty."
                    android:textSize="@dimen/text_12sp"

                    app:fontFamily="@font/poppins_medium" />


                <TextView
                    android:id="@+id/quantityText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/quantityHeader"
                    android:layout_marginStart="3dp"
                    android:text="100"
                    android:textColor="@color/black"

                    android:textSize="@dimen/text_12sp"
                    app:fontFamily="@font/poppins_medium" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/priceLayout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/priceHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="false"
                    android:text="Price"
                    android:textSize="@dimen/text_12sp"

                    app:fontFamily="@font/poppins_medium" />

                <TextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/priceHeader"
                    android:layout_alignParentRight="false"
                    android:drawableLeft="@drawable/qc_rupee_indian"
                    android:text="100"
                    android:textColor="@color/black"

                    android:textSize="@dimen/text_12sp"
                    app:fontFamily="@font/poppins_medium" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/reason_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.4">

                <TextView
                    android:id="@+id/reason_header_label__layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="Reason"
                    android:textSize="@dimen/text_12sp"

                    app:fontFamily="@font/poppins_medium" />


                <TextView
                    android:id="@+id/reason"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/reason_header_label__layout"
                    android:layout_centerHorizontal="true"

                    android:text="-"
                    android:textColor="@color/black"

                    android:textSize="10.1sp"
                    app:fontFamily="@font/poppins_medium" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5">

                <TextView
                    android:id="@+id/bulkDiscText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:text="Disc Amount"
                    android:textSize="@dimen/text_12sp"

                    app:fontFamily="@font/poppins_medium" />

                <TextView
                    android:id="@+id/discountTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/bulkDiscText"
                    android:layout_centerHorizontal="true"
                    android:drawableLeft="@drawable/qc_rupee_indian"


                    android:text="-"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_12sp"
                    app:fontFamily="@font/poppins_medium" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/marginLayout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:visibility="visible">

                <TextView
                    android:id="@+id/imageslist_header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:text="Images "
                    android:textSize="@dimen/text_12sp"
                    android:visibility="gone"
                    app:fontFamily="@font/poppins_medium" />

                <ImageView
                    android:id="@+id/eyeImage"
                    android:layout_width="21dp"
                    android:layout_height="21dp"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/apollo_icon" />
            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>


</layout>
