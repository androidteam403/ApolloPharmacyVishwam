            <!--                        android:textColor="@color/white"-->
            <!--                        android:textColorHint="@color/white"-->
            <!--                        android:textSize="@dimen/text_12sp" />-->
            <!--                </com.google.android.material.textfield.TextInputLayout>-->

            <!--            </RelativeLayout>-->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center">

                <ImageView
                    android:id="@+id/prev_page"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="5dp"
                    android:contentDescription="@string/app_name"
                    android:fontFamily="@font/roboto_medium"
                    android:gravity="center"
                    android:padding="@dimen/text_10sp"
                    android:rotation="180"
                    android:src="@drawable/ic_arrow__next_page"
                    android:textColor="@color/black"
                    android:textSize="9sp"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/pgno"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_toEndOf="@+id/prev_page"
                    android:fontFamily="@font/roboto_medium"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_13sp" />

                <ImageView
                    android:id="@+id/next_page"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="5dp"
                    android:layout_toEndOf="@+id/pgno"

                    android:contentDescription="@string/app_name"
                    android:fontFamily="@font/roboto_medium"
                    android:gravity="center"

                    android:padding="@dimen/text_10sp"
                    android:src="@drawable/ic_arrow__next_page"
                    android:textColor="@color/black"
                    android:textSize="9sp" />
            </RelativeLayout>



        </RelativeLayout>

        <LinearLayout
            android:id="@+id/bulkAppRejLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/value_60dp"
            android:layout_alignParentBottom="true"
            android:background="@color/splash_color"
            android:paddingTop="@dimen/value_10dp"
            android:paddingBottom="@dimen/value_10dp"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/selectAllLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"

                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/bulkSelectCheck"
                    android:layout_width="43dp"
                    android:layout_height="43dp"
                    android:contentDescription="@string/app_name"
                    android:padding="@dimen/value_3dp"
                    android:src="@drawable/qc_checkbox" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:text="Select All"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/acceptClick"
                android:layout_width="@dimen/value_80dp"

                android:layout_height="@dimen/value_40dp"
                android:layout_marginLeft="@dimen/dimen160dp"
                android:background="@drawable/qc_bulk_accept_background"
                android:text="Accept"
                android:textColor="@color/white"
                android:textSize="@dimen/text_13sp"
                android:visibility="visible" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/rejectClick"
                android:layout_width="@dimen/value_80dp"
                android:layout_height="@dimen/value_40dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/text_20sp"
                android:background="@drawable/qc_accept_background"
                android:text="Accept"
                android:textColor="@color/white"
                android:textSize="@dimen/text_13sp"
                android:visibility="invisible" />
        </LinearLayout>

    </RelativeLayout>
</layout>
