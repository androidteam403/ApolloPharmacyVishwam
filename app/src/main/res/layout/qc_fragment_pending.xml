<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"

        tools:context=".ui.home.qcfail.pending">
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/search_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            >
            <LinearLayout

                android:layout_width="0dp"
                android:layout_weight="0.7"
                android:layout_height="@dimen/value_45dp"
                android:layout_marginStart="@dimen/five5_sp"
                android:layout_marginTop="@dimen/value_5dp"
                android:layout_marginEnd="@dimen/five5_sp"
                android:background="@drawable/search_view_pendency"
                android:orientation="horizontal"
                android:weightSum="2"
                app:layout_constraintTop_toTopOf="parent">

                <EditText
                    android:id="@+id/search_view"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="@dimen/value_60dp"
                    android:layout_weight="1.8"
                    android:background="@color/transparent"
                    android:gravity="left|center"
                    android:hint="Search by Order ID"
                    android:imeOptions="actionSearch"
                    android:inputType="text"
                    android:maxLines="1"
                    android:paddingStart="@dimen/text_15sp"

                    android:textColor="@color/black"
                    android:textColorHint="@android:color/black"
                    android:textSize="@dimen/text_14sp" />

                <ImageView
                    android:id="@+id/close"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"

                    android:layout_marginEnd="@dimen/text_10sp"
                    android:layout_weight=".2"


                    android:src="@drawable/ic_search_24" />


                <ImageView
                    android:id="@+id/close_arrow"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/text_10sp"
                    android:layout_weight=".2"
                    android:src="@drawable/closee_black"


                    android:visibility="gone" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginEnd="@dimen/value_3dp"
                android:background="@drawable/search_view_pendency"
                android:layout_marginTop="@dimen/value_5dp"
                android:layout_width="0dp"
                android:layout_height="@dimen/value_45dp"
                android:layout_weight="0.3">

                <RelativeLayout
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:visibility="visible"

                    android:id="@+id/spinnerlayoutRelative"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/filtertypes"
                        android:gravity="center"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/value_15dp"
                        android:focusable="true"
                        android:textColorHint="@color/white"

                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:id="@+id/selectfiltertype"
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:clickable="true"
                            android:drawableEnd="@drawable/ic_baseline_arrow_black"
                            android:editable="false"
                            android:enabled="true"
                            android:focusable="false"
                            android:hint="Per Page"
                            android:paddingStart="@dimen/value_3dp"
                            android:paddingEnd="@dimen/value_10dp"
                            android:textColor="@color/black"
                            android:textColorHint="@color/black"
                            android:textSize="@dimen/text_12sp" />
                    </com.google.android.material.textfield.TextInputLayout>

                </RelativeLayout>
            </LinearLayout>



        </LinearLayout>



        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/parentLayout"
            android:layout_width="match_parent"
            android:layout_below="@id/search_layout"
            android:layout_marginTop="8dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="50dp">

            <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
                android:id="@+id/refreshSwipe"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewPending"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:itemCount="5"
                    tools:listitem="@layout/qc_pending_layout" />

            </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="30dp"
                android:backgroundTint="@color/backgroundColor"
                android:elevation="20dp"

                android:src="@drawable/ic_filter"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent" />

            <RelativeLayout
                android:id="@+id/emptyList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/emptyImage"
                    android:layout_width="@dimen/value_120dp"
                    android:layout_height="@dimen/value_120dp"
                    android:layout_centerInParent="true"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/qca" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/emptyImage"
                    android:text="No Pending Request Available"
                    android:textColor="@color/backgroundColor"
                    android:textSize="15dp" />

            </RelativeLayout>

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminateTint="@color/backgroundColor"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <RelativeLayout
            android:id="@+id/continue_btn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/value_50dp"
            android:layout_alignParentBottom="true"
            android:background="@color/splash_color"
            android:gravity="center_vertical"
            android:visibility="visible">

