<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="wrap_content">


        <RelativeLayout
            android:background="@color/white"
            android:id="@+id/category_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_marginBottom="@dimen/value_1dp"
                android:id="@+id/apply_bg_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >



                <LinearLayout
                    android:baselineAligned="false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/value_5dp"
                    android:weightSum="1">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.85"
                        android:orientation="vertical"
                        android:padding="@dimen/value_10dp">

                        <TextView
                            android:id="@+id/category_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/value_10dp"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_16sp"
                            android:textStyle="bold" />



                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginEnd="@dimen/value_10dp"
                        android:layout_weight="0.15"
                        android:gravity="end">



                        <ImageView
                            android:contentDescription="@string/app_name"
                            android:id="@+id/right_arrow"
                            android:layout_width="@dimen/twenty20_dp"
                            android:layout_height="@dimen/twenty20_dp"
                            android:src="@drawable/clock_small"
                            android:visibility="visible"
                            app:tint="@color/dark_gray" />

                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>



        </RelativeLayout>

    <LinearLayout

        android:visibility="gone"
        android:id="@+id/recyclerView_button_layout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.recyclerview.widget.RecyclerView
            android:layout_margin="@dimen/text_dimen_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/subCategory_planogram_recyclerView"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_marginBottom="@dimen/value_5dp"
            android:layout_marginTop="@dimen/text_dimen_10"
            android:layout_width="@dimen/value_150dp"
            android:layout_height="@dimen/dimen36dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textAlignment="center"
            android:background="@drawable/rounded_dark_bluee"
            android:hint="Save and Continue"
            android:textStyle="bold"
            android:textColorHint="@color/colorWhite"
            android:textSize="@dimen/text_16sp" />
    </LinearLayout>





</LinearLayout>
</layout>