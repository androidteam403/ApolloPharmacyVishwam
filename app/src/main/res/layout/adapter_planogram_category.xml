<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="@dimen/value_3dp"
        android:orientation="vertical">


        <RelativeLayout
            android:id="@+id/category_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <LinearLayout
                android:id="@+id/apply_bg_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/value_1dp"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/value_5dp"
                    android:baselineAligned="false"
                    android:weightSum="1">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.85"
                        android:orientation="vertical"
                        android:padding="@dimen/value_10dp">

                        <TextView
                            android:id="@+id/category_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/value_10dp"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_16sp"
                            android:textStyle="bold" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginEnd="@dimen/value_10dp"
                        android:layout_weight="0.15"
                        android:gravity="end">


                        <ImageView
                            android:id="@+id/right_arrow"
                            android:layout_width="@dimen/twenty20_dp"
                            android:layout_height="@dimen/twenty20_dp"
                            android:contentDescription="@string/app_name"
                            android:src="@drawable/clock_small"
                            android:visibility="visible"
                            app:tint="@color/dark_gray" />

                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>


        </RelativeLayout>

        <LinearLayout
            android:id="@+id/recyclerView_button_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/subCategory_planogram_recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/text_dimen_10" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="@dimen/value_150dp"
                android:layout_height="@dimen/dimen36dp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/text_dimen_10"
                android:layout_marginBottom="@dimen/value_5dp"
                android:background="@drawable/rounded_dark_bluee"
                android:gravity="center"
                android:hint="Save and Continue"
                android:textAlignment="center"
                android:textColorHint="@color/colorWhite"
                android:textSize="@dimen/text_16sp"
                android:textStyle="bold" />
        </LinearLayout>


    </LinearLayout>
</layout>