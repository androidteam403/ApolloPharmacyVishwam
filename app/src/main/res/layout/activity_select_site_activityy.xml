<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/no_order_found_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="No Site Id's Found"
                android:textColor="@color/red"
                android:textSize="@dimen/text_14sp"
                android:textStyle="bold"
                android:visibility="gone" />

            <RelativeLayout
                android:id="@+id/header_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/vishwam_actionbar_height"
                android:background="@color/vishwam_actionbar_color"
                android:paddingTop="@dimen/value_15dp"
                android:paddingBottom="@dimen/value_10dp">


                <TextView
                    android:id="@+id/textHead"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="Select Store ID"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/text_18sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/close_dialog"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/value_10dp"
                    android:contentDescription="@string/app_name"
                    android:onClick="@{()-> callback.onClickCancel()}"
                    android:src="@drawable/icon_close"
                    app:tint="@color/white" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/header_layout"
                android:orientation="vertical">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/searchSite"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/value_10dp"
                    android:layout_marginTop="@dimen/value_5dp"
                    android:layout_marginEnd="@dimen/value_10dp">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/searchSiteText"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/value_50dp"
                        android:drawableStart="@drawable/ic_search_grey"
                        android:drawablePadding="@dimen/value_10dp"
                        android:gravity="center_vertical"
                        android:hint="@string/label_search_site_id"
                        android:paddingStart="@dimen/value_10dp"
                        android:paddingEnd="@dimen/value_10dp"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_15sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:id="@+id/siteNotAvailable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/value_40dp"
                    android:layout_marginBottom="@dimen/value_40dp"
                    android:text="@string/label_site_not_available"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_18sp"
                    android:visibility="gone" />


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/storeIdsRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/value_12dp"
                    android:layout_marginTop="@dimen/value_10dp"

                    android:layout_marginEnd="@dimen/value_5dp"
                    android:orientation="horizontal"
                    android:visibility="visible"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/fieldRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/value_5dp"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/view_item_row" />


            </LinearLayout>


            <LinearLayout
                android:id="@+id/completeButton"
                android:layout_width="match_parent"
                android:layout_height="@dimen/value_50dp"
                android:layout_alignParentBottom="true"
                android:background="@color/vishwam_actionbar_color"
                android:gravity="center"
                android:onClick="@{()-> callback.onClickCompleted()}"
                android:orientation="horizontal"
                android:padding="@dimen/value_12dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="SELECT"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_17sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>


    <data>

        <variable
            name="callback"
            type="com.apollopharmacy.vishwam.ui.home.swach.swachlistmodule.siteIdselect.SelectSiteIdCallback" />
    </data>

</layout>
