<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="14dp"
        android:id="@+id/cardView"
        app:cardCornerRadius="@dimen/value_5dp"
        app:cardElevation="3dp"

        app:strokeColor="@color/light_ash"
        app:strokeWidth="0.10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="@color/white"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/taskCompletedLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"


                android:orientation="vertical"
                android:visibility="visible">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/text_12sp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_medium"
                            android:text="Champs Reference ID :  "
                            android:textColor="@color/grey"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/champsRefId"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2.8"
                            android:fontFamily="@font/poppin_bold"
                            android:textColor="@color/black"
                            android:textSize="11.5sp" />

                        <ImageView
                            android:layout_width="@dimen/text_dimen_20"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_baseline_more_vert_24"
                            android:visibility="gone" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="3dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"


                            android:fontFamily="@font/roboto_medium"
                            android:text="Site Name :  "
                            android:textColor="@color/grey"
                            android:textSize="@dimen/text_12sp" />

                        <TextView
                            android:id="@+id/siteName"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/poppin_bold"
                            android:textColor="@color/black"
                            android:textSize="11.5sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="3dp"
                        android:orientation="horizontal"

                        android:weightSum="2">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/roboto_medium"
                                android:text="Visit Date :  "
                                android:textColor="@color/grey"
                                android:textSize="@dimen/text_12sp" />

                            <TextView
                                android:id="@+id/visitDate"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/poppin_bold"
                                android:textColor="@color/black"
                                android:textSize="11.5sp" />

                        </LinearLayout>

                        <!--                        <LinearLayout-->
                        <!--                            android:visibility="gone"-->
                        <!--                            android:layout_width="0dp"-->
                        <!--                            android:layout_height="match_parent"-->
                        <!--                            android:layout_weight="1"-->
                        <!--                            android:orientation="vertical">-->

                        <!--                            <TextView-->
                        <!--                                android:layout_width="wrap_content"-->
                        <!--                                android:layout_height="wrap_content"-->
                        <!--                                android:fontFamily="@font/roboto_medium"-->
                        <!--                                android:text="Survey Ended :  "-->
                        <!--                                android:textColor="@color/grey"-->
                        <!--                                android:textSize="12sp" />-->

                        <!--                            <TextView-->
                        <!--                                android:id="@+id/surveyended"-->
                        <!--                                android:layout_width="wrap_content"-->
                        <!--                                android:layout_height="match_parent"-->
                        <!--                                android:fontFamily="@font/poppin_bold"-->
                        <!--                                android:text="12 Apr,2023-4:30PM"-->
                        <!--                                android:textColor="@color/black"-->
                        <!--                                android:textSize="11.5sp" />-->

                        <!--                        </LinearLayout>-->

                    </LinearLayout>


                    <LinearLayout
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="3dp"

                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_medium"
                            android:text="Surveyed By :  "
                            android:textColor="@color/grey"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/surveyby"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".7"
                            android:fontFamily="@font/poppin_bold"
                            android:text="Anjaneyulu"
                            android:textColor="@color/black"
                            android:textSize="11.5sp" />
                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/grey">

                </View>

                <LinearLayout
                    android:id="@+id/statusLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="visible"
                    android:weightSum="3">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.4"
                        android:orientation="horizontal"
                        android:paddingBottom="@dimen/value_5dp">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginLeft="6dp"
                            android:fontFamily="@font/roboto_medium"
                            android:paddingTop="5dp"
                            android:text="Status : "
                            android:textColor="@color/grey"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/status"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/poppin_bold"
                            android:paddingTop="6dp"
                            android:textSize="11.5sp" />
                    </LinearLayout>


                    <LinearLayout
                        android:visibility="gone"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.6"
                        android:orientation="horizontal"

                        android:paddingBottom="9dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/value_10dp"
                            android:fontFamily="@font/roboto_medium"
                            android:paddingTop="6dp"
                            android:text="Time Taken : "
                            android:textColor="@color/grey"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/timeTaken"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/poppin_bold"

                            android:paddingTop="7dp"
                            android:textColor="@color/white"
                            android:textSize="11.5sp" />
                        <!--                   pending textcolor     android:textColor="#f26522"-->

                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>


        </LinearLayout>


    </androidx.cardview.widget.CardView>
</layout>
