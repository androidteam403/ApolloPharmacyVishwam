<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="callback"
            type="com.apollopharmacy.vishwam.ui.home.communityadvisor.servicescustomerinteraction.ServicesCustomerCallback" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/vishwam_actionbar_height"
                android:background="@color/vishwam_actionbar_color">

                <TextView
                    android:id="@+id/left_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dimen15dp"
                    android:background="@drawable/icon_back_arrow" />

                <TextView
                    android:id="@+id/services_actionbar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/value_5dp"
                    android:layout_toEndOf="@+id/left_arrow"
                    android:text="@string/stringnew_service_request"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_18sp"
                    android:textStyle="bold"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/customer_interaction_actionbar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/value_5dp"
                    android:layout_toEndOf="@+id/left_arrow"
                    android:text="@string/stringcustomer_interaction"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_18sp"
                    android:textStyle="bold"
                    android:visibility="gone" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen15dp"
                android:layout_marginTop="@dimen/text_dimen_10"
                android:layout_marginRight="@dimen/dimen15dp"
                android:orientation="vertical">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/servicesLayout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/value_10dp"
                    android:theme="@style/TextLabelEditText">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/site_id"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/value_50dp"
                        android:cursorVisible="false"
                        android:digits="0123456789"
                        android:drawableEnd="@drawable/edit"
                        android:editable="false"
                        android:focusable="false"
                        android:hint="@string/stringsite"
                        android:inputType="number"
                        android:maxLength="20"
                        android:paddingStart="@dimen/value_10dp"
                        android:paddingEnd="@dimen/value_10dp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_15sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/customerNameLayout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/value_10dp"
                    android:theme="@style/TextLabelEditText">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/customerName"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="@string/label_customer_name_"
                        android:inputType="text"
                        android:maxLength="20"
                        android:paddingStart="@dimen/value_10dp"
                        android:paddingEnd="@dimen/value_10dp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_15sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/mobileLayout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/value_10dp"
                    android:theme="@style/TextLabelEditText">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/mobileNumber"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/value_50dp"
                        android:digits="0123456789"
                        android:hint="@string/stringmobile_number"
                        android:inputType="number"
                        android:maxLength="10"
                        android:paddingStart="@dimen/value_10dp"
                        android:paddingEnd="@dimen/value_10dp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_15sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/value_10dp"
                    android:text="@string/string_services_"
                    android:textColor="@color/vishwam_actionbar_color"
                    android:textSize="@dimen/twenty20_sp" />

                <LinearLayout
                    android:id="@+id/service_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/value_5dp"
                    android:visibility="visible">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/service_recycler"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />
                </LinearLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/description"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/value_10dp"
                    android:theme="@style/TextLabelEditText"
                    app:counterEnabled="true"
                    app:counterMaxLength="500"
                    app:layout_constraintTop_toBottomOf="@+id/extraLayout">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/comments_text"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/value_100dp"
                        android:gravity="top|start"
                        android:hint="@string/stringcomments"
                        android:inputType="textMultiLine"
                        android:maxLength="500"
                        android:paddingStart="@dimen/value_10dp"
                        android:paddingEnd="@dimen/value_10dp"
                        android:scrollbars="vertical"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_15sp" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

        </LinearLayout>
</ScrollView>

        <TextView
            android:id="@+id/submit_button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/vishwam_actionbar_height"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:background="@color/vishwam_actionbar_color"
            android:gravity="center"
            android:text="@string/stringsubmit"
            android:textColor="@color/white"
            android:textSize="@dimen/text_18sp"
            android:textStyle="bold" />


    </RelativeLayout>
</layout>