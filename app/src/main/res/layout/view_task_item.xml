<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="isSignOutEmpty"
            type="Boolean" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginBottom="10dp"

        app:cardCornerRadius="@dimen/value_5dp"
        app:cardElevation="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#dbf2f8"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:id="@+id/viewTaskLayout"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/value_5dp"
                    android:orientation="vertical"
                    android:layout_weight=".8">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppin_bold"
                        android:paddingStart="@dimen/value_10dp"
                        android:paddingTop="@dimen/value_8dp"
                        android:text="Task"
                        android:textSize="11sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/value_5dp"
                        android:fontFamily="@font/poppin_bold"
                        android:paddingStart="@dimen/five5_sp"
                        android:id="@+id/taskName"

                        android:paddingTop="4dp"
                        android:text="DR Connect - Doctor Visit"
                        android:textColor="@color/black"
                        android:textSize="12sp" />


                </LinearLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".2"
                    android:layout_marginTop="12dp"

                    android:visibility="visible">

                    <ImageView
                        android:id="@+id/viewExpand"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:rotation="90"

                        android:layout_centerInParent="true"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/rightarrow"
                        android:visibility="visible" />

                    <ImageView
                        android:id="@+id/viewCollapse"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_centerInParent="true"

                        android:contentDescription="@string/app_name"
                        android:src="@drawable/rightarrow"
                        android:visibility="gone" />
                </RelativeLayout>




            </LinearLayout>




            <LinearLayout
                android:id="@+id/taskCompletedLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#dbf2f8"
                android:orientation="vertical"
                android:visibility="visible">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="8dp"
                    android:background="#CCCCCC">

                </View>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".9"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="15dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_marginTop="6dp"
                                android:src="@drawable/baseline_history_20"

                                android:visibility="visible" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="10dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginEnd="@dimen/value_10dp"

                                    android:fontFamily="@font/roboto_medium"
                                    android:text="Task In Time"

                                    android:textColor="#889a9c"

                                    android:textSize="11sp" />

                                <TextView
                                    android:id="@+id/signInTime"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="10dp"
                                    android:layout_marginEnd="@dimen/value_10dp"
                                    android:fontFamily="@font/poppin_bold"

                                    android:text="09 March"
                                    android:textColor="@color/black"

                                    android:textSize="11sp" />


                            </LinearLayout>
                        </LinearLayout>


                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#CCCCCC">

                    </View>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".9"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="15dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_marginTop="6dp"
                                android:src="@drawable/baseline_history_20"

                                android:visibility="visible" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="10dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginEnd="@dimen/value_10dp"

                                    android:fontFamily="@font/roboto_medium"
                                    android:text="Task Out Time"

                                    android:textColor="#889a9c"

                                    android:textSize="11sp" />

                                <TextView
                                    android:id="@+id/signOutTime"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="10dp"
                                    android:layout_marginEnd="@dimen/value_10dp"
                                    android:fontFamily="@font/poppin_bold"

                                    android:text="09 March"
                                    android:textColor="@color/black"

                                    android:textSize="11sp" />


                            </LinearLayout>
                        </LinearLayout>


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="35dp"
                        android:layout_marginTop="17dp"
                        android:layout_marginEnd="@dimen/value_30dp"
                        android:layout_weight="1"

                        android:orientation="vertical"
                        android:visibility="gone">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="67dp"

                            app:cardCornerRadius="3dp"
                            app:cardElevation="3dp"
                            app:cardUseCompatPadding="true">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="@dimen/value_10dp"
                                    android:fontFamily="@font/roboto_medium"

                                    android:paddingStart="10sp"
                                    android:paddingTop="7dp"
                                    android:text="Duration"
                                    android:textColor="#889a9c"
                                    android:textSize="10sp" />

                                <LinearLayout
                                    android:layout_width="match_parent"

                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:weightSum="3">

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:orientation="vertical">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/roboto_medium"
                                            android:paddingStart="10sp"
                                            android:paddingTop="1dp"

                                            android:text="Hrs"
                                            android:textColor="#889a9c"
                                            android:textSize="10sp" />

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/poppin_bold"
                                            android:paddingStart="10sp"
                                            android:paddingBottom="5dp"
                                            android:text="22"
                                            android:textColor="#4f9b99"
                                            android:textSize="10sp" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:orientation="vertical">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/roboto_medium"
                                            android:paddingStart="10sp"
                                            android:paddingTop="1dp"

                                            android:text="Min"
                                            android:textColor="#889a9c"
                                            android:textSize="10sp" />

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/poppin_bold"
                                            android:paddingStart="10sp"
                                            android:paddingBottom="5dp"
                                            android:text="05"
                                            android:textColor="#4f9b99"
                                            android:textSize="10sp" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:orientation="vertical">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/roboto_medium"
                                            android:paddingStart="10sp"
                                            android:paddingTop="1dp"

                                            android:text="Sec"
                                            android:textColor="#889a9c"
                                            android:textSize="10sp" />

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/poppin_bold"
                                            android:paddingStart="10sp"
                                            android:paddingBottom="5dp"
                                            android:text="22"
                                            android:textColor="#4f9b99"
                                            android:textSize="10sp" />
                                    </LinearLayout>
                                </LinearLayout>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                    </LinearLayout>
                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#CCCCCC">

                </View>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="#dbf2f8"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_medium"
                        android:paddingTop="@dimen/text_dimen_8"
                        android:paddingBottom="5dp"
                        android:text="Duration"
                        android:textAlignment="center"
                        android:paddingEnd="28dp"
                        android:textColor="#889a9c"

                        android:textSize="12sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="200dp"
                            android:layout_height="50dp"

                            android:layout_marginStart="@dimen/value_15dp"
                            android:orientation="horizontal"
                            android:weightSum="4">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@drawable/border_grey"
                                android:orientation="vertical">


                                <TextView
                                    android:id="@+id/durationTexthrs"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppin_bold"
                                    android:paddingTop="@dimen/text_dimen_10"
                                    android:text="22"
                                    android:textAlignment="center"
                                    android:textColor="@color/black"
                                    android:textSize="14sp" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/roboto_medium"
                                    android:text="Hrs"

                                    android:textAlignment="center"
                                    android:textColor="#889a9c"
                                    android:textSize="12sp" />
                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="1"
                                android:background="@drawable/border_grey"

                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/durationTextminutes"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppin_bold"
                                    android:paddingTop="10dp"
                                    android:text="05"
                                    android:textAlignment="center"
                                    android:textColor="@color/black"
                                    android:textSize="14sp" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/roboto_medium"
                                    android:paddingStart="2dp"
                                    android:text="Min"
                                    android:textAlignment="center"
                                    android:textColor="#889a9c"
                                    android:textSize="12sp" />


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="1"
                                android:background="@drawable/border_grey"

                                android:orientation="vertical">


                                <TextView
                                    android:id="@+id/durationTextsecs"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppin_bold"
                                    android:paddingTop="10dp"
                                    android:text="22"
                                    android:textAlignment="center"
                                    android:textColor="@color/black"
                                    android:textSize="14sp" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/roboto_medium"
                                    android:text="Sec"

                                    android:textAlignment="center"
                                    android:textColor="#889a9c"
                                    android:textSize="12sp" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>



            <LinearLayout
                android:id="@+id/taskPendingLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/active_task_color_new"
                android:orientation="vertical"
                android:paddingBottom="@dimen/value_7dp"
                android:visibility="visible">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/value_1dp"
                    android:layout_marginBottom="@dimen/value_7dp"
                    android:background="@color/dialog_corner_color" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="@dimen/value_10dp"

                    android:fontFamily="@font/roboto_medium"
                    android:text="Current Time"

                    android:textColor="#889a9c"

                    android:textSize="11sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/pendingSignInTime"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/value_15dp"
                        android:layout_marginEnd="@dimen/value_10dp"
                        android:fontFamily="@font/poppin_bold"
                        android:paddingTop="2dp"
                        android:text="12222222"
                        android:textColor="@color/black"
                        android:textSize="12dp" />

                    <RelativeLayout
                        android:id="@+id/signOutLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/twenty_seven27_dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/value_30dp"
                            android:layout_height="@dimen/value_25dp"
                            android:layout_marginStart="@dimen/value_10dp"
                            android:layout_marginEnd="@dimen/value_10dp"
                            android:contentDescription="@string/app_name"
                            android:src="@drawable/ic_sign_out"
                            android:visibility="gone" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="23dp"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="18dp"
                            android:background="@drawable/bg_buttons"
                            android:fontFamily="@font/poppin_bold"
                            android:gravity="center"
                            android:paddingStart="7dp"
                            android:paddingEnd="7dp"
                            android:text="@string/label_task_sign_out"
                            android:textColor="@color/black"
                            android:textSize="@dimen/dimen10sp" />
                    </RelativeLayout>

                </LinearLayout>


            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>
