<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

    </data>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/value_15dp"
        android:layout_marginRight="@dimen/value_15dp"
        android:background="@drawable/dialog_background"
        android:stateListAnimator="@null">

        <TextView
            android:id="@+id/title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/value_12dp"
            android:paddingTop="@dimen/value_15dp"
            android:paddingRight="@dimen/value_12dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="@dimen/text_19sp" />

        <TextView
            android:id="@+id/subtitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:paddingLeft="@dimen/value_12dp"
            android:paddingTop="@dimen/value_4dp"
            android:paddingRight="@dimen/value_12dp"
            android:paddingBottom="@dimen/value_15dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="@dimen/text_15sp" />

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/value_1dp"
            android:layout_below="@+id/subtitle"
            android:background="#cdced2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dialogButtonNO"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="@dimen/value_12dp"
                android:paddingBottom="@dimen/value_12dp"
                android:stateListAnimator="@null"
                android:textAlignment="center"
                android:textColor="#007aff"
                android:textSize="@dimen/text_19sp" />

            <View
                android:id="@+id/separator"
                android:layout_width="@dimen/value_1dp"
                android:layout_height="match_parent"
                android:background="#cdced2" />

            <TextView
                android:id="@+id/dialogButtonOK"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="@dimen/value_12dp"
                android:paddingBottom="@dimen/value_12dp"
                android:stateListAnimator="@null"
                android:textAlignment="center"
                android:textColor="#007aff"
                android:textSize="@dimen/text_19sp" />
        </LinearLayout>
    </RelativeLayout>
</layout>