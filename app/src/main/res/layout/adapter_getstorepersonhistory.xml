<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/light_blue">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <androidx.cardview.widget.CardView
            android:id="@+id/cardview"
            android:layout_marginTop="@dimen/value_5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible">


            <LinearLayout
                android:id="@+id/orderHead"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/value_5dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/overallLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorWhite"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/value_10dp"
                        android:layout_marginTop="@dimen/value_5dp"
                        android:layout_marginEnd="@dimen/value_5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="On: " />

                        <TextView
                            android:id="@+id/date_details"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="26 July, 2022 - 10:30 AM"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_12sp"
                            android:textStyle="bold" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/value_10dp"
                        android:layout_marginEnd="@dimen/value_5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="By: " />

                        <TextView
                            android:id="@+id/by_details"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sundar Kumar - 1225566"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_12sp"
                            android:textStyle="bold" />


                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/value_1dp"
                        android:layout_marginTop="@dimen/value_8dp"
                        android:background="@color/color_ash" />


                    <LinearLayout
                        android:visibility="gone"
                        android:id="@+id/green_approved_layot"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:padding="@dimen/value_3dp"
                        android:layout_marginStart="@dimen/value_7dp"
                        android:layout_marginTop="@dimen/value_5dp"
                        android:layout_marginEnd="@dimen/value_5dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/text_18sp"
                            android:layout_height="@dimen/text_18sp"
                            android:src="@drawable/greenright" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:textSize="@dimen/text_12sp"
                            android:layout_marginStart="@dimen/five5_sp"
                            android:text="Status: " />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Approved"
                            android:textAlignment="center"
                            android:textSize="@dimen/text_12sp"
                            android:textColor="@color/greenn" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/value_7dp"
                            android:text="10/10"
                            android:textSize="@dimen/text_12sp"
                            android:textAlignment="viewEnd"
                            android:textColor="@color/black"

                            android:textStyle="bold" />


                    </LinearLayout>

                    <LinearLayout
                        android:visibility="gone"
                        android:id="@+id/re_shoot_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:padding="@dimen/value_3dp"
                        android:layout_marginStart="@dimen/value_7dp"
                        android:layout_marginTop="@dimen/value_5dp"
                        android:layout_marginEnd="@dimen/value_5dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/text_13sp"
                            android:layout_height="@dimen/text_13sp"
                            android:layout_gravity="center"
                            android:src="@drawable/clock_small" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:textSize="@dimen/text_12sp"
                            android:layout_marginStart="@dimen/five5_sp"
                            android:text="Status: " />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Re Shoot"
                            android:textAlignment="center"
                            android:textSize="@dimen/text_12sp"
                            android:textColor="@color/red" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/value_7dp"
                            android:text="5/10"
                            android:textSize="@dimen/text_12sp"
                            android:textAlignment="viewEnd"
                            android:textColor="@color/black"

                            android:textStyle="bold" />


                    </LinearLayout>

                    <LinearLayout
                        android:visibility="gone"
                        android:id="@+id/pending_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:padding="@dimen/value_3dp"
                        android:layout_marginStart="@dimen/value_7dp"
                        android:layout_marginTop="@dimen/value_5dp"
                        android:layout_marginEnd="@dimen/value_5dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/text_13sp"
                            android:layout_height="@dimen/text_13sp"
                            android:layout_gravity="center"
                            android:src="@drawable/clock_small" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:textSize="@dimen/text_12sp"
                            android:layout_marginStart="@dimen/five5_sp"
                            android:text="Status: " />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pending"
                            android:textAlignment="center"
                            android:textSize="@dimen/text_12sp"
                            android:textColor="@color/red" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/value_7dp"
                            android:text="5/10"
                            android:textSize="@dimen/text_12sp"
                            android:textAlignment="viewEnd"
                            android:textColor="@color/black"

                            android:textStyle="bold" />


                    </LinearLayout>

                    <LinearLayout
                        android:visibility="gone"
                        android:id="@+id/not_updated_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/five5_sp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:background="@color/light_pink"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/text_13sp"
                            android:layout_height="@dimen/text_13sp"
                            android:layout_gravity="center"
                            android:layout_marginStart="@dimen/value_6dp"
                            android:src="@drawable/clock_small" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:textSize="@dimen/text_12sp"
                            android:layout_marginStart="@dimen/five5_sp"
                            android:text="Status: " />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Not Updated"
                            android:textAlignment="center"
                            android:textSize="@dimen/text_12sp"
                            android:textColor="@color/red" />

                        <TextView
                            android:padding="@dimen/value_3dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/value_7dp"
                            android:text="10/10"
                            android:textSize="@dimen/text_12sp"
                            android:textAlignment="viewEnd"
                            android:textColor="@color/black"

                            android:textStyle="bold" />


                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>

        </androidx.cardview.widget.CardView>




    </LinearLayout>

</RelativeLayout>