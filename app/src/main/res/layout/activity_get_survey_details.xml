<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/text_color_blue"
                android:orientation="horizontal"
                android:visibility="visible"
                android:padding="@dimen/value_10dp">

                <ImageView
                    android:onClick="@{()-> callback.onClickback()}"
                    android:layout_width="@dimen/value_32dp"
                    android:layout_height="32dp"
                    android:layout_marginTop="4dp"
                    android:contentDescription="@string/app_name"
                    android:tint="@color/white"
                    android:src="@drawable/ic_baseline_keyboard_arrow_left_24"
                    tools:ignore="UseAppTint" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Survey Details List"
                        android:layout_marginStart="6dp"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold" />


                </LinearLayout>

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="end"
                    android:orientation="horizontal">



                    <ImageView
                        android:onClick="@{()-> callback.onClickPlusIcon()}"
                        android:contentDescription="TODO"
                        android:layout_width="@dimen/value_30dp"
                        android:layout_height="@dimen/value_30dp"
                        android:background="@drawable/green_backgroundplus"
                        android:layout_marginEnd="20sp"
                        android:paddingTop="8dp"
                        android:paddingBottom="@dimen/value_8dp"
                        android:layout_gravity="center"
                        android:src="@drawable/plus" />

                    <RelativeLayout
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:onClick="@{()-> callback.onClickFilterIcon()}"
                        android:id="@+id/filterIcon"
                        android:layout_width="@dimen/value_20dp"
                        android:layout_height="@dimen/value_20dp"
                        android:layout_marginStart="@dimen/value_10dp"
                        android:visibility="visible">

                        <ImageView
                            android:layout_width="@dimen/value_20dp"
                            android:layout_height="@dimen/value_20dp"
                            android:contentDescription="@string/app_name"
                            android:src="@drawable/filtersnew"
                            android:visibility="visible" />

                        <View
                            android:id="@+id/filter_indication"
                            android:layout_width="@dimen/value_5dp"
                            android:layout_height="@dimen/value_5dp"
                            android:layout_alignParentEnd="true"
                            android:background="@drawable/red_indication"
                            android:visibility="gone" />
                    </RelativeLayout>
                    <!--                    <ImageView-->
                    <!--                        android:layout_width="@dimen/value_25dp"-->
                    <!--                        android:layout_height="@dimen/value_25dp"-->
                    <!--                        android:layout_marginEnd="20sp"-->

                    <!--                        android:layout_gravity="center"-->
                    <!--                        android:src="@drawable/filtersnew"-->
                    <!--                       android:contentDescription="TODO" />-->

                </LinearLayout>
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:itemCount="3"
                tools:listitem="@layout/apna_survey_layout" />

        </LinearLayout>


        <TextView
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No Survey details found"
            android:textColor="@color/red"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:visibility="gone"
            android:id="@+id/noListFound"/>



    </RelativeLayout>
    <data>

        <variable
            name="callback"
            type="com.apollopharmacy.vishwam.ui.home.champs.survey.getSurveyDetailsList.GetSurveyDetailsListCallback" />
    </data>
</layout>