<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".ui.home.notification.NotificationsActivity">

        <LinearLayout
            android:id="@+id/header_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/vishwam_actionbar_height"
            android:background="@color/vishwam_actionbar_color">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/backButton"
                    android:layout_width="37dp"
                    android:layout_height="37dp"
                    android:layout_centerVertical="true"
                    android:onClick="@{()->callback.onclickBackArrow()}"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/value_12dp"
                    android:layout_marginEnd="@dimen/value_10dp"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/icon_back_arrow" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Notifications"
                    android:textColor="@color/white_for_both"
                    android:textSize="@dimen/text_17sp" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/help_icon"
                    android:layout_width="@dimen/value_30dp"
                    android:layout_height="@dimen/value_30dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/dimen20dp"
                    android:contentDescription="@string/app_name"
                    android:onClick="@{()->callback.onclickHelpIcon()}"
                    android:src="@drawable/help"
                    android:tint="@color/grey"
                    tools:ignore="UseAppTint" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/header_layout">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/notificationsRcv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/value_4dp"
                tools:itemCount="3"
                tools:listitem="@layout/notification_layout" />
        </LinearLayout>
    </RelativeLayout>

    <data>

        <variable
            name="callback"
            type="com.apollopharmacy.vishwam.ui.home.notification.NotificationsActivityCallback" />
    </data>
</layout>