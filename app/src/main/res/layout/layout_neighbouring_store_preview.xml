<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/value_5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium"
                android:text="Neighbouring Store (left)"
                android:textSize="@dimen/text_12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/value_40dp"
                android:layout_marginBottom="@dimen/value_8dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/value_2dp"
                        android:fontFamily="@font/roboto_medium"
                        android:text="Store"
                        android:textSize="@dimen/text_12sp" />

                    <TextView
                        android:id="@+id/store"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/value_2dp"
                        android:fontFamily="@font/roboto_medium"
                        android:text="Rajeev Pharmacy"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/value_2dp"
                        android:fontFamily="@font/roboto_medium"
                        android:text="Rent"
                        android:textSize="@dimen/text_12sp" />

                    <TextView
                        android:id="@+id/rent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/value_2dp"
                        android:drawableLeft="@drawable/rupee_apna"
                        android:fontFamily="@font/roboto_medium"
                        android:text="100"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_12sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/value_40dp"
                android:layout_marginBottom="@dimen/value_8dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/value_2dp"
                        android:fontFamily="@font/roboto_medium"
                        android:text="Sales"
                        android:textSize="@dimen/text_12sp" />

                    <TextView
                        android:id="@+id/sales"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/value_2dp"
                        android:drawableLeft="@drawable/rupee_apna"
                        android:fontFamily="@font/roboto_medium"
                        android:text="100"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/value_2dp"
                        android:fontFamily="@font/roboto_medium"
                        android:text="Sq.ft"
                        android:textSize="@dimen/text_12sp" />

                    <TextView
                        android:id="@+id/sqft"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:drawableLeft="@drawable/rupee_apna"
                        android:fontFamily="@font/roboto_medium"
                        android:text="100"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_12sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</layout>