<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_background">

        <RelativeLayout
            android:id="@+id/header_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/vishwam_actionbar_color"
            android:paddingTop="@dimen/value_15dp"
            android:paddingBottom="@dimen/value_15dp">

            <TextView
                android:id="@+id/headerText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Select Trainers"
                android:textColor="@color/white_for_both"
                android:textSize="@dimen/text_18sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/close_dialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:contentDescription="@string/app_name"
                android:paddingStart="@dimen/value_10dp"
                android:paddingEnd="@dimen/value_10dp"
                android:src="@drawable/close_icon"
                android:tint="@color/white_for_both"
                tools:ignore="UseAppTint" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/header_layout"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/searchLocation"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/value_10dp"
                android:layout_marginTop="@dimen/value_10dp"
                android:layout_marginEnd="@dimen/value_10dp"
                android:textColorHint="@color/black">
                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/searchLocationListText"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/value_50dp"
                    android:hint="Search Email"
                    android:paddingStart="@dimen/value_10dp"
                    android:paddingEnd="@dimen/value_10dp"
                    android:singleLine="true"
                    android:gravity="center_vertical"
                    android:drawablePadding="@dimen/value_10dp"
                    android:drawableStart="@drawable/close_blue_new"
                    android:drawableTint="@color/grey"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_15sp" />

<!--                <androidx.appcompat.widget.AppCompatEditText-->
<!--                    android:id="@+id/searchLocationListText"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="@dimen/value_50dp"-->
<!--                    android:hint="Search Email"-->
<!--                    android:inputType="text"-->
<!--                    android:paddingStart="@dimen/value_10dp"-->
<!--                    android:paddingEnd="@dimen/value_10dp"-->
<!--                    android:singleLine="true"-->
<!--                    android:textColor="@color/black"-->
<!--                    android:textColorHint="@color/black"-->
<!--                    android:textSize="@dimen/text_15sp" />-->
            </com.google.android.material.textfield.TextInputLayout>
            <RelativeLayout
                android:id="@+id/noDataAvailable"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:visibility="visible">
                <ImageView
                    android:id="@+id/emptyImage"
                    android:layout_width="@dimen/value_120dp"
                    android:layout_height="@dimen/value_120dp"
                    android:layout_centerInParent="true"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/qca" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_below="@id/emptyImage"
                    android:text="Data Not Available"
                    android:textColor="@color/backgroundColor"
                    android:textSize="@dimen/text_18sp" />

            </RelativeLayout>
<!--            <TextView-->
<!--                android:id="@+id/noDataAvailable"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_gravity="center"-->
<!--                android:layout_marginTop="@dimen/value_40dp"-->
<!--                android:layout_marginBottom="@dimen/value_40dp"-->
<!--                android:text="Data Not Available"-->
<!--                android:textColor="@color/dark_grey"-->
<!--                android:textSize="@dimen/text_18sp"-->
<!--                android:visibility="gone" />-->



            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/locationRcv"
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:layout_margin="@dimen/value_5dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                />

            <RelativeLayout
                android:layout_marginTop="@dimen/value_10dp"
                android:layout_marginBottom="@dimen/value_5dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center">

                <TextView
                    android:id="@+id/submit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/value_5dp"
                    android:layout_marginEnd="@dimen/value_5dp"
                    android:background="@drawable/search_button_bg"
                    android:gravity="center"
                    android:padding="@dimen/text_dimen_7"
                    android:text="Select"
                    android:textAlignment="center"
                    android:textColor="@color/white_for_both"
                    android:textSize="@dimen/text_15sp"
                    android:textStyle="bold" />

            </RelativeLayout>

<!--            <androidx.appcompat.widget.AppCompatButton-->
<!--                android:layout_marginBottom="@dimen/value_5dp"-->
<!--                android:id="@+id/submit"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="@dimen/value_35dp"-->
<!--                android:layout_gravity="center_horizontal"-->
<!--                android:layout_marginTop="@dimen/value_5dp"-->
<!--                android:background="@drawable/search_button_bg"-->
<!--                android:text="Select"-->
<!--                android:textColor="@color/white"-->
<!--                android:textAlignment="center"-->
<!--                android:textSize="@dimen/text_14sp" />-->

        </LinearLayout>
    </RelativeLayout>
</layout>