<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/value_5dp">


            <TextView
                android:id="@+id/medicineName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10sp"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="24dp"
                android:lines="1"
                android:text="Cirizen"
                android:textColor="#48b184"
                android:textSize="@dimen/text_12sp"
                android:textStyle="bold"
                app:fontFamily="@font/roboto_medium" />

            <TextView
                android:id="@+id/category_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="24dp"
                android:layout_toRightOf="@id/medicineName"
                android:lines="1"
                android:text="Pharma"
                android:textSize="@dimen/text_12sp"
                android:textStyle="bold"
                app:fontFamily="@font/roboto_medium" />

            <LinearLayout
                android:id="@+id/header_label_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/medicineName"
                android:layout_marginStart="8dp"
                android:orientation="horizontal"
                android:weightSum="6">


                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="5dp"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/quantityHeader"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Req Qty."
                        android:textSize="@dimen/text_12sp"
                        android:textStyle="bold"
                        app:fontFamily="@font/roboto_medium" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.799">

                    <TextView
                        android:id="@+id/approve_qty"
                        android:layout_width="match_parent"
                        android:textAlignment="center"
                        android:layout_height="wrap_content"
                        android:text="Approve Qty."
                        android:textSize="@dimen/text_12sp"
                        android:textStyle="bold"
                        app:fontFamily="@font/roboto_medium" />


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/reason_header_label__layout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.4"
                    android:gravity="center_horizontal">

                    <TextView
                        android:id="@+id/select_reson"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:text="Reason"
                        android:textAlignment="center"
                        android:textSize="@dimen/text_12sp"
                        android:textStyle="bold"
                        app:fontFamily="@font/roboto_medium" />


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/price_layout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/priceHeader"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Price "
                        android:textAlignment="center"
                        android:textSize="@dimen/text_12sp"
                        android:textStyle="bold"
                        app:fontFamily="@font/roboto_medium" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/imageslist_header"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:text="Images "
                        android:textSize="@dimen/text_12sp"
                        android:textStyle="bold"
                        app:fontFamily="@font/roboto_medium" />

                    <!--                    <ImageView-->
                    <!--                        android:layout_width="@dimen/value_25dp"-->
                    <!--                        android:layout_height="@dimen/value_25dp"-->
                    <!--                        android:layout_below="@+id/imageslist_header"-->
                    <!--                        android:layout_centerHorizontal="true"-->
                    <!--                        android:contentDescription="@string/app_name"-->
                    <!--                        android:src="@drawable/eye" />-->

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/marginLayout"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.6"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/marginHeader"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="Total Price"
                        android:textStyle="bold"
                        app:fontFamily="@font/droidsans" />

                    <!--                    <TextView-->
                    <!--                        android:id="@+id/priceText"-->
                    <!--                        android:layout_width="wrap_content"-->
                    <!--                        android:layout_height="wrap_content"-->
                    <!--                        android:layout_below="@+id/marginHeader"-->
                    <!--                        android:layout_centerHorizontal="true"-->
                    <!--                        android:layout_marginTop="2dp"-->
                    <!--                        android:text="100"-->
                    <!--                        android:textColor="@color/black"-->
                    <!--                        android:textStyle="bold"-->
                    <!--                        app:fontFamily="@font/droidsans" />-->
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/header_label_layout"
                android:layout_marginStart="10sp"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:weightSum="6">


                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="5dp"
                    android:layout_weight="1">

                    <!--                    <TextView-->
                    <!--                        android:id="@+id/quantityHeader"-->
                    <!--                        android:layout_width="wrap_content"-->
                    <!--                        android:layout_height="wrap_content"-->

                    <!--                        android:text="Req Qty."-->
                    <!--                        android:textSize="@dimen/text_12sp"-->

                    <!--                        android:textStyle="bold"-->
                    <!--                        app:fontFamily="@font/roboto_medium" />-->

                    <TextView
                        android:id="@+id/quantityText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="3dp"
                        android:text="100"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_12sp"
                        android:textStyle="bold"
                        app:fontFamily="@font/roboto_medium" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.799">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/text_10sp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/subtract"
                            android:layout_width="@dimen/value_30dp"
                            android:layout_height="@dimen/value_30dp"
                            android:contentDescription="@string/app_name"
                            android:src="@drawable/qc_minus" />


                        <EditText
                            android:id="@+id/approve_qty_text"
                            android:layout_width="@dimen/value_40dp"
                            android:layout_height="25dp"
                            android:layout_marginTop="2dp"
                            android:background="@drawable/bulk_discount_edittext"
                            android:digits="0123456789"
                            android:gravity="center"
                            android:imeOptions="flagNoExtractUi"
                            android:importantForAutofill="no"
                            android:inputType="phone"
                            android:text="0"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_12sp"
                            app:fontFamily="@font/droidsans" />

                        <ImageView
                            android:id="@+id/add"
                            android:layout_width="@dimen/value_30dp"
                            android:layout_height="@dimen/value_30dp"
                            android:contentDescription="@string/app_name"
                            android:src="@drawable/qc_plus" />

                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/reason_value_layout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.4"
                    android:gravity="center">


                    <LinearLayout
                        android:id="@+id/select_reson_item"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/rounded_dropdown_qcfail_bg"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingStart="@dimen/value_5dp"
                        android:paddingTop="@dimen/value_1dp"
                        android:paddingEnd="@dimen/value_5dp"
                        android:paddingBottom="@dimen/value_1dp">

                        <TextView
                            android:id="@+id/reason"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="select"
                            android:textColor="@color/black"
                            android:textSize="@dimen/dimen11sp"
                            app:fontFamily="@font/roboto_medium" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:contentDescription="@string/app_name"
                            android:src="@drawable/ic_baseline_arrow_drop_down_24"
                            android:visibility="gone" />
                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="start">

                    <TextView
                        android:id="@+id/price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:drawableLeft="@drawable/qc_ic_rupee_indian"
                        android:paddingEnd="5dp"
                        android:text="100"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_12sp"
                        android:textStyle="bold"

                        app:fontFamily="@font/roboto_medium" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical">


                    <ImageView
                        android:id="@+id/eyeImage"
                        android:layout_width="@dimen/value_25dp"
                        android:layout_height="@dimen/value_25dp"
                        android:layout_alignParentStart="true"
                        android:layout_marginLeft="3dp"
                        android:contentDescription="@string/app_name"

                        android:src="@drawable/eye" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.6"
                    android:visibility="gone">


                    <TextView
                        android:id="@+id/priceText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="2dp"
                        android:text="100"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        app:fontFamily="@font/droidsans" />
                </RelativeLayout>

            </LinearLayout>


        </RelativeLayout>

    </androidx.cardview.widget.CardView>


</layout>
