<?xml version="1.0" encoding="utf-8"?>
<layout>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <LinearLayout
        android:background="@color/ver_light_blue"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:background="@color/cream_color"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/value_90dp">

            <LinearLayout
                android:id="@+id/date_filter_layout"
                android:orientation="horizontal"
                android:weightSum="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_marginStart="@dimen/text_dimen_10"
                    android:layout_width="0dp"
                    android:layout_weight="0.4"
                    android:layout_height="@dimen/value_40dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="@dimen/value_30dp"
                        android:layout_height="@dimen/value_30dp"
                        android:src="@drawable/calender_new_cms"/>

                    <TextView
                        android:id="@+id/fromDateText"
                        android:layout_marginStart="@dimen/value_5dp"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="@dimen/text_15sp"
                        android:textAlignment="center"
                        android:text="28 Jul, 2022"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginStart="@dimen/value_10dp"
                    android:layout_width="0dp"
                    android:layout_weight="0.4"
                    android:layout_height="@dimen/value_40dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="@dimen/value_30dp"
                        android:layout_height="@dimen/value_30dp"
                        android:src="@drawable/calender_new_cms"/>

                    <TextView
                        android:id="@+id/toDateText"
                        android:layout_marginStart="@dimen/value_5dp"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="@dimen/text_15sp"
                        android:textAlignment="center"
                        android:text="28 Jul, 2022"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginEnd="@dimen/text_dimen_10"
                    android:gravity="end"
                    android:layout_marginStart="@dimen/value_10dp"
                    android:layout_width="0dp"
                    android:layout_weight="0.2"
                    android:layout_height="@dimen/value_40dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="@dimen/dimen20dp"
                        android:layout_height="@dimen/dimen20dp"
                        android:src="@drawable/close_blue"/>


                </LinearLayout>





            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/ashcolor"/>

            <LinearLayout
                android:orientation="horizontal"
                android:weightSum="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/search_layout"
                    android:layout_marginStart="@dimen/text_dimen_10"
                    android:layout_width="0dp"
                    android:layout_weight="0.8"
                    android:layout_height="@dimen/value_40dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="@dimen/value_25dp"
                        android:layout_height="@dimen/value_25dp"
                        android:src="@drawable/close_blue_new"/>

                    <EditText
                        android:id="@+id/search_view"
                        android:background="@null"
                        android:layout_marginStart="@dimen/value_5dp"
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/grey"
                        android:textStyle="bold"
                        android:textSize="@dimen/text_15sp"
                        android:hint="@string/search_by_storeid_ticket_id"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_gravity="end"
                    android:gravity="center"
                    android:layout_marginStart="@dimen/value_10dp"
                    android:layout_width="0dp"
                    android:layout_weight="0.2"
                    android:layout_height="@dimen/value_40dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/submit"
                        android:layout_marginTop="@dimen/value_5dp"
                        android:layout_marginBottom="@dimen/value_5dp"
                        android:padding="5dp"
                        android:background="@drawable/background_for_blue_cms"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Submit"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_15sp"
                        android:textStyle="bold" />


                </LinearLayout>






            </LinearLayout>




        </LinearLayout>

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/pullToRefresh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dateSelectionLayout">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewApproved"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/dateSelectionLayout"
                android:padding="3dp"
                android:visibility="gone"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:itemCount="2"
                tools:listitem="@layout/view_complaint_item" />
        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

        <RelativeLayout
            android:id="@+id/emptyList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/dateSelectionLayout"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:background="@color/complaint_bg"
            android:gravity="center"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_no_complaints"
                android:textColor="@color/black"
                android:textSize="@dimen/text_18sp" />
        </RelativeLayout>




    </LinearLayout>

</RelativeLayout>

    <data>

        <import type="com.apollopharmacy.vishwam.data.State" />

        <import type="android.view.View" />

        <variable
            name="viewmodel"
            type="com.apollopharmacy.vishwam.ui.home.cms.complainList.ComplainListViewModel" />
    </data>
</layout>