<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/value_5dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/value_90dp"
                android:background="@drawable/rack_half_bg"
                android:padding="@dimen/value_5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:padding="@dimen/value_5dp"
                    android:rotation="-90"
                    android:id="@+id/rack_num"
                    android:textSize="@dimen/text_14sp"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/value_90dp"
                android:layout_marginStart="@dimen/text_dimen_10"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="@dimen/value_100dp"
                    android:layout_height="@dimen/value_90dp"
                    android:layout_marginBottom="@dimen/value_5dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="@dimen/value_10dp"
                    app:cardElevation="@dimen/value_5dp">


                    <RelativeLayout
                        android:id="@+id/beforecapturelayout2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="visible"
                        tools:ignore="Orientation">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="@dimen/value_30dp"
                                android:layout_height="@dimen/value_30dp"
                                android:layout_gravity="center"
                                android:src="@drawable/qr" />

                            <TextView
                                android:id="@+id/imageTextandNumber2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="SCAN"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_12sp"
                                android:textStyle="bold" />


                        </LinearLayout>


                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/aftercapturelayout_2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="visible">


                        <ImageView
                            android:id="@+id/aftercapturedimage_2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:contentDescription="@string/app_name"
                            android:scaleType="fitXY"
                            android:src="@drawable/capture" />

                        <LinearLayout
                            android:id="@+id/redTrash_2"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/value_25dp"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:layout_margin="@dimen/six6_sp"
                            android:background="@drawable/red_rounded_corners"
                            android:padding="@dimen/value_3dp"
                            android:visibility="gone">

                            <ImageView
                                android:id="@+id/showcapturedimage_2"
                                android:layout_width="@dimen/eighteen18_dp"
                                android:layout_height="@dimen/eighteen18_dp"
                                android:layout_gravity="center"
                                android:padding="@dimen/value_3dp"
                                android:src="@drawable/trash" />


                        </LinearLayout>


                    </RelativeLayout>


                </androidx.cardview.widget.CardView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/value_100dp"
                android:layout_marginStart="@dimen/text_dimen_10"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="@dimen/value_100dp"
                    android:layout_height="@dimen/value_90dp"
                    android:layout_marginBottom="@dimen/value_5dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="@dimen/value_10dp"
                    app:cardElevation="@dimen/value_5dp">


                    <RelativeLayout
                        android:id="@+id/beforecapturelayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="visible"
                        tools:ignore="Orientation">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="@dimen/value_30dp"
                                android:layout_height="@dimen/value_30dp"
                                android:layout_gravity="center"
                                android:src="@drawable/qr" />

                            <TextView
                                android:id="@+id/imageTextandNumber"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="SCAN"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_12sp"
                                android:textStyle="bold" />


                        </LinearLayout>



                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/aftercapturelayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone">


                        <ImageView
                            android:id="@+id/aftercapturedimage"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:alpha="0.5"
                            android:contentDescription="@string/app_name"
                            android:scaleType="fitXY"
                            android:src="@drawable/capture" />


                    </RelativeLayout>


                </androidx.cardview.widget.CardView>


            </LinearLayout>

            <LinearLayout
                android:layout_marginStart="@dimen/value_5dp"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.33"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/value_5dp"
                        android:layout_width="@dimen/twenty20_dp"
                        android:layout_height="@dimen/twenty20_dp"
                        android:background="@drawable/round_rating_bar_green"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_18sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_marginStart="@dimen/value_5dp"
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Matching"
                            android:textColor="#6b6b6b"
                            android:textStyle="bold"
                            android:textSize="@dimen/text_16sp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="60%"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="@dimen/text_18sp"/>

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>


        </LinearLayout>


    </RelativeLayout>
</layout>