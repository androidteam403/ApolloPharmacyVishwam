<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/value_5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!--<LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/value_90dp"
                android:background="@drawable/rack_half_bg"
                android:padding="@dimen/value_5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:padding="@dimen/value_5dp"
                    android:rotation="-90"
                    android:id="@+id/rack_num"
                    android:textSize="@dimen/text_14sp"
                    android:textStyle="bold" />
            </LinearLayout>-->

            <LinearLayout
                android:layout_width="@dimen/value_40dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/value_15dp"
                android:background="@drawable/gray_rounded_bg"
                android:backgroundTint="#f4f5f5"
                android:gravity="center_vertical">

                <!--<TextView
                    android:id="@+id/rackCount"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:gravity="bottom"
                    android:rotation="-90"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_10sp"
                    android:text="Rack 10" />-->

                <TextView
                    android:id="@+id/rackNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/roboto_medium"
                    android:rotation="-90"
                    android:text="Rack 10"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dimen11sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="@dimen/value_80dp"
                    android:layout_height="@dimen/value_70dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="@dimen/value_10dp"
                    app:cardElevation="@dimen/value_5dp">

                    <RelativeLayout
                        android:id="@+id/beforecapturelayout2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone"
                        tools:ignore="Orientation">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="@dimen/value_30dp"
                                android:layout_height="@dimen/value_30dp"
                                android:layout_gravity="center"
                                android:src="@drawable/qr" />

                            <TextView
                                android:id="@+id/imageTextandNumber2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="SCAN"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_12sp"
                                android:textStyle="bold" />


                        </LinearLayout>


                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/aftercapturelayout_2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="visible">

                        <ImageView
                            android:id="@+id/aftercapturedimage_2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:contentDescription="@string/app_name"
                            android:scaleType="fitXY"
                            android:src="@drawable/desktop" />

                        <LinearLayout
                            android:id="@+id/redTrash_2"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/value_25dp"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:layout_margin="@dimen/six6_sp"
                            android:background="@drawable/red_rounded_corners"
                            android:padding="@dimen/value_3dp"
                            android:visibility="gone">

                            <ImageView
                                android:id="@+id/showcapturedimage_2"
                                android:layout_width="@dimen/eighteen18_dp"
                                android:layout_height="@dimen/eighteen18_dp"
                                android:layout_gravity="center"
                                android:padding="@dimen/value_3dp"
                                android:src="@drawable/trash" />


                        </LinearLayout>


                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/value_15dp"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="@dimen/value_80dp"
                    android:layout_height="@dimen/value_70dp"
                    android:layout_marginTop="@dimen/value_2dp"
                    android:layout_marginEnd="@dimen/value_5dp"
                    android:layout_marginBottom="@dimen/value_2dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="@dimen/value_10dp"
                    app:cardElevation="@dimen/value_5dp">

                    <RelativeLayout
                        android:id="@+id/beforeCaptureLayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="visible"
                        tools:ignore="Orientation">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/cameraIcon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:background="@drawable/rounded_background"
                                android:backgroundTint="#ec9da8"
                                android:contentDescription="@string/app_name"
                                android:padding="@dimen/value_5dp"
                                android:src="@drawable/ic_outline_camera_alt_24"
                                android:tint="@color/white"
                                tools:ignore="UseAppTint" />

                            <!--                            <ImageView-->
                            <!--                                android:layout_width="@dimen/dimen20dp"-->
                            <!--                                android:layout_height="@dimen/dimen20dp"-->
                            <!--                                android:layout_gravity="center"-->
                            <!--                                android:src="@drawable/qr" />-->

                            <!--<TextView
                                android:id="@+id/imageTextandNumber"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="SCAN"
                                android:textColor="@color/black"
                                android:textSize="@dimen/seven7_sp"
                                android:textStyle="bold" />-->
                        </LinearLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/afterCaptureLayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/afterCapturedImage"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:alpha="0.5"
                            android:contentDescription="@string/app_name"
                            android:scaleType="fitXY"
                            android:src="@drawable/capture" />

                        <ImageView
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:layout_centerInParent="true"
                            android:background="@drawable/rounded_background"
                            android:backgroundTint="@color/red"
                            android:padding="@dimen/value_3dp"
                            android:src="@drawable/delete"
                            android:tint="@color/white"
                            tools:ignore="UseAppTint" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/value_5dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/compareIconLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/compareIcon"
                        android:layout_width="@dimen/value_45dp"
                        android:layout_height="@dimen/value_45dp"
                        android:layout_marginStart="@dimen/dimen20dp"
                        android:tint="#5c5c5c"
                        android:padding="@dimen/value_8dp"
                        android:backgroundTint="#f2f2f2"
                        android:background="@drawable/rounded_background"
                        android:src="@drawable/ic_baseline_compare_24"
                        tools:ignore="UseAppTint" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/matchingPercentageLayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.33"
                    android:visibility="gone"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="@dimen/text_14sp"
                        android:layout_height="@dimen/text_14sp"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/value_5dp"
                        android:background="@drawable/round_rating_bar_green"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_15sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/value_5dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Matching"
                            android:textColor="#6b6b6b"
                            android:textSize="@dimen/dimen11sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="60%"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_14sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</layout>