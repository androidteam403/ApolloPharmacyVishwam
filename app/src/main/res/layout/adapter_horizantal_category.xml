<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:visibility="gone"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:layout_width="@dimen/value_35dp"
            android:layout_height="@dimen/value_30dp">

            <LinearLayout
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/mtd_layout"
                android:layout_marginStart="@dimen/value_5dp"
                android:visibility="visible"
                android:background="@drawable/round_bg_red"
                android:layout_centerInParent="true"
                android:layout_width="@dimen/value_30dp"
                android:layout_height="@dimen/value_30dp"
                >

                <TextView
                    android:text="9"
                    android:layout_width="@dimen/value_30dp"
                    android:layout_height="@dimen/value_30dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="5dp"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_12sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:visibility="visible"
            android:id="@+id/background_for_linear"
            android:orientation="horizontal"
            android:layout_width="@dimen/value_40dp"
            android:layout_height="@dimen/value_60dp">

            <TextView
                android:id="@+id/count"
                android:layout_gravity="center"
                android:gravity="center"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium"
                android:text="0"
                android:textColor="@color/black"
                android:textSize="@dimen/dimen11sp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/middle_color"
            android:background="#fefefe"
            android:layout_width="@dimen/value_3dp"
            android:layout_height="match_parent">

            <TextView

                android:layout_width="match_parent"
                android:layout_height="match_parent"/>


        </LinearLayout>
    </LinearLayout>

    

