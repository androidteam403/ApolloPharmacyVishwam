<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/value_10dp"
        android:background="@drawable/dialog_background"
        android:orientation="vertical"
        android:padding="@dimen/value_20dp">

        <ImageButton
            android:id="@+id/close"
            android:layout_width="@dimen/value_40dp"
            android:layout_height="@dimen/value_40dp"
            android:layout_gravity="end"
            android:background="@drawable/close_icon"
            android:contentDescription="@string/app_name"
            android:scaleType="center"
            android:visibility="gone" />

        <TextView
            android:id="@+id/messagetext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/value_15dp"
            android:gravity="center_horizontal"
            android:maxLines="3"
            android:text=""
            android:textColor="@color/black"
            android:textSize="@dimen/text_18sp" />

        <TextView
            android:id="@+id/ticket_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/value_5dp"
            android:layout_marginBottom="@dimen/value_25dp"
            android:gravity="center_horizontal"
            android:maxLines="3"
            android:textColor="@color/blue"
            android:textSize="@dimen/text_18sp"
            android:textStyle="bold" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/value_5dp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/ok_button"
                android:layout_width="@dimen/value_200dp"
                android:layout_height="@dimen/value_45dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:background="@drawable/yellow_drawable"
                android:gravity="center"
                android:text="Ok"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="@dimen/text_16sp" />

            <!--<androidx.appcompat.widget.AppCompatButton
                android:id="@+id/sign_out_button"
                android:layout_width="@dimen/value_200dp"
                android:layout_height="@dimen/value_45dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="@dimen/value_10dp"
                android:layout_weight="1"
                android:background="@drawable/yellow_drawable"
                android:gravity="center"
                android:text="@string/label_logout"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="@dimen/text_16sp" />-->
        </RelativeLayout>
    </LinearLayout>
</layout>