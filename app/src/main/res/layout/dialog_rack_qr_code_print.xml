<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/value_10dp"
        android:orientation="vertical"
        android:paddingTop="@dimen/value_80dp"
        android:paddingBottom="@dimen/value_80dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/retro_qr_dialog_background"
            android:orientation="vertical"
            android:paddingBottom="@dimen/value_10dp"
            tools:ignore="UselessParent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/value_70dp"
                android:orientation="horizontal"
                android:paddingTop="@dimen/value_5dp"
                android:paddingBottom="@dimen/value_5dp">

                <ImageView
                    android:layout_width="@dimen/value_35dp"
                    android:layout_height="@dimen/value_35dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/value_10dp"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/print_label" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/value_8dp"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_print_rack_qr_code"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_16sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:id="@+id/printer_connected_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/bluetooth_indicator"
                            android:layout_width="@dimen/value_14dp"
                            android:layout_height="@dimen/value_14dp"
                            android:layout_marginEnd="@dimen/value_4dp"
                            android:contentDescription="@string/app_name"
                            android:padding="@dimen/value_3dp"
                            android:tint="@color/white"
                            tools:ignore="UseAppTint" />

                        <TextView
                            android:id="@+id/connected_printer_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/value_7dp"
                            android:text="@string/label_connected_to_printer"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/text_12sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/reconnect"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/green_background"
                            android:paddingStart="@dimen/value_7dp"
                            android:paddingTop="@dimen/value_4dp"
                            android:paddingEnd="@dimen/value_7dp"
                            android:paddingBottom="@dimen/value_4dp"
                            android:text="@string/label_reconnect"
                            android:visibility="gone"
                            android:textColor="@color/white"
                            android:textSize="9sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/close"
                        android:layout_width="@dimen/value_35dp"
                        android:layout_height="@dimen/value_35dp"
                        android:layout_marginStart="@dimen/value_10dp"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/closee_whitee"
                        android:tint="@color/black"
                        tools:ignore="UseAppTint" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/check_uncheck_all_racks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/retroqr_rack_selected_color"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingTop="@dimen/value_3dp"
                android:paddingBottom="@dimen/value_3dp">

                <ImageView
                    android:id="@+id/all_checked_icon"
                    android:layout_width="@dimen/value_25dp"
                    android:layout_height="@dimen/value_25dp"
                    android:layout_marginStart="@dimen/value_30dp"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/qc_checkbox" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/value_10dp"
                    android:text="@string/label_select_all_racks"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_14sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="50dp">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/print_rack_recycler"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:itemCount="12"
                        tools:listitem="@layout/layout_print_rack" />
                </LinearLayout>

                <TextView
                    android:id="@+id/preview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/value_7dp"
                    android:background="#1e9902"
                    android:paddingStart="@dimen/value_12dp"
                    android:paddingTop="@dimen/value_7dp"
                    android:paddingEnd="@dimen/value_12dp"
                    android:paddingBottom="@dimen/value_7dp"
                    android:text="@string/retro_qr_label_preview"
                    android:textColor="@color/white_for_both"
                    android:textSize="@dimen/text_16sp"
                    android:textStyle="bold" />
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>
</layout>