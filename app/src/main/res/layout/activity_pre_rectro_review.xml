<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".ui.home.swach.swachlistmodule.previewImage.QcPreviewImageActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/light_blue"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/splash_start_color"
                android:orientation="horizontal"
                android:padding="@dimen/four4_dp">

                <ImageView
                    android:layout_width="@dimen/value_40dp"
                    android:layout_height="@dimen/value_40dp"
                    android:layout_gravity="center"
                    android:contentDescription="@string/app_name"
                    android:onClick="@{()-> callback.onClickBack()}"
                    android:src="@drawable/ic_baseline_keyboard_arrow_left_24" />

                <LinearLayout
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pre Rectro Review"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_17sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_marginTop="@dimen/three3_sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                      android:text="56985_APNARECTRO_06042023"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_15sp"
                        android:textStyle="bold" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:gravity="end">
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="@dimen/value_30dp"
                        android:layout_height="@dimen/value_30dp"
                        android:src="@drawable/closee_whitee"/>


                </LinearLayout>










                <!--                <TextView-->
                <!--                    android:layout_width="wrap_content"-->
                <!--                    android:layout_height="wrap_content"-->
                <!--                    android:layout_gravity="center"-->
                <!--                    android:text="@{imageId}"-->
                <!--                    android:textColor="@color/white"-->
                <!--                    android:textSize="@dimen/text_17sp"-->
                <!--                    android:textStyle="bold" />-->


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:gravity="end">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/value_50dp"
                        android:layout_gravity="center"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/close_white_icon"
                        android:visibility="gone" />
                </LinearLayout>


            </LinearLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_marginStart="@dimen/value_15dp"
                            android:layout_marginTop="@dimen/value_10dp"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="@dimen/value_25dp"
                                    android:layout_height="@dimen/value_25dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/storehome" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/value_8dp"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Store ID"
                                        android:textStyle="bold"
                                        android:textColor="@color/heading_blue"
                                        android:textSize="@dimen/text_12sp" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Ameerpet, Hyderabad - 16015"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/text_12sp"
                                        android:textStyle="bold" />


                                </LinearLayout>
                            </LinearLayout>


                            <LinearLayout
                                android:visibility="gone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/value_25dp"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="@dimen/text_22sp"
                                    android:layout_height="@dimen/text_22sp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/calendar" />

                                <LinearLayout
                                    android:visibility="gone"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/value_6dp"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Uploaded Date"
                                        android:textStyle="bold"
                                        android:textColor="@color/heading_blue"
                                        android:textSize="@dimen/text_12sp" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@{pendingAndApprovedModel.status.equals(`Pending`) ? pendingAndApprovedModel.uploadedDate : pendingAndApprovedModel.status.equals(`Approved`) ? pendingAndApprovedModel.uploadedDate : pendingAndApprovedModel.status.equals(`Reshoot`) ? pendingAndApprovedModel.uploadedDate : pendingAndApprovedModel.status.equals(`Partially Approved`) ?pendingAndApprovedModel.uploadedDate : `-`}"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/text_12sp"
                                        android:textStyle="bold" />
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginTop="@dimen/text_dimen_10"
                            android:layout_marginStart="@dimen/value_15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <RelativeLayout
                                android:id="@+id/categoryIdBg"
                                android:background="@drawable/green_circle_bg"
                                android:layout_width="@dimen/twenty20_dp"
                                android:layout_height="@dimen/twenty20_dp"
                                android:layout_centerVertical="true"
                                android:layout_gravity="center"
                                android:layout_marginStart="@dimen/value_5dp"
                                android:gravity="center">

                                <TextView
                                    android:text="1"
                                    android:id="@+id/category_number"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/text_12sp"
                                    android:textStyle="bold" />

                            </RelativeLayout>

                            <TextView
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:textAlignment="center"
                                android:id="@+id/categoryName"
                                android:text="Signage"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/value_10dp"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_15sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/value_30dp"
                            android:background="@color/header_blue"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <ImageView
                                android:layout_width="@dimen/value_35dp"
                                android:layout_height="@dimen/value_35dp"
                                android:layout_gravity="center"
                                android:contentDescription="@string/app_name"
                                android:padding="@dimen/five5_sp"
                                android:src="@drawable/eye2withbackground" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Preview Last Uploaded"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:textStyle="bold" />


                        </LinearLayout>


                        <!--                <androidx.viewpager.widget.ViewPager-->
                        <!--                    android:layout_marginTop="@dimen/text_10sp"-->
                        <!--                    android:id="@+id/preview_image_viewpager"-->
                        <!--                    android:layout_width="match_parent"-->
                        <!--                    android:layout_height="wrap_content"-->
                        <!--                    android:layout_marginBottom="@dimen/value_60dp" />-->


                        <ImageView
                            android:layout_marginTop="@dimen/value_5dp"
                            android:layout_width="match_parent"
                            android:layout_height="400dp"
                            android:contentDescription="@string/app_name"
                            android:scaleType="fitXY"
                            android:src="@drawable/capture" />


                        <LinearLayout
                            android:layout_marginTop="@dimen/text_dimen_10"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_gravity="center"
                                android:layout_width="@dimen/value_15dp"
                                android:layout_height="@dimen/value_15dp"
                                android:src="@drawable/left_arrow"/>


                            <TextView
                                android:layout_marginStart="@dimen/value_3dp"
                                android:layout_marginEnd="@dimen/value_3dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1(1)/20"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_18sp"/>

                            <ImageView
                                android:layout_gravity="center"
                                android:layout_width="@dimen/value_15dp"
                                android:layout_height="@dimen/value_15dp"
                                android:src="@drawable/right_arrow"/>





                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/value_1dp"
                            android:layout_marginTop="@dimen/value_8dp"
                            android:background="@color/another_grey" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginStart="@dimen/text_dimen_10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/text_10sp"
                            android:text="Status Update"
                            android:textColor="@color/black" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="@dimen/value_80dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/value_7dp"
                                android:layout_marginBottom="@dimen/five5_sp"
                                android:background="@drawable/ash_rounded_corners"
                                android:padding="@dimen/value_6dp"
                                android:text="Re-Shoot"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_15sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_marginStart="10dp"
                                android:layout_width="@dimen/value_80dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/value_7dp"
                                android:layout_marginBottom="@dimen/five5_sp"
                                android:background="@drawable/ash_rounded_corners"
                                android:padding="@dimen/value_6dp"
                                android:text="Approve"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_15sp"
                                android:textStyle="bold" />
                        </LinearLayout>






                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/value_1dp"
                        android:layout_marginTop="@dimen/value_8dp"
                        android:background="@color/another_grey" />


                    <LinearLayout
                        android:layout_marginStart="@dimen/text_dimen_10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/text_10sp"
                            android:text="Report"
                            android:textSize="@dimen/text_15sp"
                            android:textColor="@color/black"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/value_10dp"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Uploaded"
                                    android:textSize="@dimen/text_14sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:text="10"
                                    android:id="@+id/pendingCountforValid"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/black"
                                    android:textSize="21sp"
                                    android:textStyle="bold" />


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/value_30dp"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/label_accepted"
                                    android:textSize="@dimen/text_14sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:text="8"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/black"
                                    android:textSize="21sp"
                                    android:textStyle="bold" />


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/value_30dp"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/label_rejected"
                                    android:textSize="@dimen/text_14sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:text="2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/black"
                                    android:textSize="21sp"
                                    android:textStyle="bold" />


                            </LinearLayout>
                        </LinearLayout>




                    </LinearLayout>
                </LinearLayout>

            </ScrollView>








        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:weightSum="1">


            <LinearLayout
                android:id="@+id/totalImagesandaction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="@dimen/value_60dp"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".3"
                        android:background="@color/header_blue"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total Images"
                            android:textColor="@color/white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{totalImages}"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_18sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="@dimen/value_10dp"
                        android:layout_weight=".7"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/statusDisplay"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAllCaps="true"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_18sp" />



                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>




        </LinearLayout>



    </RelativeLayout>

    <data>

        <variable
            name="pendingAndApprovedModel"
            type="com.apollopharmacy.vishwam.ui.home.swach.swachlistmodule.fragment.model.PendingAndApproved" />

        <variable
            name="imageUrlModel"
            type="com.apollopharmacy.vishwam.ui.home.swach.swachlistmodule.approvelist.model.GetImageUrlsResponse.ImageUrl" />

        <variable
            name="totalImages"
            type="String" />

        <variable
            name="callback"
            type="com.apollopharmacy.vishwam.ui.home.swach.swachlistmodule.previewImage.PreviewImageCallback" />


    </data>
</layout>