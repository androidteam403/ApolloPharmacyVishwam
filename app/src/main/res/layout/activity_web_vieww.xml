<?xml version="1.0" encoding="utf-8"?>
<layout>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.notification.webview.WebViewwActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".ui.home.notification.NotificationsActivity">

        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/header_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/vishwam_actionbar_height"
            android:background="@color/vishwam_actionbar_color">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/backButton"
                    android:layout_width="37dp"
                    android:layout_height="37dp"
                    android:layout_centerVertical="true"
                    android:onClick="@{()->callback.onclickBackArrow()}"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/value_12dp"
                    android:layout_marginEnd="@dimen/value_10dp"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/icon_back_arrow" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Details"
                    android:textColor="@color/white_for_both"
                    android:textSize="@dimen/text_17sp" />
            </LinearLayout>





        </LinearLayout>

        <WebView
            android:visibility="visible"
            android:background="@color/baby_pink"
            android:layout_below="@id/header_layout"
            android:id="@+id/webView_n"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </RelativeLayout>

</RelativeLayout>
    <data>

        <variable
            name="callback"
            type="com.apollopharmacy.vishwam.ui.home.notification.webview.WebViewCallback" />
    </data>
</layout>