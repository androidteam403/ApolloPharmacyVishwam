<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/value_10dp"
        android:background="@drawable/dialog_bg"
        android:orientation="vertical"
        android:paddingBottom="25dp">

        <ImageView
            android:id="@+id/close_button"
            android:layout_width="@dimen/value_30dp"
            android:layout_height="@dimen/value_30dp"
            android:layout_gravity="end"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/closee_black"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/value_5dp">

            <LinearLayout
                android:layout_width="@dimen/value_60dp"
                android:layout_height="@dimen/value_70dp"
                android:layout_gravity="center"
                android:layout_weight="0.10"
                android:gravity="center">

                <ImageView
                    android:layout_width="@dimen/value_140dp"
                    android:layout_height="@dimen/value_140dp"
                    android:layout_gravity="center"
                    android:scaleType="fitXY"
                    android:src="@drawable/right_greenn" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/value_15dp"
            android:paddingStart="60dp"
            android:paddingEnd="60dp"
            android:gravity="center"
            android:text="Prescription Upload Link Sent Successfully to"
            android:textColor="@color/black"
            android:textSize="@dimen/text_16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/customer_phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/value_8dp"
            android:paddingStart="60dp"
            android:paddingEnd="60dp"
            android:textColor="@color/black"
            android:textSize="@dimen/text_18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ok_button"
            android:layout_width="@dimen/value_200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/value_20dp"
            android:background="#39b54a"
            android:paddingTop="@dimen/value_8dp"
            android:paddingBottom="@dimen/value_8dp"
            android:text="OK"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="@dimen/text_18sp"
            android:textStyle="bold" />
    </LinearLayout>
</layout>