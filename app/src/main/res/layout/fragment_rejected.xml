<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <import type="com.apollopharmacy.vishwam.data.State" />

        <variable
            name="rejectedViewModel"
            type="com.apollopharmacy.vishwam.ui.home.discount.rejected.RejectedViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.rejected.RejectedFragment">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:id="@+id/dateSelectionLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="#ffe9e9"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/date_filter_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="@dimen/value_40dp"
                        android:layout_marginStart="@dimen/text_dimen_10"
                        android:layout_weight="0.4"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/fromDateText"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"

                            android:src="@drawable/calender_new_cms" />

                        <TextView
                            android:id="@+id/fromDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="@dimen/value_5dp"
                            android:textAlignment="center"

                            android:textColor="@color/black"
                            android:textSize="@dimen/text_15sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="@dimen/value_40dp"
                        android:layout_marginStart="@dimen/value_10dp"
                        android:layout_weight="0.4"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/toDateText"
                            android:layout_width="24dp"
                            android:layout_height="24dp"

                            android:layout_gravity="center"
                            android:src="@drawable/calender_new_cms" />

                        <TextView
                            android:id="@+id/toDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="@dimen/value_5dp"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_15sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="@dimen/value_40dp"
                        android:layout_marginStart="@dimen/value_10dp"
                        android:layout_marginEnd="@dimen/text_dimen_10"
                        android:layout_weight="0.2"
                        android:gravity="end"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/dimen20dp"
                            android:layout_height="@dimen/dimen20dp"
                            android:layout_gravity="center"
                            android:src="@drawable/close_icon"

                            android:visibility="gone" />


                    </LinearLayout>


                </LinearLayout>




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">




                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/ashcolor" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <RelativeLayout
                            android:id="@+id/search_layout"
                            android:layout_width="0dp"
                            android:layout_height="45dp"
                            android:layout_gravity="center"
                            android:layout_weight="0.8"
                            android:gravity="center"

                            android:paddingBottom="@dimen/value_10dp"
                            app:layout_constraintTop_toTopOf="parent">

                            <LinearLayout
                                android:id="@+id/search_icon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="@dimen/text_dimen_10"
                                android:gravity="center">

                                <ImageView

                                    android:layout_width="@dimen/value_22dp"
                                    android:layout_height="@dimen/value_22dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_search"/>
                            </LinearLayout>


                            <androidx.appcompat.widget.AppCompatEditText
                                android:id="@+id/filterInputText"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="@dimen/value_5dp"
                                android:layout_toEndOf="@id/search_icon"
                                android:background="@null"
                                android:drawablePadding="22dp"
                                android:gravity="left|center"
                                android:hint="Search"
                                android:imeOptions="actionSearch"
                                android:inputType="text"
                                android:maxLines="1"
                                android:padding="5dp"
                                android:paddingTop="@dimen/five5_sp"
                                android:paddingBottom="@dimen/five5_sp"
                                android:textSize="@dimen/text_14sp" />
                        </RelativeLayout>


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="@dimen/value_40dp"
                            android:layout_gravity="end"
                            android:layout_marginStart="@dimen/value_10dp"
                            android:layout_weight="0.2"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/submit"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/value_30dp"
                                android:layout_gravity="center"
                                android:background="@drawable/search_button_bg"
                                android:gravity="center"
                                android:padding="5dp"
                                android:text="@string/label_search"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_15sp"
                                android:textStyle="bold" />


                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>



            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rejectedRecycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dateSelectionLayout"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:listitem="@layout/rejected_layout" />

            <RelativeLayout
                android:id="@+id/emptyList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/emptyImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/qca" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/emptyImage"
                    android:text="No Rejected Data is  Available"
                    android:textColor="@color/backgroundColor"
                    android:textSize="@dimen/text_15sp" />
            </RelativeLayout>

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:elevation="@dimen/value_4dp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </RelativeLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
