<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/value_5dp"
        app:cardElevation="@dimen/value_5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:id="@+id/orderHead"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/pendingLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#D1F2E7"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/value_10dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:weightSum="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:id="@+id/siteId_layout"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.24"
                            android:gravity="start">

                            <TextView
                                android:id="@+id/siteIdText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_medium"
                                android:text="Site Id"
                                android:textSize="@dimen/text_12sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/siteId"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/siteIdText"
                                android:layout_marginEnd="@dimen/value_1dp"
                                android:fontFamily="@font/roboto_medium"
                                android:text="50001400"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_12sp"
                                android:textStyle="bold" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.30"
                            android:gravity="start">

                            <TextView
                                android:id="@+id/dcIdText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_medium"
                                android:text="Dc Id"
                                android:textSize="@dimen/text_12sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/dcId"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/dcIdText"
                                android:fontFamily="@font/roboto_medium"
                                android:text="UID00000003"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_12sp"
                                android:textStyle="bold" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.24"
                            android:gravity="start">


                            <TextView
                                android:id="@+id/statusText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_medium"
                                android:text="Status"
                                android:textSize="@dimen/text_12sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/status"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/statusText"
                                android:fontFamily="@font/roboto_medium"
                                android:text="pending"
                                android:textColor="#EA0D0D"
                                android:textSize="@dimen/text_12sp"
                                android:textStyle="bold" />
                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.15"
                            android:gravity="start">

                            <TextView
                                android:id="@+id/closingDateText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_medium"
                                android:text="Closing date"
                                android:textSize="@dimen/text_12sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/closingDate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/closingDateText"
                                android:fontFamily="@font/roboto_medium"
                                android:text="14-MAY-2023"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_12sp"
                                android:textStyle="bold" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.24"
                            android:gravity="start">

                            <TextView
                                android:id="@+id/amountText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_medium"
                                android:text="Amount"
                                android:textSize="@dimen/text_12sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/rupee_symbol"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/amountText"
                                android:fontFamily="@font/roboto_medium"
                                android:text="\u20B9 "
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_12sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/amount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/amountText"
                                android:layout_toRightOf="@+id/rupee_symbol"
                                android:fontFamily="@font/roboto_medium"
                                android:text=" 250000"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_12sp"
                                android:textStyle="bold" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".10"
                            android:gravity="end"
                            android:paddingRight="15dp">

                            <ImageView
                                android:id="@+id/arrowClose"
                                android:layout_width="@dimen/text_22sp"
                                android:layout_height="@dimen/text_22sp"
                                android:rotation="90"
                                android:src="@drawable/ic_baseline_arrow_forward_ios_24"
                                android:visibility="gone"
                                app:tint="#606f6a" />

                            <ImageView
                                android:id="@+id/arrow"
                                android:layout_width="@dimen/text_22sp"
                                android:layout_height="@dimen/text_22sp"
                                android:src="@drawable/ic_baseline_arrow_forward_ios_24"
                                android:visibility="visible"
                                app:tint="#606f6a" />

                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/remarksLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="start">


                            <TextView
                                android:id="@+id/remarksText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_medium"
                                android:text="Remarks"
                                android:textSize="@dimen/text_12sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/remarks"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/remarksText"
                                android:fontFamily="@font/roboto_medium"
                                android:text="Good"
                                android:textColor="#FF173B5E"
                                android:textSize="@dimen/text_12sp"
                                android:textStyle="bold" />
                        </RelativeLayout>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/extraData"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#DCEDE7"
                    android:orientation="vertical"
                    android:paddingStart="5dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/remarksText"
                            android:fontFamily="@font/roboto_medium"
                            android:text="Upload Deposit Receipt"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_12sp"
                            android:textStyle="bold" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="4">

                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="@dimen/value_100dp"
                            android:layout_marginEnd="@dimen/value_5dp"
                            android:layout_marginBottom="@dimen/value_5dp"
                            android:layout_weight="1"
                            app:cardBackgroundColor="@color/white"
                            app:cardCornerRadius="@dimen/value_10dp"
                            app:cardElevation="@dimen/value_5dp">


                            <RelativeLayout
                                android:id="@+id/beforecapturelayout1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:visibility="visible"
                                tools:ignore="Orientation">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="@dimen/value_20dp"
                                        android:layout_height="@dimen/value_20dp"
                                        android:layout_gravity="center"
                                        android:src="@drawable/ash_color_caera" />

                                    <TextView
                                        android:id="@+id/imageTextandNumber1"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:text="Image"
                                        android:textColor="@color/ashcolor"
                                        android:textSize="@dimen/text_12sp"
                                        android:textStyle="bold" />


                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_alignParentBottom="true"
                                    android:layout_margin="@dimen/four4_dp"
                                    android:background="@drawable/green_backgroundplus"
                                    android:padding="@dimen/value_3dp"
                                    android:visibility="visible">

                                    <ImageView
                                        android:id="@+id/plusSysmbol1"
                                        android:layout_width="@dimen/value_20dp"
                                        android:layout_height="@dimen/value_20dp"
                                        android:layout_gravity="center"
                                        android:padding="3dp"
                                        android:src="@drawable/plus" />
                                </LinearLayout>
                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/aftercapturelayout1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:visibility="gone">


                                <ImageView
                                    android:id="@+id/aftercapturedimage1"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:alpha="0.5"
                                    android:contentDescription="@string/app_name"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/capture" />

                                <LinearLayout
                                    android:id="@+id/redTrash1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="@dimen/value_30dp"
                                    android:layout_alignParentRight="true"
                                    android:layout_alignParentBottom="true"
                                    android:layout_margin="@dimen/six6_sp"
                                    android:background="@drawable/red_rounded_corners"
                                    android:padding="@dimen/value_4dp"
                                    android:visibility="gone">

                                    <ImageView
                                        android:id="@+id/showcapturedimage1"
                                        android:layout_width="@dimen/value_20dp"
                                        android:layout_height="@dimen/value_20dp"
                                        android:layout_gravity="center"
                                        android:padding="@dimen/value_3dp"
                                        android:src="@drawable/trash" />
                                </LinearLayout>


                                <LinearLayout
                                    android:id="@+id/eyeImage1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:visibility="gone">

                                    <ImageView
                                        android:layout_width="@dimen/value_30dp"
                                        android:layout_height="30dp"
                                        android:src="@drawable/eye2withbackground" />
                                </LinearLayout>


                            </RelativeLayout>


                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/second_image_Layout"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/value_100dp"
                            android:layout_marginEnd="@dimen/value_5dp"
                            android:layout_marginBottom="@dimen/value_5dp"
                            android:visibility="visible"
                            android:layout_weight="1"
                            app:cardBackgroundColor="@color/white"
                            app:cardCornerRadius="@dimen/value_10dp"
                            app:cardElevation="@dimen/value_5dp">


                            <RelativeLayout
                                android:id="@+id/beforecapturelayout"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:visibility="visible"
                                tools:ignore="Orientation">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="@dimen/value_20dp"
                                        android:layout_height="@dimen/value_20dp"
                                        android:layout_gravity="center"
                                        android:src="@drawable/ash_color_caera" />

                                    <TextView
                                        android:id="@+id/imageTextandNumber"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:text="Image"
                                        android:textColor="@color/ashcolor"
                                        android:textSize="@dimen/text_12sp"
                                        android:textStyle="bold" />


                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_alignParentBottom="true"
                                    android:layout_margin="@dimen/four4_dp"
                                    android:background="@drawable/green_backgroundplus"
                                    android:padding="@dimen/value_3dp"
                                    android:visibility="visible">

                                    <ImageView
                                        android:id="@+id/plusSysmbol"
                                        android:layout_width="@dimen/value_20dp"
                                        android:layout_height="@dimen/value_20dp"
                                        android:layout_gravity="center"
                                        android:padding="3dp"
                                        android:src="@drawable/plus" />
                                </LinearLayout>


                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/aftercapturelayout"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:visibility="gone">


                                <ImageView
                                    android:id="@+id/aftercapturedimage"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:alpha="0.5"
                                    android:contentDescription="@string/app_name"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/capture" />

                                <LinearLayout
                                    android:id="@+id/redTrash"
                                    android:layout_width="wrap_content"
                                    android:layout_height="@dimen/value_30dp"
                                    android:layout_alignParentRight="true"
                                    android:layout_alignParentBottom="true"
                                    android:layout_margin="@dimen/six6_sp"
                                    android:background="@drawable/red_rounded_corners"
                                    android:padding="@dimen/value_4dp"
                                    android:visibility="gone">

                                    <ImageView
                                        android:id="@+id/showcapturedimage"
                                        android:layout_width="@dimen/value_20dp"
                                        android:layout_height="@dimen/value_20dp"
                                        android:layout_gravity="center"
                                        android:padding="@dimen/value_3dp"
                                        android:src="@drawable/trash" />


                                </LinearLayout>


                                <LinearLayout
                                    android:id="@+id/eyeImage"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:visibility="gone">

                                    <ImageView
                                        android:layout_width="@dimen/value_30dp"
                                        android:layout_height="30dp"
                                        android:src="@drawable/eye2withbackground" />
                                </LinearLayout>

                            </RelativeLayout>


                        </androidx.cardview.widget.CardView>


                        <LinearLayout
                            android:id="@+id/amount_layout"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:visibility="visible"
                            android:gravity="center_vertical|center_horizontal">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Amount Deposit"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/dimen11sp"
                                    android:textStyle="bold" />

                                <com.google.android.material.textfield.TextInputLayout
                                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                    android:layout_width="@dimen/value_50dp"
                                    android:layout_height="wrap_content"
                                    android:textColorHint="@color/black"
                                    app:layout_constraintTop_toTopOf="parent">

                                    <androidx.appcompat.widget.AppCompatEditText
                                        android:id="@+id/amountDeposit"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:inputType="number"
                                        android:textColor="@color/black"
                                        android:textColorHint="@color/black"
                                        android:textSize="14sp" />
                                </com.google.android.material.textfield.TextInputLayout>
                            </LinearLayout>


                            <TextView
                                android:id="@+id/upload_button"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/value_5dp"
                                android:background="@drawable/upload_button_disable"
                                android:paddingStart="@dimen/value_10dp"
                                android:paddingTop="@dimen/value_5dp"
                                android:paddingEnd="@dimen/value_10dp"
                                android:paddingBottom="@dimen/value_5dp"
                                android:text="UPLOAD"
                                android:textColor="#ffffff"
                                android:textSize="12sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</layout>