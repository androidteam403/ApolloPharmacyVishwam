<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/value_10dp"
        android:background="@drawable/dialog_background"
        android:orientation="vertical"
        android:padding="@dimen/value_20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/value_15dp"
            android:layout_marginBottom="@dimen/value_25dp"
            android:gravity="center_horizontal"
            android:text="@string/label_confirm_store"
            android:textColor="@color/black"
            android:textSize="@dimen/text_18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="@dimen/value_45dp"
            android:layout_marginBottom="@dimen/value_5dp">

            <TextView
                android:id="@+id/cancel_button"
                android:layout_width="@dimen/value_120dp"
                android:layout_height="@dimen/value_45dp"
                android:layout_marginEnd="@dimen/value_10dp"
                android:background="@drawable/grey_rectangle"
                android:gravity="center"
                android:text="@string/label_no"
                android:textColor="@color/black"
                android:textSize="@dimen/text_14sp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/sign_out_button"
                android:layout_width="@dimen/value_120dp"
                android:layout_height="@dimen/value_45dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="@dimen/value_10dp"
                android:background="@drawable/yellow_drawable"
                android:text="@string/label_yes"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="@dimen/text_16sp" />
        </LinearLayout>
    </LinearLayout>
</layout>