<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/value_175dp"
    android:background="@color/splash_start_color">

    <ImageView
        android:id="@+id/userImages"
        android:layout_width="@dimen/value_50dp"
        android:layout_height="@dimen/value_50dp"
        android:layout_marginStart="@dimen/value_30dp"
        android:layout_marginTop="@dimen/value_60dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/logo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/userName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/value_30dp"
        android:text="Hi"
        android:layout_marginTop="@dimen/value_10dp"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/text_18sp"
        android:layout_below="@+id/userImages"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userImages" />

    <TextView
        android:id="@+id/customerNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/value_30dp"
        android:layout_marginTop="@dimen/value_5dp"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/text_14sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userName" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/value_1dp"
        android:layout_marginTop="@dimen/value_10dp"
        android:background="@color/app_center_color"
        android:layout_alignParentBottom="true"
        app:layout_constraintTop_toBottomOf="@+id/customerNo" />
</RelativeLayout>