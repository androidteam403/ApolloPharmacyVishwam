<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/splash_start_color">

    <ImageView
        android:id="@+id/userImages"
        android:layout_width="@dimen/value_50dp"
        android:layout_height="@dimen/value_50dp"
        android:layout_marginStart="@dimen/value_30dp"
        android:layout_marginTop="@dimen/value_60dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/logo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_below="@+id/userImages"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userImages"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/value_30dp"
            android:text="Hi"
            android:layout_marginTop="@dimen/value_10dp"
            android:textColor="#cfb84e"
            android:textSize="17sp"

            android:textStyle="bold"
           />

        <LinearLayout
            android:layout_marginStart="@dimen/value_10dp"
            android:layout_marginBottom="@dimen/value_5dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/userName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="@dimen/value_10dp"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_below="@+id/userImages"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/id_for_menu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/text_15sp" />
        </LinearLayout>

    </LinearLayout>



    <TextView
        android:id="@+id/customerNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/value_30dp"
        android:layout_marginTop="@dimen/value_5dp"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/text_14sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userName" />

