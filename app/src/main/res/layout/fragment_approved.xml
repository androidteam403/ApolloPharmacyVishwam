<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <import type="com.apollopharmacy.vishwam.data.State" />

        <!--suppress AndroidDomInspection -->
        <variable
            name="viewModel"
            type="com.apollopharmacy.vishwam.ui.home.discount.approved.ApprovedViewModel" />
    </data>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.DiscountActivity">


        <LinearLayout
            android:id="@+id/filterListLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="#d3e9da"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/date_filter_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/value_40dp"
                    android:layout_marginStart="@dimen/text_dimen_10"
                    android:layout_weight="0.4"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/fromDateText"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"

                        android:src="@drawable/calender_new_cms" />

                    <TextView
                        android:id="@+id/fromDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/value_5dp"
                        android:textAlignment="center"

                        android:textColor="@color/black"
                        android:textSize="@dimen/text_15sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/value_40dp"
                    android:layout_marginStart="@dimen/value_10dp"
                    android:layout_weight="0.4"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/toDateText"
                        android:layout_width="24dp"
                        android:layout_height="24dp"

                        android:layout_gravity="center"
                        android:src="@drawable/calender_new_cms" />

                    <TextView
                        android:id="@+id/toDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/value_5dp"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_15sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/value_40dp"
                    android:layout_marginStart="@dimen/value_10dp"
                    android:layout_marginEnd="@dimen/text_dimen_10"
                    android:layout_weight="0.2"
                    android:gravity="end"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/dimen20dp"
                        android:layout_height="@dimen/dimen20dp"
                        android:layout_gravity="center"
                        android:src="@drawable/close_icon"

                        android:visibility="gone" />


                </LinearLayout>


            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/ashcolor" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="40dp"

                    android:orientation="horizontal"
                    android:weightSum="2"
                    app:layout_constraintTop_toTopOf="parent">

                    <EditText
                        android:id="@+id/selectSearchList"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="@dimen/value_60dp"
                        android:layout_weight="1.8"
                        android:background="@color/transparent"
                        android:fontFamily="@font/poppins_medium"
                        android:gravity="left|center"
                        android:hint="Search Type"
                        android:imeOptions="actionSearch"
                        android:inputType="text"
                        android:maxLines="1"
                        android:paddingStart="@dimen/text_15sp"

                        android:textColor="@color/black"
                        android:textSize="@dimen/text_14sp" />

                    <ImageView
                        android:id="@+id/filterByList"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"

                        android:layout_marginEnd="@dimen/text_10sp"
                        android:layout_weight=".2"


                        android:src="@drawable/ic_baseline_arrow_drop_down_24" />


                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/ashcolor" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <RelativeLayout
                        android:id="@+id/search_layout"
                        android:layout_width="0dp"
                        android:layout_height="45dp"
                        android:layout_gravity="center"
                        android:layout_weight="0.8"
                        android:gravity="center"

                        android:paddingBottom="@dimen/value_10dp"
                        app:layout_constraintTop_toTopOf="parent">

                        <LinearLayout
                            android:id="@+id/search_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/text_dimen_10"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="@dimen/value_22dp"
                                android:layout_height="@dimen/value_22dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_search" />
                        </LinearLayout>


                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/filterInputText"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="@dimen/value_5dp"
                            android:layout_toEndOf="@id/search_icon"
                            android:background="@null"
                            android:drawablePadding="22dp"
                            android:gravity="left|center"
                            android:hint="Search"
                            android:imeOptions="actionSearch"
                            android:inputType="text"
                            android:maxLines="1"
                            android:padding="5dp"
                            android:paddingTop="@dimen/five5_sp"
                            android:paddingBottom="@dimen/five5_sp"
                            android:textSize="@dimen/text_14sp" />
                    </RelativeLayout>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="@dimen/value_40dp"
                        android:layout_gravity="end"
                        android:layout_marginStart="@dimen/value_10dp"
                        android:layout_weight="0.2"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/submit"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/value_30dp"
                            android:layout_gravity="center"
                            android:background="@drawable/search_button_bg"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="@string/label_search"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_15sp"
                            android:textStyle="bold" />


                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:id="@+id/dateSelectionLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/apollo_img_color"
            android:orientation="horizontal"
            android:padding="@dimen/value_10dp"
            android:visibility="gone"
            android:weightSum="3">

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/value_10dp"
                android:layout_weight="1.1"
                android:textColorHint="@color/white">

                <androidx.appcompat.widget.AppCompatEditText
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/value_55dp"
                    android:clickable="true"
                    android:drawableEnd="@drawable/ic_baseline_date_range_complaints"
                    android:focusable="false"
                    android:hint="From Date"
                    android:paddingStart="@dimen/value_7dp"
                    android:paddingEnd="@dimen/value_7dp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="@dimen/text_14sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/value_10dp"
                android:layout_weight="1.1"
                android:textColorHint="@color/white">

                <androidx.appcompat.widget.AppCompatEditText
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/value_55dp"
                    android:clickable="true"
                    android:drawableEnd="@drawable/ic_baseline_date_range_complaints"
                    android:focusable="false"
                    android:hint="To Date"
                    android:paddingStart="@dimen/value_7dp"
                    android:paddingEnd="@dimen/value_7dp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="@dimen/text_14sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="0dp"
                android:layout_height="@dimen/value_40dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.8"
                android:background="@drawable/yellow_drawable"
                android:text="@string/label_submit"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/inventoryMessageForCamera" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dateSelectionLayout"
            android:background="@color/apollo_img_color"
            android:orientation="horizontal"
            android:paddingStart="@dimen/value_10dp"
            android:paddingEnd="@dimen/value_10dp"
            android:paddingBottom="@dimen/value_10dp"
            android:visibility="gone"
            android:weightSum="2">

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/value_10dp"
                android:layout_weight="1"
                android:textColorHint="@color/white">

                <androidx.appcompat.widget.AppCompatEditText
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/value_50dp"
                    android:clickable="true"
                    android:drawableEnd="@drawable/ic_baseline_arrow_drop_down_24"
                    android:drawableTint="@color/white"
                    android:focusable="false"
                    android:hint="Search Type"
                    android:paddingStart="@dimen/value_10dp"
                    android:paddingEnd="@dimen/value_10dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/white"
                    android:textSize="@dimen/text_15sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/filterHeaderText"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColorHint="@color/black"
                android:theme="@style/TextLabel">

                <androidx.appcompat.widget.AppCompatEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Search"
                    android:imeOptions="actionDone"
                    android:paddingStart="@dimen/value_10dp"
                    android:paddingEnd="@dimen/value_10dp"
                    android:textColorHint="@color/white"
                    android:textSize="@dimen/text_14sp" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewApproved"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/filterListLayout"
            android:visibility="visible"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:itemCount="1"
            tools:listitem="@layout/approved_order" />

        <RelativeLayout
            android:id="@+id/emptyList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:visibility="gone">

            <ImageView
                android:id="@+id/emptyImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:contentDescription="@string/app_name"
                android:src="@drawable/qca" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/emptyImage"
                android:text="No Approved Data is  Available"
                android:textColor="@color/backgroundColor"
                android:textSize="@dimen/text_15sp" />
        </RelativeLayout>

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:elevation="@dimen/value_4dp"
            android:visibility="gone"
            app:layout_constraintHorizontal_bias="0.5" />
    </RelativeLayout>
</layout>
