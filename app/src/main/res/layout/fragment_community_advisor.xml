<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/community_advisor_tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:weightSum="1">

                <TextView

                    android:id="@+id/services_button"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dimen48dp"
                    android:layout_weight="0.5"
                    android:background="@color/header_blue"
                    android:gravity="center"
                    android:onClick="@{()-> callback.onClickServicesTab()}"
                    android:text="@string/stringservices"
                    android:textAlignment="center"
                    android:textColor="@color/white_for_both"
                    android:visibility="visible" />

                <View
                    android:layout_width="@dimen/dimen1dp"
                    android:layout_height="match_parent"
                    android:background="@color/white" />


                <TextView
                    android:id="@+id/customer_interaction_button"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dimen48dp"
                    android:layout_weight="0.5"
                    android:background="@color/grey"
                    android:gravity="center"
                    android:onClick="@{()-> callback.onClickCustomerInteractionTab()}"
                    android:text="@string/stringcustomer_interaction"
                    android:textAlignment="center"
                    android:textColor="@color/white_for_both"
                    android:visibility="visible" />
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen20dp"
                android:layout_marginTop="@dimen/value_10dp"
                android:layout_marginEnd="@dimen/dimen20dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="6dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/value_45dp"
                    android:background="@drawable/search_view_pendency"
                    android:backgroundTint="@color/complaintlist_search_bg_color"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".1">

                        <ImageView
                            android:id="@+id/searchIcon"
                            android:layout_width="@dimen/value_22dp"
                            android:layout_height="@dimen/value_22dp"
                            android:layout_marginStart="@dimen/value_10dp"
                            android:contentDescription="@string/app_name"
                            android:src="@drawable/close_blue_new"
                            android:tint="#b8b8b8"
                            tools:ignore="UseAppTint" />

                    </RelativeLayout>

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/search_view"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/transparent"
                        android:gravity="start|center_vertical"
                        android:hint="@string/stringsearch_by_request_id"
                        android:imeOptions="actionSearch"
                        android:inputType="text"
                        android:maxLines="1"
                        android:paddingStart="@dimen/value_10dp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_14sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/servicesRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen20dp"
                android:layout_marginTop="@dimen/value_10dp"
                android:layout_marginEnd="@dimen/dimen20dp" />

        </LinearLayout>
        <RelativeLayout
            android:id="@+id/no_list_found"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:visibility="visible">

            <ImageView
                android:id="@+id/emptyImage"
                android:layout_width="@dimen/value_120dp"
                android:layout_height="@dimen/value_120dp"
                android:layout_centerInParent="true"
                android:contentDescription="@string/app_name"
                android:src="@drawable/qca" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_below="@id/emptyImage"
                android:text="@string/label_no_list_found"
                android:textColor="@color/backgroundColor"
                android:textSize="@dimen/text_18sp" />

        </RelativeLayout>
    </RelativeLayout>

    <data>

        <variable
            name="callback"
            type="com.apollopharmacy.vishwam.ui.home.communityadvisor.CommunityAdvisorFragmentCallback" />
    </data>
</layout>