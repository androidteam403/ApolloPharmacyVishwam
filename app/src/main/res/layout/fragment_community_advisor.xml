<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/community_advisor_tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:weightSum="1">

                <TextView

                    android:id="@+id/services_button"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dimen48dp"
                    android:layout_weight="0.4"
                    android:background="@color/header_blue"
                    android:gravity="center"
                    android:text="@string/stringservices"
                    android:textAlignment="center"

                    android:textColor="@color/white_for_both"
                    android:visibility="visible" />

                <View
                    android:layout_width="@dimen/dimen1dp"
                    android:layout_height="match_parent"
                    android:background="@color/white" />


                <TextView
                    android:id="@+id/customer_interaction_button"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dimen48dp"
                    android:layout_weight="0.6"
                    android:background="@color/grey"
                    android:gravity="center"
                    android:text="@string/stringcustomer_interaction"
                    android:textAlignment="center"
                    android:textColor="@color/white_for_both"
                    android:visibility="visible" />
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen20dp"
                android:layout_marginTop="@dimen/value_10dp"
                android:layout_marginEnd="@dimen/dimen20dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="6dp">

                <RelativeLayout
                    android:id="@+id/search_layout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/value_45dp"
                    android:layout_gravity="center"
                    android:background="@color/home_search_box_bg"
                    android:padding="@dimen/dimen_5dp"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/search_by_reqid"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:background="@null"
                        android:drawableStart="@drawable/close_blue_new"
                        android:drawablePadding="@dimen/dimen20dp"
                        android:drawableTint="@color/grey"
                        android:gravity="left|center"
                        android:hint="@string/stringsearch_by_request_id"
                        android:imeOptions="actionSearch"
                        android:inputType="text"
                        android:maxLines="1"
                        android:padding="@dimen/value_5dp"
                        android:paddingTop="@dimen/value_5dp"
                        android:paddingBottom="@dimen/value_5dp"
                        android:textSize="@dimen/text_14sp" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/community_advisor_recyclerview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen20dp"
                android:layout_marginTop="@dimen/text_dimen_10"
                android:layout_marginEnd="@dimen/dimen20dp" />

        </LinearLayout>
    </RelativeLayout>
</layout>