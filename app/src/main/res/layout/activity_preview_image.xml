<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".ui.home.sampleui.swachlistmodule.previewImage.PreviewImageActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/light_blue"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/header_blue"
                android:orientation="horizontal"
                android:padding="@dimen/four4_dp">

                <ImageView
                    android:layout_width="@dimen/value_40dp"
                    android:layout_height="@dimen/value_40dp"
                    android:layout_gravity="center"
                    android:contentDescription="@string/app_name"
                    android:onClick="@{()-> callback.onClickBack()}"
                    android:src="@drawable/ic_baseline_keyboard_arrow_left_24" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@{imageUrlModel.categoryname}"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_17sp"
                    android:textStyle="bold" />

                <TextView
                    android:text=" - "
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_15sp"
                    android:visibility="visible"/>


                <TextView
                    android:layout_gravity="center"
                    android:id="@+id/count_categoryPreview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_15sp"
                    android:visibility="visible"/>








                <!--                <TextView-->
                <!--                    android:layout_width="wrap_content"-->
                <!--                    android:layout_height="wrap_content"-->
                <!--                    android:layout_gravity="center"-->
                <!--                    android:text="@{imageId}"-->
                <!--                    android:textColor="@color/white"-->
                <!--                    android:textSize="@dimen/text_17sp"-->
                <!--                    android:textStyle="bold" />-->


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:gravity="end">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/value_50dp"
                        android:layout_gravity="center"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/close_white_icon"
                        android:visibility="gone" />
                </LinearLayout>


            </LinearLayout>


            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginStart="@dimen/value_15dp"
                    android:layout_marginTop="@dimen/value_10dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/value_25dp"
                            android:layout_height="@dimen/value_25dp"
                            android:layout_gravity="center"
                            android:src="@drawable/storehome" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/value_8dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Store ID"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_12sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@{pendingAndApprovedModel.storeId}"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_12sp"
                                android:textStyle="bold" />


                        </LinearLayout>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/value_25dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/text_22sp"
                            android:layout_height="@dimen/text_22sp"
                            android:layout_gravity="center"
                            android:src="@drawable/calendar" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/value_6dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Uploaded"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_12sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@{pendingAndApprovedModel.status.equals(`PENDING`) ? pendingAndApprovedModel.uploadedDate : pendingAndApprovedModel.status.equals(`APPROVED`) ? pendingAndApprovedModel.approvedDate : pendingAndApprovedModel.status.equals(`RESHOOT`) ? pendingAndApprovedModel.reshootDate : pendingAndApprovedModel.status.equals(`PARTIALLY APPROVED`) ? pendingAndApprovedModel.partiallyApprovedDate : `-`}"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_12sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/value_30dp"
                    android:background="@color/header_blue"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="@dimen/value_35dp"
                        android:layout_height="@dimen/value_35dp"
                        android:layout_gravity="center"
                        android:contentDescription="@string/app_name"
                        android:padding="@dimen/five5_sp"
                        android:src="@drawable/eye2withbackground" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Preview Last Uploaded"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textStyle="bold" />


                </LinearLayout>


                <androidx.viewpager.widget.ViewPager
                    android:layout_marginTop="@dimen/text_10sp"
                    android:id="@+id/preview_image_viewpager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/value_60dp" />
                <!--                    <ImageView-->
                <!--                        android:layout_width="match_parent"-->
                <!--                        android:layout_height="400dp"-->
                <!--                        android:contentDescription="@string/app_name"-->
                <!--                        android:scaleType="fitXY"-->
                <!--                        android:src="@drawable/capture" />-->





            </LinearLayout>

        </LinearLayout>



    </RelativeLayout>

    <data>

        <variable
            name="pendingAndApprovedModel"
            type="com.apollopharmacy.vishwam.ui.home.sampleui.swachlistmodule.fragment.model.PendingAndApproved" />

        <variable
            name="imageUrlModel"
            type="com.apollopharmacy.vishwam.ui.home.sampleui.swachlistmodule.approvelist.model.GetImageUrlsResponse.ImageUrl" />

<!--        <variable-->
<!--            name="totalImages"-->
<!--            type="String" />-->

        <variable
            name="callback"
            type="com.apollopharmacy.vishwam.ui.home.sampleui.swachlistmodule.previewImage.PreviewImageCallback" />


    </data>
</layout>