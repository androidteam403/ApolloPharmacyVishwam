<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/light_blue">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <androidx.cardview.widget.CardView
            android:layout_marginTop="@dimen/value_3dp"
            android:layout_marginBottom="@dimen/value_5dp"
            android:layout_marginRight="@dimen/value_5dp"
            android:layout_marginLeft="@dimen/value_5dp"
            android:id="@+id/cardview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible">


            <LinearLayout
                android:id="@+id/orderHead"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/value_5dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/overallLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorWhite"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_marginTop="@dimen/value_10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/value_10dp"
                        android:layout_marginEnd="@dimen/value_5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Comments: "
                            android:textSize="@dimen/text_12sp" />

                        <TextView
                            android:id="@+id/comments"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_12sp"
                            android:textStyle="bold" />



                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/value_10dp"
                        android:layout_marginTop="@dimen/thirteen13_dp"
                        android:layout_marginEnd="@dimen/value_5dp"
                        android:orientation="horizontal">




                        <LinearLayout
                            android:id="@+id/ratingBarLayout"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/value_30dp"
                            android:orientation="horizontal"
                            android:visibility="visible">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Rating: "
                                android:textSize="@dimen/text_12sp" />



                            <RatingBar
                                android:id="@+id/ratingBar"
                                style="?android:attr/ratingBarStyleIndicator"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:isIndicator="true"
                                android:max="5"
                                android:numStars="5"
                                android:scaleX=".5"
                                android:scaleY=".5"
                                android:stepSize="1"
                                android:clickable="false"
                                android:theme="@style/RatingBar"
                                android:transformPivotX="0dp"
                                android:transformPivotY="0dp" />

                            <!--                            <TextView-->
                            <!--                                android:layout_marginBottom="3sp"-->
                            <!--                                android:layout_width="@dimen/value_60dp"-->
                            <!--                                android:layout_height="wrap_content"-->
                            <!--                                android:onClick="@{()-> callback.onClickSubmitRating()}"-->
                            <!--                                android:padding="@dimen/value_3dp"-->
                            <!--                                android:background="@drawable/green_background"-->
                            <!--                                android:text="Submit"-->
                            <!--                                android:textAlignment="center"-->
                            <!--                                android:textColor="@color/white"-->
                            <!--                                android:textSize="@dimen/text_12sp"-->
                            <!--                                android:textStyle="bold" />-->


                        </LinearLayout>






                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/value_10dp"
                        android:layout_marginEnd="@dimen/value_5dp"
                        android:orientation="horizontal">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Approved By: "
                            android:textSize="@dimen/text_12sp" />

                        <TextView
                            android:id="@+id/userId"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_12sp"
                            android:textStyle="bold" />






                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/value_10dp"
                        android:layout_marginTop="@dimen/thirteen13_dp"
                        android:layout_marginEnd="@dimen/value_5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Approved Date:"
                            android:textSize="@dimen/text_12sp" />

                        <TextView
                            android:id="@+id/createdOn"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_12sp"
                            android:textStyle="bold" />






                    </LinearLayout>







                </LinearLayout>


            </LinearLayout>

        </androidx.cardview.widget.CardView>




    </LinearLayout>

</RelativeLayout>

</layout>