<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/value_5dp"
        android:elevation="@dimen/value_5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:id="@+id/orderHead"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/pendingLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/value_5dp"
                    android:background="#fcf6e4"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".12"
                        android:gravity="center_vertical">

                        <ImageView
                            android:id="@+id/checkBox"
                            android:layout_width="43dp"
                            android:layout_height="43dp"
                            android:contentDescription="@string/app_name"
                            android:src="@drawable/qc_checkbox"
                            android:visibility="visible" />

                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.2"
                        android:gravity="start">

                        <TextView
                            android:id="@+id/store"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_medium"
                            android:text="Store Id"
                            android:textSize="@dimen/text_12sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/store_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/store"
                            android:fontFamily="@font/roboto_medium"
                            android:text="50001400"
                            android:layout_marginEnd="@dimen/value_1dp"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_12sp"
                            android:textStyle="bold" />
                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.33"
                        android:gravity="start">

                        <TextView
                            android:id="@+id/order"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_medium"
                            android:text="Order Id"
                            android:textSize="@dimen/text_12sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/orderid"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/order"
                            android:fontFamily="@font/roboto_medium"
                            android:text="50001400"
                            android:layout_marginEnd="@dimen/value_1dp"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_12sp"
                            android:textStyle="bold" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.21"
                        android:gravity="start">

                        <TextView
                            android:id="@+id/postedDateText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_medium"
                            android:text="Req. Date"
                            android:textSize="@dimen/text_12sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/postedDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/postedDateText"
                            android:fontFamily="@font/roboto_medium"
                            android:text="25-sep-2020"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_12sp"
                            android:textStyle="bold" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.24"
                        android:visibility="gone"
                        android:gravity="start">


                        <TextView
                            android:id="@+id/approve_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_medium"
                            android:text="Qc Fail.Date"
                            android:textSize="@dimen/text_12sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/req_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/approve_date"
                            android:fontFamily="@font/roboto_medium"
                            android:text="30.29"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_12sp"
                            android:textStyle="bold" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".08"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/arrowClose"
                            android:layout_width="@dimen/text_22sp"
                            android:layout_height="@dimen/text_22sp"
                            android:contentDescription="@string/app_name"
                            android:rotation="90"
                            android:src="@drawable/ic_baseline_arrow_forward_ios_24"
                            android:visibility="gone" />


                        <ImageView
                            android:id="@+id/arrow"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:contentDescription="@string/app_name"
                            android:src="@drawable/baseline_add_circle_outline_qc"
                            android:visibility="visible" />

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#fcf6e4"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/value_5dp"
                    android:weightSum="1">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".12" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".88"
                        android:visibility="gone"
                        android:layout_marginBottom="@dimen/value_5dp"

                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_medium"
                            android:text="16001 - "
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_12sp" />

                        <TextView
                            android:id="@+id/location_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_medium"
                            android:text="Apollo Pharmacy-Hyderabad"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_12sp" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#F2F2F2">

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/extraData"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <LinearLayout
                        android:id="@+id/detailslayout"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/value_25dp"

                        android:layout_marginTop="@dimen/value_10dp"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/text_12sp"
                            android:layout_weight="1"
                            android:visibility="visible">

                            <TextView
                                android:id="@+id/cust_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="1dp"
                                android:text="Raghu"

                                android:textColor="@color/black"

                                android:textSize="@dimen/text_12sp"
                                android:textStyle="bold"
                                app:fontFamily="@font/roboto_medium" />

                            <TextView
                                android:id="@+id/cust_number"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_marginStart="@dimen/value_5dp"
                                android:layout_marginTop="1dp"
                                android:layout_toRightOf="@+id/cust_name"

                                android:lines="2"

                                android:text="- RV00002"
                                android:textSize="@dimen/text_12sp"
                                android:textStyle="bold"
                                app:fontFamily="@font/roboto_medium" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:text="9448309999"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_12sp"

                                android:textStyle="bold"

                                app:fontFamily="@font/roboto_medium" />


                        </RelativeLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/avg_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/value_7dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/categoryAvgData"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pharma : "
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_13sp" />
                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:itemCount="1"
                        tools:listitem="@layout/qc_order_layout" />

                    <LinearLayout
                        android:id="@+id/totalCostlayout"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:visibility="visible">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/backgroundColor">

                            <TextView
                                android:id="@+id/subTotalText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/value_20dp"
                                android:layout_marginTop="@dimen/value_10dp"
                                android:fontFamily="@font/roboto_medium"
                                android:text="Total"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_13sp" />

                            <TextView
                                android:id="@+id/totalCost"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/subTotalText"
                                android:layout_marginStart="@dimen/value_17dp"
                                android:drawableLeft="@drawable/white_rupees"
                                android:text="50.10"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_13sp" />

                            <TextView
                                android:id="@+id/taxAmount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_marginStart="@dimen/value_10dp"
                                android:layout_marginTop="@dimen/value_10dp"
                                android:fontFamily="@font/roboto_medium"
                                android:text="Discount"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_13sp" />

                            <TextView
                                android:id="@+id/discountTotal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/subTotalText"
                                android:layout_centerInParent="true"
                                android:layout_marginStart="@dimen/value_17dp"
                                android:drawableLeft="@drawable/white_rupees"
                                android:text="0"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_13sp" />

                            <TextView
                                android:id="@+id/totalPayment"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_marginLeft="@dimen/value_10dp"
                                android:layout_marginTop="@dimen/value_10dp"
                                android:layout_marginRight="@dimen/value_10dp"
                                android:fontFamily="@font/roboto_medium"
                                android:text="Net Payment"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_13sp" />

                            <TextView
                                android:id="@+id/remainingPayment"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/subTotalText"
                                android:layout_alignParentEnd="true"
                                android:layout_marginStart="@dimen/value_17dp"
                                android:layout_marginEnd="@dimen/value_40dp"
                                android:drawableLeft="@drawable/white_rupees"
                                android:text="0"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_13sp" />
                        </RelativeLayout>
                    </LinearLayout>

                    <EditText
                        android:id="@+id/writeRemarks"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/value_40dp"
                        android:layout_marginStart="@dimen/value_10dp"
                        android:layout_marginTop="@dimen/value_5dp"
                        android:layout_marginEnd="@dimen/value_10dp"
                        android:background="@drawable/bulk_discount_edittext"
                        android:hint="Write your remarks"
                        android:imeOptions="flagNoExtractUi"
                        android:inputType="textMultiLine"
                        android:paddingStart="@dimen/value_10dp"
                        android:visibility="gone" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginTop="@dimen/value_10dp"
                        android:layout_marginBottom="@dimen/value_5dp"
                        android:layout_weight="2"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/rejectClick"
                            android:layout_width="@dimen/value_250dp"
                            android:layout_height="@dimen/value_40dp"
                            android:layout_marginStart="@dimen/value_15dp"
                            android:layout_marginEnd="@dimen/value_15dp"
                            android:layout_marginBottom="@dimen/value_5dp"
                            android:layout_weight="1"
                            android:background="@drawable/qc_reject_button"
                            android:text="Reject"
                            android:textColor="@color/white" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/acceptClick"
                            android:layout_width="@dimen/value_250dp"
                            android:layout_height="@dimen/value_40dp"
                            android:layout_marginStart="@dimen/value_10dp"
                            android:layout_marginEnd="@dimen/value_15dp"
                            android:layout_marginBottom="@dimen/value_5dp"
                            android:layout_weight="1"
                            android:background="@drawable/qc_accept_background"
                            android:text="Accept"
                            android:textColor="@color/white" />
                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</layout>


