<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/value_5dp"
        android:elevation="@dimen/value_5dp">

        <LinearLayout
            android:id="@+id/orderHead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/pendingLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:background="@color/light_blue"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/checkBoxLayout"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="0.6"
                    android:gravity="center"
                    android:paddingTop="@dimen/value_10dp"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/value_15dp"
                    android:paddingEnd="@dimen/value_15dp"
                    android:paddingBottom="@dimen/value_10dp"
                    android:visibility="visible">

                    <ImageView
                        android:id="@+id/checkBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/ic_baseline_radio_button_unchecked_24" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/itemHeaderLayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3.3"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3.3">

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.7"
                            android:paddingTop="@dimen/value_10dp">

                            <TextView
                                android:id="@+id/storeId"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:text="Store Id"
                                android:textColor="@color/heading_blue"
                                android:textSize="@dimen/text_13sp"
                                app:fontFamily="@font/droidsans" />

                            <TextView
                                android:id="@+id/storeIdText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/storeId"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="@dimen/value_5dp"
                                android:layout_marginBottom="@dimen/value_10dp"
                                android:text="50001400"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_14sp"
                                app:fontFamily="@font/droidsans" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.1"
                            android:paddingTop="@dimen/value_10dp">

                            <TextView
                                android:id="@+id/postedDateText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:text="QC Fail Date"
                                android:textColor="@color/heading_blue"
                                android:textSize="@dimen/text_13sp"
                                app:fontFamily="@font/droidsans" />

                            <TextView
                                android:id="@+id/postedDate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/postedDateText"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="@dimen/value_5dp"
                                android:layout_marginBottom="@dimen/value_10dp"
                                android:text="25-sep-2020"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_14sp"
                                app:fontFamily="@font/droidsans" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingTop="@dimen/value_10dp">

                            <TextView
                                android:id="@+id/orderid"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:text="Location Name"
                                android:textColor="@color/heading_blue"
                                android:textSize="@dimen/text_13sp"
                                app:fontFamily="@font/droidsans" />

                            <TextView
                                android:id="@+id/order_id_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/orderid"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="@dimen/value_5dp"
                                android:layout_marginBottom="@dimen/value_10dp"
                                android:text="Hyderabad"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_14sp"
                                app:fontFamily="@font/droidsans" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.7"
                            android:paddingTop="@dimen/value_10dp"
                            android:visibility="gone">

                            <TextView
                                android:id="@+id/bulkDiscText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:text="DC Code"
                                android:textColor="@color/heading_blue"
                                android:textSize="@dimen/text_13sp"
                                app:fontFamily="@font/droidsans" />

                            <TextView
                                android:id="@+id/locations"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/bulkDiscText"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="@dimen/value_5dp"
                                android:layout_marginBottom="@dimen/value_10dp"
                                android:text="hyderbad"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_14sp"
                                app:fontFamily="@font/droidsans" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5">

                            <ImageView
                                android:id="@+id/arrowClose"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:contentDescription="@string/app_name"
                                android:paddingBottom="15dp"
                                android:src="@drawable/ic_baseline_minimize_24"
                                android:visibility="gone" />

                            <ImageView
                                android:id="@+id/arrow"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:contentDescription="@string/app_name"
                                android:src="@drawable/ic_baseline_add_24"
                                android:visibility="visible" />
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/extraData"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/detailslayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/value_10dp"
                    android:layout_marginTop="@dimen/value_10dp"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/storeName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:text="Store Name"
                            android:textColor="@color/heading_blue"
                            android:textSize="@dimen/text_13sp"
                            app:fontFamily="@font/droidsans" />

                        <TextView
                            android:id="@+id/storeNameText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/storeName"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/value_2dp"
                            android:lines="2"
                            android:text="Demo"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_13sp"
                            app:fontFamily="@font/droidsans" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/customerName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:text="Cust. Name"
                            android:textColor="@color/heading_blue"
                            android:textSize="@dimen/text_13sp"
                            app:fontFamily="@font/droidsans" />

                        <TextView
                            android:id="@+id/customerNameText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/customerName"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/value_2dp"
                            android:lines="2"
                            android:text="Abhishek"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_13sp"
                            app:fontFamily="@font/droidsans" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/phNumber"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:text="Cust.No."
                            android:textColor="@color/heading_blue"
                            android:textSize="@dimen/text_13sp"
                            app:fontFamily="@font/droidsans" />

                        <TextView
                            android:id="@+id/customerPhNumber"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/phNumber"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/value_2dp"
                            android:lines="2"
                            android:text="7008058285"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_13sp"
                            app:fontFamily="@font/droidsans" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:visibility="visible">

                        <TextView
                            android:id="@+id/orderidtext"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:text="Order Id"
                            android:textColor="@color/heading_blue"
                            android:textSize="@dimen/text_13sp"
                            app:fontFamily="@font/droidsans" />

                        <TextView
                            android:id="@+id/dcLocation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/orderidtext"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/value_2dp"
                            android:lines="2"
                            android:text="Apollo"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_13sp"
                            app:fontFamily="@font/droidsans"
                            tools:ignore="NotSibling" />
                    </RelativeLayout>



                </LinearLayout>

                <LinearLayout
                    android:id="@+id/avg_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/value_7dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/categoryAvgData"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pharma : "
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_13sp" />
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:itemCount="1"
                    tools:listitem="@layout/qc_order_layout" />



                <EditText
                    android:id="@+id/writeRemarks"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/value_40dp"
                    android:layout_marginStart="@dimen/value_10dp"
                    android:layout_marginTop="@dimen/value_5dp"
                    android:layout_marginEnd="@dimen/value_10dp"
                    android:background="@drawable/bulk_discount_edittext"
                    android:hint="Write your remarks"
                    android:imeOptions="flagNoExtractUi"
                    android:inputType="textMultiLine"
                    android:paddingStart="@dimen/value_10dp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="@dimen/value_10dp"
                    android:layout_marginBottom="@dimen/value_5dp"
                    android:layout_weight="2"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/rejectClick"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/value_40dp"
                        android:layout_marginStart="@dimen/value_15dp"
                        android:layout_marginEnd="@dimen/value_15dp"
                        android:layout_marginBottom="@dimen/value_5dp"
                        android:layout_weight="1"
                        android:background="@drawable/reject_button"
                        android:text="Reject"
                        android:textColor="@color/white" />

                    <Button
                        android:id="@+id/acceptClick"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/value_40dp"
                        android:layout_marginStart="@dimen/value_10dp"
                        android:layout_marginEnd="@dimen/value_15dp"
                        android:layout_marginBottom="@dimen/value_5dp"
                        android:layout_weight="1"
                        android:background="@drawable/accept_background"
                        android:text="Accept"
                        android:textColor="@color/white" />
                </LinearLayout>


            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>
