<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_custom_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/value_20dp"
    android:background="@android:color/black">

    <TextView
        android:id="@+id/category_naePop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/cement"
        android:textSize="@dimen/text_15sp"
        android:layout_marginTop="@dimen/value_15dp"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:layout_marginLeft="@dimen/twenty20_dp"
        android:visibility="visible"/>

    <ImageButton
        android:id="@+id/ib_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:background="@null"
        android:contentDescription="@string/app_name"
        android:elevation="@dimen/value_5dp"
        android:padding="@dimen/value_8dp"
        android:src="@android:drawable/ic_menu_close_clear_cancel"
        app:srcCompat="@android:drawable/ic_menu_close_clear_cancel" />

    <ProgressBar
        android:id="@+id/loading"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:elevation="@dimen/value_10dp" />

    <com.github.chrisbanes.photoview.PhotoView
        android:id="@+id/image"
        android:layout_width="match_parent"

        android:layout_height="match_parent" />



</RelativeLayout>