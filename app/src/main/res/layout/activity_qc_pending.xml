<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.home.qcfail.pending.QcPendingActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#edf5f8"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/title_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/value_70dp"

                android:background="#045a71"
                android:orientation="horizontal"
                android:padding="@dimen/four4_dp">

                <ImageView
                    android:id="@+id/back"
                    android:layout_width="@dimen/value_40dp"
                    android:layout_height="@dimen/value_40dp"

                    android:layout_gravity="center"
                    android:contentDescription="@string/app_name"
                    android:onClick="@{()-> callback.onClickBack()}"
                    android:src="@drawable/icon_back_arrow"
                    tools:ignore="UseAppTint" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/list_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginStart="15sp"
                        android:text="Pending List"
                        android:textColor="@color/white"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/orderid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginStart="15sp"
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                </LinearLayout>


            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                app:cardElevation="5dp"
                app:strokeColor="#045a71"
                app:strokeWidth="0.10dp"

                android:layout_height="wrap_content">


            <LinearLayout
                android:id="@+id/heaader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/pendency_list_qc"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/custmer_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="14dp"
                        android:layout_marginTop="@dimen/value_5dp"
                        android:layout_marginEnd="@dimen/value_1dp"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Apollo"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/phone_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="14dp"
                        android:layout_marginTop="24dp"
                        android:fontFamily="@font/poppin_bold"
                        android:text="9287428743"

                        android:textColor="@color/black"
                        android:textSize="11sp" />
                </RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="14dp"
                        android:layout_weight=".6"
                        android:gravity="start">

                        <TextView
                            android:id="@+id/store"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_medium"
                            android:text="Store ID"
                            android:textSize="@dimen/text_12sp" />

                        <TextView
                            android:id="@+id/store_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:layout_marginEnd="@dimen/value_1dp"
                            android:fontFamily="@font/poppins_medium"
                            android:paddingStart="3dp"
                            android:text="16001"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_12sp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/value_10dp"
                        android:layout_weight=".8"

                        android:gravity="start">

                        <TextView
                            android:id="@+id/dc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_medium"
                            android:text="Dc Code"

                            android:textSize="@dimen/text_12sp" />

                        <TextView
                            android:id="@+id/dc_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:fontFamily="@font/poppins_medium"
                            android:paddingStart="3dp"
                            android:text="16001"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_12sp" />
                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.2"
                        android:gravity="start"

                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/postedDateText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_medium"
                            android:text="Req. Date"
                            android:textSize="@dimen/text_12sp" />

                        <TextView
                            android:id="@+id/postedDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:fontFamily="@font/poppins_medium"
                            android:text="25-sep-2020"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_12sp" />
                    </RelativeLayout>


                </LinearLayout>


            </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_reject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="8dp"
                android:visibility="visible"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:itemCount="1"
                tools:listitem="@layout/qcrejectorderdetails" />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_pending"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="8dp"
                android:visibility="gone"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:itemCount="1"
                tools:listitem="@layout/qc_order_layout" />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_approved"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="8dp"
                android:visibility="gone"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:itemCount="1"

                tools:listitem="@layout/qc_approvedorderdetails" />


            <LinearLayout
                android:id="@+id/approvedbylayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    android:id="@+id/status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium"
                    android:paddingStart="10dp"
                    android:textSize="@dimen/dimen11sp"
                    android:textColor="@color/dark_grey"

                    android:text="Status :" />


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/status_recyleview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/lite_blue_border"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"

                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:itemCount="1"
                    tools:listitem="@layout/qc_status_layout" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="20dp"
                android:gravity="start">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Total : "
                    android:textColor="#548389"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:fontFamily="@font/roboto_medium"
                    android:drawableLeft="@drawable/qc_rupee_indian"

                    android:text="2600"

                    android:textColor="@color/blackqc"
                    android:textSize="@dimen/dimen11sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/value_1dp"
                    android:drawableLeft="@drawable/qc_rupee_indian"
                    android:fontFamily="@font/poppins_medium"
                    android:paddingStart="3sp"
                    android:text="2900 "
                    android:visibility="gone"
                    android:textColor="@color/blackqc"
                    android:textSize="@dimen/text_12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="20dp"
                android:gravity="start">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Discount : "
                    android:textColor="#548389"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/discount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:fontFamily="@font/roboto_medium"
                    android:drawableLeft="@drawable/qc_rupee_indian"

                    android:text="2600"

                    android:textColor="@color/blackqc"
                    android:textSize="@dimen/dimen11sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginBottom="@dimen/four4_dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="20dp"
                android:gravity="start">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Net Payment : "
                    android:textColor="#548389"
                    android:textSize="13sp" />
                <TextView
                    android:id="@+id/payment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:fontFamily="@font/roboto_medium"
                    android:drawableLeft="@drawable/qc_rupee_indian"

                    android:text="2600"

                    android:textColor="@color/blackqc"
                    android:textSize="@dimen/dimen11sp" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/action_layout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/value_10dp"
                android:layout_marginBottom="@dimen/value_5dp"
                android:layout_weight="2"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/rejectClick"
                    android:layout_width="@dimen/value_250dp"
                    android:layout_height="45dp"
                    android:layout_marginStart="@dimen/value_15dp"
                    android:layout_marginEnd="@dimen/value_15dp"
                    android:layout_marginBottom="@dimen/value_5dp"
                    android:layout_weight="1"
                    android:background="#ef1c23"
                    android:fontFamily="@font/roboto_medium"
                    android:gravity="center_vertical"
                    android:onClick="@{()-> callback.reject()}"
                    android:text="Reject"

                    android:textAlignment="center"
                    android:textColor="@color/white"
                    tools:ignore="RtlCompat" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/acceptClick"
                    android:layout_width="@dimen/value_250dp"
                    android:layout_height="45dp"
                    android:layout_marginStart="@dimen/value_10dp"
                    android:layout_marginEnd="@dimen/value_15dp"
                    android:layout_marginBottom="@dimen/value_5dp"
                    android:layout_weight="1"
                    android:background="#045a71"
                    android:fontFamily="@font/roboto_medium"
                    android:gravity="center_vertical"
                    android:onClick="@{()-> callback.accept()}"
                    android:text="Accept"

                    android:textAlignment="center"
                    android:textColor="@color/white"
                    tools:ignore="RtlCompat" />
            </LinearLayout>
        </LinearLayout>


    </RelativeLayout>

    <data>

        <variable
            name="callback"
            type="com.apollopharmacy.vishwam.ui.home.qcfail.pending.PendingActivityCallback" />
    </data>
</layout>