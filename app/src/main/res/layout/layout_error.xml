<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_validationbackground"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/splash_color">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:paddingStart="@dimen/twenty20_dp"
                android:text="Message"
                android:textColor="@color/white"
                android:textSize="@dimen/text_18sp" />

            <ImageButton
                android:id="@+id/close"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentEnd="true"

                android:background="@drawable/close_icon"
                android:contentDescription="@string/app_name"
                android:visibility="visible" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/value_40dp"
            android:layout_marginBottom="@dimen/value_40dp"
            android:gravity="center_horizontal"
            android:text="Please Enter all Mandatory Fields"
            android:textColor="@color/black"
            android:textSize="@dimen/text_18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/value_50dp"
            android:background="#EFEFEF"

            >

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/cancel_button"
                android:layout_width="@dimen/value_80dp"
                android:layout_height="32dp"
                android:layout_marginLeft="210dp"
                android:layout_marginTop="@dimen/value_10dp"
                android:background="@drawable/button_color"

                android:gravity="center"
                android:text="OK"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="@dimen/text_16sp" />

        </LinearLayout>
    </LinearLayout>
</layout>