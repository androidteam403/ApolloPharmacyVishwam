<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="5">

            <TableLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/squarebox_right"
                android:padding="@dimen/value_5dp">

                <TextView
                    android:id="@+id/chemist"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="Chemist"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dimen11sp"
                    android:textStyle="bold" />
            </TableLayout>

            <TableLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/squarebox_right"
                android:padding="@dimen/value_5dp">

                <TextView
                    android:id="@+id/organised"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="Organised"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dimen11sp"
                    android:textStyle="bold" />
            </TableLayout>

            <TableLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/squarebox_right"
                android:padding="@dimen/value_5dp">

                <TextView
                    android:id="@+id/organisedAvgSale"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="Avg Sale"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dimen11sp"
                    android:textStyle="bold" />
            </TableLayout>

            <TableLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/squarebox_right">

                <TextView
                    android:id="@+id/unorganised"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="Unorganised"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dimen11sp"
                    android:textStyle="bold" />
            </TableLayout>

            <TableLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/squarebox_right"
                android:padding="@dimen/value_5dp">

                <TextView
                    android:id="@+id/unorganisedAvgSale"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="Avg Sale"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dimen11sp"
                    android:textStyle="bold" />
            </TableLayout>
        </LinearLayout>
    </LinearLayout>
</layout>