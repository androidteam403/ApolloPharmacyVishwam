<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4">

            <TableLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.6"
                android:background="@drawable/squarebox_right"
                android:padding="@dimen/value_5dp">

                <TextView
                    android:id="@+id/apartments"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="Apartments"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dimen11sp" />
            </TableLayout>

            <TableLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/squarebox_right"
                android:padding="@dimen/value_5dp">

                <TextView
                    android:id="@+id/noOfHouses"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="No Of Houses"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dimen11sp" />
            </TableLayout>

            <TableLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".7"
                android:background="@drawable/squarebox_right">

                <TextView
                    android:id="@+id/distance"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="Distance"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dimen11sp" />
            </TableLayout>

            <TableLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".7"
                android:background="@drawable/squarebox_right"
                android:padding="@dimen/value_5dp">

                <TextView
                    android:id="@+id/types"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="Types"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dimen11sp" />
            </TableLayout>
        </LinearLayout>
    </LinearLayout>
</layout>