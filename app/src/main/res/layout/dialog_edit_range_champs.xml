                        <!--                android:textColorHint="@color/black">-->

                        <EditText
                            android:inputType="number"
                            android:digits="0123456789."
                            android:id="@+id/enterPoints"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/value_50dp"
                            android:layout_marginLeft="@dimen/value_5dp"
                            android:layout_marginTop="@dimen/value_10dp"
                            android:layout_marginRight="@dimen/value_5dp"
                            android:background="@drawable/champs_site_bg"
                            android:clickable="true"
                            android:enabled="true"
                            android:hint="Enter Points"
                            android:paddingStart="@dimen/value_10dp"
                            android:paddingEnd="@dimen/value_10dp"
                            android:textColor="@color/black"
                            android:textColorHint="@color/black"
                            android:textSize="@dimen/text_15sp" />
                        <!--            </com.google.android.material.textfield.TextInputLayout>-->
                        <LinearLayout
                            android:id="@+id/continue_champs"
                            android:layout_width="@dimen/value_120dp"
                            android:layout_height="@dimen/value_40dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/value_10dp"
                            android:background="@drawable/scan_btn_bg"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="Update"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_18sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>


