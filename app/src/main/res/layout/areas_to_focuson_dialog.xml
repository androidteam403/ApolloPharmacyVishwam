<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_marginHorizontal="@dimen/value_20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/champs_survey_dialog_background">




        <LinearLayout

            android:layout_marginTop="@dimen/text_dimen_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="@dimen/text_dimen_10">

            <LinearLayout
                android:weightSum="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_weight="0.8"
                    android:layout_marginTop="@dimen/value_5dp"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/name"
                        android:layout_marginStart="@dimen/value_10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Areas to focus on"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_18sp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:id="@+id/header_layout"
                    android:layout_width="0dp"
                    android:layout_weight="0.2"
                    android:layout_height="wrap_content">

                    <!--            <TextView-->
                    <!--                android:layout_width="wrap_content"-->
                    <!--                android:layout_height="wrap_content"-->
                    <!--                android:layout_centerInParent="true"-->
                    <!--                android:text="CHAMPS Survey"-->
                    <!--                android:textColor="@color/black"-->
                    <!--                android:textSize="@dimen/text_20sp"-->
                    <!--                android:textStyle="bold" />-->

                    <ImageView
                        android:id="@+id/close_button_areas"
                        android:layout_width="@dimen/value_35dp"
                        android:layout_height="@dimen/value_35dp"
                        android:src="@drawable/ash_close_icon" />
                </LinearLayout>
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_marginStart="@dimen/value_10dp"
                android:layout_marginTop="@dimen/value_5dp"
                android:id="@+id/areas_to_focus_on_recyclerview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </LinearLayout>



    </RelativeLayout>
</layout>
