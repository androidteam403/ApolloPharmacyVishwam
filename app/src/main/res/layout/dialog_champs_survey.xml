<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/champs_survey_dialog_background">

        <RelativeLayout
            android:id="@+id/header_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/value_10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="CHAMPS Survey"
                android:textColor="@color/black"
                android:textSize="@dimen/text_20sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/close_dialog_save_"
                android:layout_width="@dimen/value_40dp"
                android:layout_height="@dimen/value_40dp"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="@dimen/value_10dp"
                android:src="@drawable/qc_baseline_close_24"
                app:tint="#b1ada9" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/success_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/header_layout"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_pending_list_icons_report_success" />

            <TextView
                android:id="@+id/successfull_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/value_3dp"
                android:text="Successful"
                android:textStyle="bold"
                android:textColor="@color/dark_greenn"
                android:textSize="@dimen/text_16sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/value_10dp"
                    android:text="Champs ID: "
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_16sp"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/value_10dp"
                    android:id="@+id/champs_id"
                    android:textStyle="bold"
                    android:textColor="@color/dark_greenn"
                    android:textSize="@dimen/text_16sp" />

            </LinearLayout>




            <TextView
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginLeft="@dimen/value_15dp"
                android:layout_marginRight="@dimen/value_15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:id="@+id/address_save_"
                android:textColor="@color/black"
                android:textSize="@dimen/text_16sp" />

<!--            <TextView-->
<!--                android:layout_gravity="center"-->
<!--                android:gravity="center"-->
<!--                android:layout_marginLeft="@dimen/value_15dp"-->
<!--                android:layout_marginRight="@dimen/value_15dp"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:textStyle="bold"-->
<!--                android:id="@+id/site_id_save_"-->
<!--                android:textColor="@color/black"-->
<!--                android:textSize="@dimen/text_16sp" />-->
        </LinearLayout>

        <RelativeLayout
            android:layout_marginBottom="@dimen/text_dimen_20"
            android:id="@+id/progress_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/success_layout"
            android:orientation="vertical">

            <TextView
                android:id="@+id/total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               android:layout_marginStart="@dimen/value_20dp"
                android:text="Total"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="@dimen/text_18sp" />

            <androidx.appcompat.widget.AppCompatSeekBar
                android:layout_marginEnd="@dimen/text_dimen_20"
                android:id="@+id/seekbar1_save_"
                android:layout_width="match_parent"
                android:layout_height="@dimen/value_40dp"
                android:layout_below="@+id/total"
                android:max="100"
                android:min="0"
                android:progressDrawable="@drawable/bordered_seekbar_progress_style"
                android:thumb="@android:color/transparent" />
            <LinearLayout
                android:layout_below="@+id/total"
                android:layout_marginLeft="@dimen/value_20dp"
                android:paddingLeft="@dimen/value_10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/progress_percentage_display_save_"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="27sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/total"
                    android:paddingLeft="@dimen/value_10dp"
                    android:text="%"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="27sp"
                    android:textStyle="bold" />
            </LinearLayout>


<!--            <TextView-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_toRightOf="@+id/progress_percentage"-->
<!--                android:layout_below="@+id/total"-->
<!--                android:fontFamily="@font/droidsans"-->
<!--                android:layout_marginTop="@dimen/eighteen18_dp"-->
<!--                android:text="%"-->
<!--                android:textColor="@color/white"-->
<!--                android:textSize="@dimen/text_12sp" />-->
        </RelativeLayout>

        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/progress_layout"
            android:layout_marginHorizontal="@dimen/value_20dp"
            android:layout_marginTop="@dimen/value_20dp"
            android:orientation="vertical"
            android:paddingBottom="@dimen/value_30dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Survey started on"
                android:textSize="@dimen/text_14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/value_8dp"
                android:id="@+id/started_survey_on_save_"
                android:textColor="@color/black"
                android:textSize="@dimen/text_16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Survey Finished on"
                android:textSize="@dimen/text_14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/value_8dp"
               android:id="@+id/survey_ended_on_save_"
                android:textColor="@color/black"
                android:textSize="@dimen/text_16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total time taken"
                android:textSize="@dimen/text_14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/total_time_taken_save_"
                android:textColor="@color/black"
                android:textSize="@dimen/text_16sp"
                android:textStyle="bold" />
        </LinearLayout>

    </RelativeLayout>
</layout>
