<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.home.qcfail.pending.QcPendingActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#edf5f8"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/title_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/value_70dp"

                android:background="#045a71"
                android:orientation="horizontal"
                android:padding="@dimen/four4_dp">

                <ImageView
                    android:id="@+id/back"
                    android:layout_width="@dimen/value_40dp"
                    android:layout_height="@dimen/value_40dp"

                    android:layout_gravity="center"
                    android:contentDescription="@string/app_name"
                    android:onClick="@{()-> callback.onClickBack()}"
                    android:src="@drawable/icon_back_arrow"
                    tools:ignore="UseAppTint" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/list_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginStart="15sp"
                        android:text="Pending List"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/orderid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginStart="15sp"
                        android:text="ORDER ID : Rv00005"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/heaader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fcf6e4"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/custmer_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/value_1dp"
                    android:layout_marginTop="@dimen/value_5dp"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/poppins_medium"
                    android:paddingStart="@dimen/five5_sp"
                    android:text="Apollo"
                    android:textColor="@color/black"
                    android:textSize="13sp" />
                <TextView
                    android:id="@+id/phone_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/postedDateText"
                    android:fontFamily="@font/poppins_medium"
                    android:paddingStart="@dimen/five5_sp"
                    android:text="9287428743"
                    android:layout_marginStart="10dp"

                    android:textColor="@color/black"
                    android:textSize="@dimen/text_12sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/value_5dp"
                    android:weightSum="3">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_weight=".5"
                        android:orientation="vertical"
                        android:gravity="start">

                        <TextView
                            android:id="@+id/store"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_medium"
                            android:text="Store Id : "
                            android:textSize="@dimen/text_12sp" />

                        <TextView
                            android:id="@+id/store_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/store"
                            android:layout_marginEnd="@dimen/value_1dp"
                            android:fontFamily="@font/poppins_medium"
                            android:paddingStart="3dp"
                            android:text="16001"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/value_10dp"
                        android:layout_weight=".6"
                        android:orientation="vertical"

                        android:gravity="start">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_medium"
                            android:text="Dc Code : "
                            android:textSize="@dimen/text_12sp" />

                        <TextView
                            android:id="@+id/dc_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/postedDateText"
                            android:fontFamily="@font/poppins_medium"
                            android:paddingStart="3dp"
                            android:text="16001"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_12sp" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.2"
                        android:orientation="vertical"

                        android:gravity="start">

                        <TextView
                            android:id="@+id/postedDateText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_medium"
                            android:text="Req. Date : "
                            android:textSize="@dimen/text_12sp" />

                        <TextView
                            android:id="@+id/postedDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/postedDateText"
                            android:fontFamily="@font/poppins_medium"
                            android:paddingStart="3dp"
                            android:text="25-sep-2020"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_12sp" />
                    </LinearLayout>


                </LinearLayout>




                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_view_reject"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:itemCount="1"
                    tools:listitem="@layout/qcrejectorderdetails" />


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_view_pending"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:itemCount="1"
                    tools:listitem="@layout/qc_order_layout" />


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_view_approved"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:visibility="visible"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:itemCount="1"

                    tools:listitem="@layout/qc_approvedorderdetails" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/approvedbylayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    android:id="@+id/status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semi_bold"
                    android:paddingStart="10dp"
                    android:text="Status :" />


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/status_recyleview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/lite_blue_border"

                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:itemCount="1"
                    tools:listitem="@layout/qc_status_layout" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="20dp"
                android:gravity="start">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Total : "
                    android:textColor="#548389"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/value_1dp"
                    android:drawableLeft="@drawable/qc_ic_rupee_indian"
                    android:fontFamily="@font/poppins_medium"
                    android:paddingStart="@dimen/five5_sp"
                    android:text="2900 "
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="20dp"
                android:gravity="start">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Discount : "
                    android:textColor="#548389"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/discount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/value_1dp"
                    android:drawableLeft="@drawable/qc_ic_rupee_indian"
                    android:fontFamily="@font/poppins_medium"
                    android:paddingStart="@dimen/five5_sp"
                    android:text="2900 "

                    android:textColor="@color/black"
                    android:textSize="@dimen/text_12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="20dp"
                android:gravity="start">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Net Payment : "
                    android:textColor="#548389"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/payment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/value_1dp"
                    android:drawableLeft="@drawable/qc_ic_rupee_indian"
                    android:fontFamily="@font/poppins_medium"
                    android:paddingStart="@dimen/five5_sp"
                    android:text="2900 "

                    android:textColor="@color/black"
                    android:textSize="@dimen/text_12sp" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/action_layout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/value_10dp"
                android:layout_marginBottom="@dimen/value_5dp"
                android:layout_weight="2"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/rejectClick"
                    android:layout_width="@dimen/value_250dp"
                    android:layout_height="45dp"
                    android:layout_marginStart="@dimen/value_15dp"
                    android:layout_marginEnd="@dimen/value_15dp"
                    android:layout_marginBottom="@dimen/value_5dp"
                    android:layout_weight="1"
                    android:background="#ef1c23"
                    android:fontFamily="@font/roboto_medium"
                    android:gravity="center_vertical"
                    android:onClick="@{()-> callback.reject()}"
                    android:text="Reject"

                    android:textAlignment="center"
                    android:textColor="@color/white"
                    tools:ignore="RtlCompat" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/acceptClick"
                    android:layout_width="@dimen/value_250dp"
                    android:layout_height="45dp"
                    android:layout_marginStart="@dimen/value_10dp"
                    android:layout_marginEnd="@dimen/value_15dp"
                    android:layout_marginBottom="@dimen/value_5dp"
                    android:layout_weight="1"
                    android:background="#045a71"
                    android:fontFamily="@font/roboto_medium"
                    android:gravity="center_vertical"
                    android:onClick="@{()-> callback.accept()}"
                    android:text="Accept"

                    android:textAlignment="center"
                    android:textColor="@color/white"
                    tools:ignore="RtlCompat" />
            </LinearLayout>
        </LinearLayout>


    </RelativeLayout>

    <data>

        <variable
            name="callback"
            type="com.apollopharmacy.vishwam.ui.home.qcfail.pending.PendingActivityCallback" />
    </data>
</layout>