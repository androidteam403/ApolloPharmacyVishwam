<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout
        android:gravity="center"
        android:weightSum="1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <LinearLayout
            android:layout_weight="0.93"
            android:layout_marginStart="@dimen/value_5dp"
            android:id="@+id/ratingBar1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/four4_dp"
            android:orientation="vertical">

            <TextView
                android:layout_marginStart="7dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:id="@+id/sub_category_heading"
                android:textColor="@color/black"
                android:textSize="@dimen/text_14sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.AppCompatSeekBar
                        android:id="@+id/seekbar1"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/value_45dp"
                        android:progress="0"
                        android:progressDrawable="@drawable/seekbar_progress_style"
                        android:thumb="@android:color/transparent" />



                </RelativeLayout>

                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/display_given_rating_layout"
                    android:background="@drawable/round_background_ratingbar"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/value_10dp"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/display_given_rating"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:padding="5dp"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_15sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </RelativeLayout>




            <LinearLayout
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="4">

<!--                <TextView-->
<!--                    android:id="@+id/first_range"-->
<!--                    android:layout_width="0dp"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_weight="1"-->
<!--                    android:textSize="@dimen/text_13sp"-->
<!--                    android:textStyle="bold"-->
<!--                    android:textColor="@color/black"-->
<!--                    android:text="0" />-->

                <TextView
                    android:id="@+id/second_range"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="@dimen/text_13sp"
                    android:textStyle="bold"
                    android:gravity="center_horizontal"
                    android:textColor="@color/black"
                    android:text="" />

                <TextView
                    android:id="@+id/third_range"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="@dimen/text_13sp"
                    android:textStyle="bold"
                    android:gravity="center_horizontal"
                    android:textColor="@color/black"
                    android:text="" />

<!--                <TextView-->
<!--                    android:id="@+id/fourth_range"-->
<!--                    android:layout_width="0dp"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_weight="1"-->
<!--                    android:textSize="@dimen/text_13sp"-->
<!--                    android:textStyle="bold"-->
<!--                    android:textColor="@color/zero_grey"-->
<!--                    android:gravity="end"-->
<!--                    android:text="5" />-->
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_marginEnd="@dimen/text_dimen_10"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_weight="0.07"
            android:layout_height="wrap_content">

            <TextView
                android:layout_gravity="center"
                android:gravity="center"
                android:id="@+id/fourth_range"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_13sp"
                android:textStyle="bold"
                android:textColor="@color/zero_grey"
                android:text="5.5" />
        </LinearLayout>



    </LinearLayout>
</layout>