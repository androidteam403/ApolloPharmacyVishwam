<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/uploadswacImages"
            android:layout_width="@dimen/value_140dp"
            android:layout_height="@dimen/value_35dp"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="@dimen/value_10dp"
            android:background="@drawable/yellow_drawable"
            android:gravity="center">

            <ImageView
                android:id="@+id/addImage"
                android:layout_width="@dimen/text_20sp"
                android:layout_height="@dimen/text_20sp"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/value_5dp"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_capture_image" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginStart="4sp"
                android:text="Upload Image"
                android:textColor="@color/black"
                android:textSize="@dimen/text_12sp" />

            <TextView
                android:id="@+id/uploadtextnumberS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="4sp"
                android:text=""
                android:textColor="@color/black"
                android:textSize="@dimen/text_12sp" />


        </LinearLayout>

        <RelativeLayout
            android:id="@+id/capturedImagesGoneLayout"
            android:layout_width="@dimen/value_50dp"
            android:layout_height="@dimen/value_50dp"
            android:layout_marginStart="@dimen/value_6dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="4dp"
            android:visibility="gone">

            <ImageView
                android:id="@+id/capturedImageeGone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/value_4dp"
                android:contentDescription="@string/app_name"
                android:scaleType="fitXY"
                android:src="@color/dark_yellow" />

            <ImageView
                android:id="@+id/deleteImageeGone"
                android:layout_width="30dp"
                android:layout_height="@dimen/value_30dp"
                android:layout_alignParentEnd="true"
                android:contentDescription="@string/app_name"
                android:paddingStart="@dimen/value_5dp"
                android:paddingEnd="3dp"
                android:paddingBottom="@dimen/value_5dp"
                android:src="@drawable/ic_baseline_close_24" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/previewLayout"
            android:layout_width="@dimen/value_60dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:visibility="gone"
            android:padding="@dimen/value_5dp"
            android:layout_marginStart="@dimen/value_6dp"
            android:background="@drawable/yellow_drawable">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Preview"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="9sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="@color/black" />
        </LinearLayout>


    </LinearLayout>


</RelativeLayout>