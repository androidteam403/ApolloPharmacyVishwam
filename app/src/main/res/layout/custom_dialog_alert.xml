        <TextView
            android:id="@+id/dialog_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/value_5dp"
            android:gravity="center"
            android:layout_marginTop="@dimen/value_10dp"

            android:paddingStart="@dimen/value_30dp"
            android:paddingTop="@dimen/value_5dp"
            android:paddingEnd="@dimen/value_30dp"
            android:paddingBottom="@dimen/value_10dp"
            android:textColor="@color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/value_20dp"
            android:gravity="center">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/dialog_cancel"
                android:layout_width="@dimen/value_100dp"
                android:layout_height="@dimen/value_35dp"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/value_10dp"
                android:background="@drawable/bg_button_disable"
                android:gravity="center"
                android:text="@string/label_no"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:visibility="gone"
                tools:ignore="ButtonStyle" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/dialog_ok"
                android:layout_width="65dp"
                android:layout_height="@dimen/value_35dp"
                android:layout_gravity="center"

                android:background="@drawable/bg_button_green"
                android:gravity="center"
                android:text="OK"
                android:textAllCaps="false"
                android:textColor="@color/white"
                tools:ignore="ButtonStyle" />
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:layout_width="28dp"
        android:id="@+id/closedialog"
        android:layout_height="28dp"
        android:layout_marginTop="5dp"

        android:layout_alignParentEnd="true"
        android:layout_marginEnd="12dp"
        android:src="@drawable/closee_black"
/></RelativeLayout>