<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="30dp"
    android:layout_marginStart="30dp"

    android:background="@drawable/custom_dialog_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/roboto_regular"
            android:gravity="center"
            android:paddingTop="@dimen/value_8dp"
            android:text="@string/label_logout"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/value_15dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="@dimen/value_10dp"

            android:fontFamily="@font/roboto_medium"
            android:text="Last Attendance Sign-in"
            android:textColor="#889a9c"

            android:textSize="13sp" />

        <TextView
            android:id="@+id/lastLoginTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/value_15dp"

            android:fontFamily="@font/poppin_bold"
                    android:textColor="@color/black"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/value_15dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="@dimen/value_10dp"

            android:fontFamily="@font/roboto_medium"
            android:text="Current Time"
            android:textColor="#889a9c"

            android:textSize="13sp" />

        <TextView
            android:id="@+id/currentTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/value_15dp"
            android:fontFamily="@font/poppin_bold"
            android:textSize="12sp"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/value_15dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="@dimen/value_10dp"

            android:fontFamily="@font/roboto_medium"
            android:text="Duration"
            android:textColor="#889a9c"

            android:textSize="13sp"/>
    <LinearLayout
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="150dp"
            android:layout_marginStart="@dimen/value_15dp"

            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium"
                    android:paddingStart="10sp"
                    android:paddingTop="1dp"

                    android:text="Hrs"
                    android:textColor="#889a9c"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/durationhrs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppin_bold"
                    android:paddingStart="10sp"
                    android:paddingBottom="5dp"
                    android:text="22"
                    android:textColor="#4f9b99"
                    android:textSize="10sp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium"
                    android:paddingStart="10sp"
                    android:paddingTop="1dp"

                    android:text="Min"
                    android:textColor="#889a9c"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/durationminutes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppin_bold"
                    android:paddingStart="10sp"
                    android:paddingBottom="5dp"
                    android:text="05"
                    android:textColor="#4f9b99"
                    android:textSize="10sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium"
                    android:paddingStart="10sp"
                    android:paddingTop="1dp"

                    android:text="Sec"
                    android:textColor="#889a9c"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/durationsecs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppin_bold"
                    android:paddingStart="10sp"
                    android:paddingBottom="5dp"
                    android:text="22"
                    android:textColor="#4f9b99"
                    android:textSize="10sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

