<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/custom_dialog_background"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/splash_start_color"
        android:gravity="center"
        android:paddingTop="@dimen/value_8dp"
        android:paddingBottom="@dimen/value_8dp"
        android:text="@string/label_logout"
        android:textColor="@color/white"
        android:textSize="@dimen/text_16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/lastLoginTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:paddingStart="@dimen/value_30dp"
        android:paddingTop="@dimen/value_15dp"
        android:paddingEnd="@dimen/value_30dp"
        android:paddingBottom="@dimen/value_5dp"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/currentTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/value_30dp"
        android:paddingTop="@dimen/value_5dp"
        android:paddingEnd="@dimen/value_30dp"
        android:paddingBottom="@dimen/value_5dp"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/durationTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:paddingStart="@dimen/value_30dp"
        android:paddingTop="@dimen/value_5dp"
        android:paddingEnd="@dimen/value_30dp"
        android:paddingBottom="@dimen/value_10dp"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/dialog_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/value_5dp"
        android:gravity="center"
        android:paddingStart="@dimen/value_30dp"
        android:paddingTop="@dimen/value_5dp"
        android:paddingEnd="@dimen/value_30dp"
        android:paddingBottom="@dimen/value_10dp"
        android:textColor="@color/black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/value_10dp"
        android:layout_marginBottom="@dimen/value_20dp"
        android:gravity="center">

        <Button
            android:id="@+id/dialog_cancel"
            android:layout_width="@dimen/value_100dp"
            android:layout_height="@dimen/value_35dp"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/value_10dp"
            android:background="@drawable/bg_button_disable"
            android:gravity="center"
            android:text="@string/label_no"
            android:textAllCaps="false"
            android:textColor="@color/black"
            tools:ignore="ButtonStyle" />

        <Button
            android:id="@+id/dialog_ok"
            android:layout_width="@dimen/value_100dp"
            android:layout_height="@dimen/value_35dp"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/value_10dp"
            android:background="@drawable/bg_button"
            android:gravity="center"
            android:text="@string/label_yes"
            android:textAllCaps="false"
            android:textColor="@color/black"
            tools:ignore="ButtonStyle" />
    </LinearLayout>
</LinearLayout>