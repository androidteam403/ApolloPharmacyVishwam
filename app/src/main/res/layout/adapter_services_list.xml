<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/value_45dp"
            android:layout_marginTop="@dimen/dimen_5dp"
            app:cardBackgroundColor="@color/home_search_box_bg"
            app:cardCornerRadius="@dimen/dimen1dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/services_customerinteraction_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/user_comments" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/services_customerinteraction_image"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/service_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="@string/stringid"
                            android:layout_marginStart="@dimen/text_dimen_8"
                            android:textSize="@dimen/text_15sp" />

                        <TextView
                            android:id="@+id/id_service_value"
                            android:layout_width="@dimen/value_60dp"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_15sp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/customer_services"
                        android:layout_width="@dimen/value_120dp"
                        android:layout_marginStart="@dimen/text_dimen_8"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dimen_10sp" />


                </LinearLayout>

                <ImageView
                    android:id="@+id/services_customerinteraction_expand"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/dimen_5dp"
                    android:src="@drawable/rightarrow" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</layout>