<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#088077"
        tools:context=".ui.home.">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/value_50dp"
                android:orientation="vertical">


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="460dp"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/mainimage2" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/preview_send_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/value_50dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:weightSum="2">
            <!--                android:background="#85B6B1"-->
            <LinearLayout
                android:id="@+id/preview"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/preview"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="23sp"
                    android:layout_height="23sp"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/eye_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/value_5dp"
                    android:fontFamily="@font/price_bold"
                    android:text="Preview"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_17sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/send"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/send"
                android:fontFamily="@font/price_bold"
                android:gravity="center"
                android:onClick="@{()-> callback.onClickSend()}"
                android:text="Send"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/text_17sp" />


        </LinearLayout>

        <TextView
            android:id="@+id/success_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/send"
            android:gravity="center"
            android:padding="@dimen/value_5dp"
            android:text="Your message submitted successfully, Thank You."
            android:textColor="@color/black"
            android:visibility="gone" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text"
                android:layout_width="@dimen/value_250dp"
                android:layout_height="@dimen/value_80dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dimen365dp"
                android:fontFamily="@font/price_bold"
                android:text="Write your Text here"
                android:textAlignment="center"
                android:textColor="@color/white" />

            <ImageView
                android:id="@+id/write_your_text_icon"
                android:layout_width="@dimen/value_32dp"
                android:layout_height="@dimen/value_32dp"
                android:layout_gravity="center"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic__plus"
                android:visibility="gone" />
        </LinearLayout>


        <RelativeLayout
            android:id="@+id/previewLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/value_30dp"
            android:background="#075758"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="@dimen/value_5dp"
            android:paddingEnd="@dimen/value_5dp"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/value_20dp"
                    android:layout_height="@dimen/value_20dp"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/eye_icon" />

                <TextView
                    android:id="@+id/previewtext"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/value_5dp"
                    android:fontFamily="@font/price_bold"
                    android:text="@string/label_preview"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="15sp" />
            </LinearLayout>

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentEnd="true"
                android:contentDescription="@string/app_name"
                android:src="@drawable/closee_whitee" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="470dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/camlayout"
                android:layout_width="64dp"
                android:layout_height="@dimen/value_80dp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginEnd="3dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/camera"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/goldborder"
                    android:contentDescription="@string/app_name"
                    android:paddingStart=".4dp"
                    android:paddingTop="@dimen/value_2dp"
                    android:paddingBottom="@dimen/value_2dp"
                    android:src="@drawable/camera2" />

            </LinearLayout>

            <TextView
                android:id="@+id/employee_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/value_5dp"
                android:layout_marginBottom="@dimen/value_5dp"
                android:text="Name"
                android:textColor="@color/white"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/your_signature_here_layout"
                android:layout_width="63dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="3dp"
                android:background="@drawable/round_corners"
                android:onClick="@{()-> callback.onClickYourSignatureHere()}"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/price_regular"
                    android:padding="@dimen/value_5dp"
                    android:paddingTop="10sp"
                    android:text="@string/label_your_nsignature_nhere"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dimen11sp" />

            </LinearLayout>

            <ImageView
                android:id="@+id/signature_image"
                android:layout_width="@dimen/value_50dp"
                android:layout_height="@dimen/value_50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/value_5dp"
                android:contentDescription="@string/app_name"
                android:onClick="@{()-> callback.onClickYourSignatureHere()}"
                android:visibility="gone" />
        </LinearLayout>
    </RelativeLayout>

    <data>

        <variable
            name="callback"
            type="com.apollopharmacy.vishwam.ui.home.greeting.GreetingActivityCallback" />
    </data>
</layout>
