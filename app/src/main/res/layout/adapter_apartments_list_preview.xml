<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--        android:background="@drawable/background_for_champs_names"-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">

            <TableLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/apna_table_border_top">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium"
                    android:paddingStart="@dimen/value_5dp"
                    android:paddingTop="@dimen/value_10dp"
                    android:paddingBottom="@dimen/value_10dp"
                    android:text="Ram Leela"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_10sp" />
            </TableLayout>

            <TableLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/apna_table_border_left_top">

                <TextView
                    android:id="@+id/noOfHouses"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium"
                    android:gravity="end"
                    android:paddingTop="@dimen/value_10dp"
                    android:paddingEnd="@dimen/value_5dp"
                    android:paddingBottom="@dimen/value_10dp"
                    android:text="10"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_10sp" />
            </TableLayout>

            <TableLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/apna_table_border_left_top">

                <TextView
                    android:id="@+id/distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium"
                    android:gravity="end"
                    android:paddingTop="@dimen/value_10dp"
                    android:paddingEnd="@dimen/value_5dp"
                    android:paddingBottom="@dimen/value_10dp"
                    android:text="10 m"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_10sp" />
            </TableLayout>
        </LinearLayout>
    </LinearLayout>
</layout>