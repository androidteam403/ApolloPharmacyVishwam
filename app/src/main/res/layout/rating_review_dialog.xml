<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"

    >


    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:layout_marginTop="@dimen/value_10dp"
            android:id="@+id/close_dialogRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:contentDescription="@string/app_name"
            android:paddingStart="@dimen/value_10dp"
            android:paddingEnd="@dimen/value_10dp"
            android:src="@drawable/close_icon"
            android:tint="@color/black" />

    <LinearLayout

            android:layout_margin="@dimen/value_10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/comments_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/value_10dp"
                android:layout_marginTop="28dp"
                android:layout_marginEnd="@dimen/value_10dp"
                android:layout_marginBottom="@dimen/value_5dp"
                android:orientation="vertical"
                android:visibility="visible">


                <EditText
                    android:gravity="start"
                    android:id="@+id/comment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/value_5dp"
                    android:autofillHints="@string/app_name"
                    android:background="@drawable/edit_comment_bg"
                    android:hint="Enter your Comments"
                    android:lines="4"
                    android:inputType="textMultiLine"
                    android:padding="@dimen/value_10dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ratingBarLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/value_10dp"
                android:layout_marginTop="@dimen/value_5dp"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/value_3dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_15sp" />


                <RatingBar
                    android:id="@+id/ratingBarDialog"
                    style="?android:attr/ratingBarStyleIndicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:isIndicator="false"
                    android:max="5"
                    android:rating="4"
                    android:numStars="5"
                    android:scaleX=".7"
                    android:scaleY=".7"
                    android:stepSize="1"
                    android:theme="@style/RatingBar"
                    android:transformPivotX="0dp"
                    android:transformPivotY="0dp" />

                <!--                            <TextView-->
                <!--                                android:layout_marginBottom="3sp"-->
                <!--                                android:layout_width="@dimen/value_60dp"-->
                <!--                                android:layout_height="wrap_content"-->
                <!--                                android:onClick="@{()-> callback.onClickSubmitRating()}"-->
                <!--                                android:padding="@dimen/value_3dp"-->
                <!--                                android:background="@drawable/green_background"-->
                <!--                                android:text="Submit"-->
                <!--                                android:textAlignment="center"-->
                <!--                                android:textColor="@color/white"-->
                <!--                                android:textSize="@dimen/text_12sp"-->
                <!--                                android:textStyle="bold" />-->


            </LinearLayout>

            <LinearLayout
                android:layout_marginBottom="@dimen/value_5dp"
                android:id="@+id/submitforreview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:layout_gravity="center"
                android:gravity="center">


                <TextView
                    android:layout_width="102dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/value_7dp"
                    android:layout_marginBottom="@dimen/five5_sp"
                    android:background="@drawable/green_background"
                    android:gravity="center"
                    android:padding="@dimen/five5_sp"
                    android:text="Submit"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_16sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>







</RelativeLayout>