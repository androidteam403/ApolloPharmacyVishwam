<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.home.qcfail.pending.QcPendingActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/title_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/value_70dp"

                android:background="#045a71"
                android:orientation="horizontal"
                android:padding="@dimen/four4_dp">

                <ImageView
                    android:id="@+id/back"
                    android:layout_width="@dimen/value_40dp"
                    android:layout_height="@dimen/value_40dp"

                    android:layout_gravity="center"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/icon_back_arrow"
                    tools:ignore="UseAppTint" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/list_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginStart="15sp"
                        android:text="OMS EXECUTIVE"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/orderid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginStart="15sp"
                        android:text="ORDER ID : Rv00005"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:visibility="gone" />

                </LinearLayout>


            </LinearLayout>
            <LinearLayout
                android:id="@+id/search_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:orientation="vertical"
                android:visibility="visible">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:background="@drawable/background_for_champs_green"
                    android:backgroundTint="@color/home_search_box_bg"
                    android:padding="@dimen/value_10dp"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:layout_marginEnd="@dimen/text_10sp"
                        android:layout_weight=".2"
                        android:src="@drawable/close_blue_new"
                        android:tint="@color/grey"


                        android:visibility="visible" />


                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/search_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@null"

                        android:fontFamily="@font/poppins_semi_bold"
                        android:hint="Search by Store ID or Name"
                        android:imeOptions="actionSearch"
                        android:inputType="text"
                        android:maxLines="1"
                        android:paddingStart="40dp"
                        android:paddingTop="3dp"

                        android:textSize="@dimen/text_14sp" />
                </RelativeLayout>



                <RelativeLayout
                    android:id="@+id/no_order_found"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/emptyImage"
                        android:layout_width="@dimen/value_120dp"
                        android:layout_height="@dimen/value_120dp"
                        android:layout_centerInParent="true"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/qca" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/emptyImage"
                        android:gravity="center"
                        android:text="No Data Found"
                        android:textColor="@color/backgroundColor"
                        android:textSize="@dimen/text_18sp" />

                </RelativeLayout>

                <!--                <TextView-->
                <!--                    android:layout_width="match_parent"-->
                <!--                    android:layout_height="wrap_content"-->
                <!--                    android:background="@color/white"-->
                <!--                    android:paddingTop="@dimen/text_10sp"-->
                <!--                    android:paddingBottom="@dimen/text_10sp"-->
                <!--                    android:text="No Data Found"-->
                <!--                    android:textAlignment="center"-->
                <!--                    android:textColor="@color/warning_color"-->
                <!--                    android:visibility="gone" />-->

            </LinearLayout>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/value_10dp"
                android:layout_height="match_parent"
                app:cardCornerRadius="@dimen/value_5dp"
                app:cardElevation="3dp">

                <LinearLayout
                    android:id="@+id/heaader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="@dimen/value_10dp"

                    android:background="@color/pendency_orange"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/value_55dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:weightSum="1"

                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/logo"
                                android:layout_width="0dp"
                                android:layout_height="32dp"
                                android:layout_gravity="center"
                                android:layout_marginStart="@dimen/value_5dp"
                                android:layout_weight="0.1"
                                android:src="@drawable/user" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.65"
                                android:layout_gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/gm_empname"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppin_bold"
                                    android:text=""
                                    android:textColor="@color/black"
                                    android:textSize="13sp" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"

                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/designation"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/poppin_bold"
                                        android:text=""
                                        android:textColor="@color/black"
                                        android:textSize="11sp" />

                                    <View
                                        android:layout_width="2dp"
                                        android:layout_height="13dp"
                                        android:layout_gravity="center"
                                        android:layout_marginStart="10dp"
                                        android:background="@color/grey" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="10dp"
                                        android:fontFamily="@font/roboto_bold"
                                        android:text="Emp.ID:"
                                        android:textColor="#959595"

                                        android:textSize="11sp" />

                                    <TextView
                                        android:id="@+id/empId"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/poppin_bold"
                                        android:paddingStart="5dp"
                                        android:text=""
                                        android:textColor="@color/black"
                                        android:textSize="11sp" />
                                </LinearLayout>


                            </LinearLayout>


                            <LinearLayout
                                android:id="@+id/arrowlayout"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.25">

                                <TextView
                                    android:id="@+id/notification_text"
                                    android:layout_width="35dp"
                                    android:layout_height="35dp"
                                    android:background="@drawable/qc_dot"
                                    android:fontFamily="@font/roboto_bold"
                                   android:gravity="center"
                                    android:text="2001"

                                    android:layout_gravity="center"
                                    android:textColor="@color/black"
                                    android:textSize="10sp"
                                    android:visibility="visible" />


                                <ImageView
                                    android:id="@+id/generalmanager_arrow"
                                    android:layout_width="35dp"
                                    android:layout_height="35dp"
                                    android:layout_marginTop="@dimen/text_10sp"
                                    android:rotation="180"
                                    android:tint="@color/dark_grey"
                                    android:src="@drawable/icon_back" />


                                <ImageView
                                    android:id="@+id/close_arrow"
                                    android:layout_width="35dp"
                                    android:layout_height="35dp"
                                    android:layout_marginTop="@dimen/text_10sp"
                                    android:rotation="270"
                                    android:tint="@color/grey"

                                    android:src="@drawable/icon_back"
                                    android:visibility="gone" />
                            </LinearLayout>


                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/rto_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"

                        android:visibility="visible">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:orientation="horizontal"

                            android:weightSum="4">

                            <LinearLayout
                                android:id="@+id/rtolayout"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
                                android:layout_marginBottom="8dp"
                                android:layout_weight=".91"
                                android:background="@drawable/background_for_champs_green"
                                android:backgroundTint="#d48a2b"

                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/roboto_medium"
                                    android:paddingTop="5dp"
                                    android:text="Sum of RTO"

                                    android:textAlignment="center"
                                    android:textColor="@color/white"
                                    android:textSize="10sp" />

                                <TextView
                                    android:id="@+id/rtCount"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/roboto_medium"
                                    android:paddingStart="2dp"
                                    android:paddingBottom="7dp"
                                    android:text="0"
                                    android:textAlignment="center"
                                    android:textColor="@color/white"
                                    android:textSize="12sp" />


                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/rtovaluelayout"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
                                android:layout_marginBottom="8dp"
                                android:layout_weight=".99"
                                android:background="@drawable/background_for_champs_green"
                                android:backgroundTint="#d48a2b"

                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/roboto_medium"
                                    android:paddingTop="5dp"
                                    android:text="RTO Value"
                                    android:textAlignment="center"

                                    android:textColor="@color/white"
                                    android:textSize="10sp" />

                                <TextView
                                    android:id="@+id/rtovalue"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:drawableTint="@color/white"
                                    android:drawableLeft="@drawable/qc_ic_rupee_indian"
                                    android:fontFamily="@font/roboto_medium"
                                    android:paddingStart="10dp"
                                    android:paddingBottom="7dp"
                                    android:text="0"
                                    android:textColor="@color/white"
                                    android:textSize="12sp" />


                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/rrtocountlayout"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
                                android:layout_marginBottom="8dp"
                                android:layout_weight=".91"
                                android:background="@drawable/background_for_champs_green"
                                android:backgroundTint="#d48a2b"

                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/roboto_medium"
                                    android:paddingTop="5dp"
                                    android:text="Sum of RRTO"
                                    android:textAlignment="center"

                                    android:textColor="@color/white"
                                    android:textSize="10sp" />

                                <TextView
                                    android:id="@+id/rrtoCount"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/roboto_medium"
                                    android:paddingStart="2dp"
                                    android:paddingBottom="7dp"
                                    android:text="0"
                                    android:textAlignment="center"
                                    android:textColor="@color/white"
                                    android:textSize="12sp" />


                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/rrtovaluelayout"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
                                android:layout_marginBottom="8dp"
                                android:layout_weight=".99"
                                android:background="@drawable/background_for_champs_green"
                                android:backgroundTint="#d48a2b"

                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/roboto_medium"
                                    android:paddingTop="5dp"
                                    android:text="RRTO Value"
                                    android:textAlignment="center"
                                    android:textColor="@color/white"
                                    android:textSize="10sp" />

                                <TextView
                                    android:id="@+id/rrtovalue"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:drawableLeft="@drawable/qc_ic_rupee_indian"
                                    android:fontFamily="@font/roboto_medium"
                                    android:drawableTint="@color/white"

                                    android:paddingStart="10dp"
                                    android:paddingBottom="7dp"
                                    android:text="0"
                                    android:textColor="@color/white"
                                    android:textSize="12sp" />


                            </LinearLayout>


                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#F9EBE2"
                        android:orientation="horizontal"
                        android:visibility="gone"
                        android:id="@+id/rtoHeader"

                        android:weightSum="4">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:layout_weight=".91"
                            android:fontFamily="@font/poppin_bold"
                            android:paddingStart="4sp"
                            android:paddingTop="5dp"
                            android:paddingBottom="4dp"
                            android:layout_marginStart="5dp"

                            android:text="RTO Count"
                            android:textAlignment="center"
                            android:textColor="#959595"
                            android:textSize="@dimen/dimen11sp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:layout_weight=".99"
                            android:fontFamily="@font/poppin_bold"
                            android:paddingStart="4sp"
                            android:paddingTop="5dp"
                            android:paddingBottom="4dp"
                            android:layout_marginStart="5dp"

                            android:text="RTO Value"
                            android:textAlignment="center"

                            android:textColor="#959595"
                            android:textSize="@dimen/dimen11sp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:layout_weight=".91"
                            android:fontFamily="@font/poppin_bold"
                            android:paddingStart="4sp"
                            android:layout_marginStart="5dp"
                            android:paddingTop="5dp"
                            android:paddingBottom="4dp"
                            android:text="RRTO Count"
                            android:textAlignment="center"
                            android:textColor="#959595"
                            android:textSize="@dimen/dimen11sp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:layout_weight=".99"
                            android:fontFamily="@font/poppin_bold"
                            android:paddingStart="4sp"
                            android:paddingTop="5dp"
                            android:paddingBottom="4dp"
                            android:layout_marginStart="5dp"

                            android:text="RRTO Value"
                            android:textAlignment="center"

                            android:textColor="#959595"
                            android:textSize="@dimen/dimen11sp" />
                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/gmsitesRecyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scrollbars="vertical"
                        android:visibility="gone"
                        android:layout_marginStart="3dp"

                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:itemCount="1"
                        tools:listitem="@layout/rto_sites" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>


    </RelativeLayout>


</layout>