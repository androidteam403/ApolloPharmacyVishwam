<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffffff"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/value_80dp"
        android:background="@color/splash_start_color"
        android:orientation="vertical"
        android:padding="@dimen/value_10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="Forgot your pincode?"
            android:textColor="@color/white_for_both"
            android:textSize="@dimen/text_16sp" />

        <ImageView
            android:id="@+id/close_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:contentDescription="@string/app_name"
            android:paddingStart="@dimen/value_10dp"
            android:paddingEnd="@dimen/value_10dp"
            android:src="@drawable/close_icon"
            android:tint="@color/white_for_both" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/headerLayout"
        android:layout_margin="@dimen/value_20dp"
        android:layout_marginBottom="@dimen/value_5dp"
        android:gravity="center">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/noBtn"
            android:layout_width="@dimen/value_100dp"
            android:layout_height="@dimen/value_35dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginEnd="@dimen/value_10dp"
            android:background="@drawable/grey_rectangle"
            android:gravity="center"
            android:text="No"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="@dimen/text_13sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/yesBtn"
            android:layout_width="@dimen/value_100dp"
            android:layout_height="@dimen/value_35dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="@dimen/value_10dp"
            android:background="@drawable/yellow_drawable"
            android:gravity="center"
            android:text="Yes"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="@dimen/text_13sp" />
    </LinearLayout>
</RelativeLayout>