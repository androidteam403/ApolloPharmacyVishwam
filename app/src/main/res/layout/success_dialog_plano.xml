<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/champs_survey_dialog_background">




        <LinearLayout
            android:layout_marginTop="@dimen/text_dimen_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/value_20dp"
            android:orientation="vertical"
            android:paddingBottom="@dimen/value_30dp">

            <LinearLayout
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_marginTop="@dimen/value_5dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Executive ID"
                        android:textSize="@dimen/text_14sp" />

                    <TextView
                        android:text="testnov18"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/value_8dp"
                        android:id="@+id/started_survey_on_save_"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_16sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/header_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!--            <TextView-->
                    <!--                android:layout_width="wrap_content"-->
                    <!--                android:layout_height="wrap_content"-->
                    <!--                android:layout_centerInParent="true"-->
                    <!--                android:text="CHAMPS Survey"-->
                    <!--                android:textColor="@color/black"-->
                    <!--                android:textSize="@dimen/text_20sp"-->
                    <!--                android:textStyle="bold" />-->

                    <ImageView
                        android:id="@+id/close_dialog_save_plano"
                        android:layout_width="@dimen/value_40dp"
                        android:layout_height="@dimen/value_40dp"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/ash_close_icon" />
                </RelativeLayout>
            </LinearLayout>





            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Store City"
                android:textSize="@dimen/text_14sp" />

            <TextView
                android:text="B.V Nagar, nellore, Andhra pradesh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/value_8dp"
                android:id="@+id/survey_ended_on_save_"
                android:textColor="@color/black"
                android:textSize="@dimen/text_16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Site"
                android:textSize="@dimen/text_14sp" />

            <TextView
                android:text="16001-B.V Nagar, Nellore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/total_time_taken_save_"
                android:textColor="@color/black"
                android:textSize="@dimen/text_16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_marginTop="@dimen/value_15dp"
                android:layout_gravity="center"
                android:id="@+id/successfull_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/value_3dp"
                android:text="Successfully Submitted"
                android:textStyle="bold"
                android:textColor="@color/dark_greenn"
                android:textSize="@dimen/text_16sp" />

            <LinearLayout
                android:layout_marginTop="@dimen/text_dimen_10"
                android:id="@+id/ok_button_plano"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/background_for_champs_green"
                android:gravity="center"
                android:padding="@dimen/value_6dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text=" OK "
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_18sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>



    </RelativeLayout>
</layout>
