<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
     >


        <LinearLayout
            android:layout_marginTop="@dimen/text_dimen_10"
            android:layout_marginBottom="@dimen/text_dimen_10"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:layout_marginLeft="@dimen/value_5dp"
                android:layout_marginRight="@dimen/value_5dp"
                android:id="@+id/imagePlusIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_pending_list_icons_photo_icon"
                android:visibility="visible" />
            
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="15dp">
                <androidx.cardview.widget.CardView
                    android:visibility="visible"
                    android:layout_marginBottom="@dimen/value_15dp"
                    android:layout_width="70dp"
                    android:layout_gravity="center"
                    android:layout_marginEnd="@dimen/value_5dp"
                    android:layout_height="67dp"
                    android:id="@+id/upload_image_layout1"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="@dimen/value_10dp"
                    app:cardElevation="@dimen/value_5dp">
                    <RelativeLayout
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:visibility="visible">

                        <ImageView
                            android:id="@+id/upload_image_champs"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:alpha="0.5"
                            android:scaleType="fitXY"
                            android:src="@drawable/capture"
                            android:visibility="visible" />

                        <LinearLayout
                            android:id="@+id/redTrash"
                            android:layout_width="@dimen/value_20dp"
                            android:layout_height="@dimen/value_20dp"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:layout_margin="@dimen/six6_sp"
                            android:layout_marginBottom="@dimen/value_5dp"
                            android:background="@drawable/red_rounded_corners"
                            android:gravity="center"
                            android:padding="@dimen/value_3dp">

                            <ImageView

                                android:id="@+id/showcapturedimage"
                                android:layout_width="@dimen/eighteen18_dp"
                                android:layout_height="@dimen/eighteen18_dp"
                                android:layout_gravity="center"
                                android:padding="@dimen/value_3dp"
                                android:src="@drawable/trash" />


                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/eyeImage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:visibility="gone">

                            <ImageView
                                android:layout_width="@dimen/value_25dp"
                                android:layout_height="@dimen/value_25dp"
                                android:src="@drawable/eye2withbackground" />
                        </LinearLayout>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

            </RelativeLayout>



        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>