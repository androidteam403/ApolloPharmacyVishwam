<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/value_3dp"
            android:background="@drawable/manual_recipients_email_bg"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/value_5dp">

            <TextView
                android:id="@+id/setEmailAddress"
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:textColor="@color/darkk_blue"
                />

            <ImageView
                android:id="@+id/delete_recipient"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/value_5dp"
                android:contentDescription="@string/app_name"
                android:src="@drawable/close_red_champs"
                app:tint="@color/red" />
        </LinearLayout>

    </RelativeLayout>
</layout>