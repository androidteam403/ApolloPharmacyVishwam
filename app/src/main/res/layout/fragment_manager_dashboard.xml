<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CEO DASHBOARD"
                android:textColor="@color/black"
                android:textSize="@dimen/text_16sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/value_10dp"/>

            <com.anychart.AnyChartView
                android:id="@+id/piechart"
                android:layout_width="match_parent"
                android:layout_height="@dimen/value_200dp"
                android:layout_marginStart="@dimen/text_15sp"
                android:layout_marginTop="@dimen/text_10sp"
                android:layout_marginEnd="@dimen/text_15sp"
                android:layout_marginBottom="@dimen/text_10sp" />

            <LinearLayout
                android:layout_marginTop="@dimen/value_5dp"
                android:weightSum="1"
                android:layout_marginStart="@dimen/text_dimen_10"
                android:layout_marginEnd="@dimen/text_dimen_10"
                android:id="@+id/header_view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/value_30dp"
                android:background="@color/blue_color"
                android:gravity="center_vertical">


                <TextView
                    android:gravity="center"
                    android:layout_marginStart="@dimen/value_5dp"
                    android:layout_width="0dp"
                    android:layout_weight="0.34"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Managers"
                    android:textColor="@color/white_for_both"
                    android:textSize="@dimen/text_14sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.08"
                    android:fontFamily="@font/roboto_medium"
                    android:gravity="center"
                    android:text="MTD"
                    android:textColor="@color/white_for_both"
                    android:textSize="@dimen/dimen10sp" />

                <TextView
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="0.08"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium"
                    android:text="FTD"
                    android:textColor="@color/white_for_both"
                    android:textSize="@dimen/dimen10sp" />

                <TextView
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="0.08"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Open"
                    android:textColor="@color/white_for_both"
                    android:textSize="@dimen/dimen10sp" />

                <TextView
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="0.08"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium"
                    android:text="2"
                    android:textColor="@color/white_for_both"
                    android:textSize="@dimen/dimen10sp" />

                <TextView
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="0.08"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium"
                    android:text="3 to 8"
                    android:textColor="@color/white_for_both"
                    android:textSize="@dimen/dimen10sp" />

                <TextView
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="0.08"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium"
                    android:text="8"
                    android:textColor="@color/white_for_both"
                    android:textSize="@dimen/dimen10sp" />

                <TextView
                    android:visibility="invisible"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="0.15"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Total"
                    android:textColor="@color/white_for_both"
                    android:textSize="@dimen/dimen10sp" />


            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                tools:listitem="@layout/adapter_manager_dashboard"
                android:id="@+id/dashboard_manager_recyclerview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>





        </LinearLayout>

    </RelativeLayout>
</layout>