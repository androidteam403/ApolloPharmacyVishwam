<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            
            <LinearLayout
                android:onClick="@{()-> callback.onClickChampsSurveyReport()}"
                android:id="@+id/survey_report"
                android:padding="@dimen/value_9dp"
                android:layout_marginStart="@dimen/value_15dp"
                android:layout_marginEnd="@dimen/value_15dp"
                android:layout_marginTop="@dimen/value_20dp"
                android:layout_width="match_parent"
                android:background="@drawable/bg_for_reports_menu"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_marginStart="@dimen/value_10dp"
                    android:layout_width="@dimen/value_55dp"
                    android:layout_height="@dimen/value_55dp"
                    android:src="@drawable/champs_survey_report_icon"/>

                <TextView
                    android:layout_marginStart="@dimen/value_10dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Champs\nSurvey Report"
                    android:textColor="@color/text_color_blue"
                    android:textStyle="bold"
                    android:textSize="@dimen/twenty20_sp"/>

                <LinearLayout
                    android:layout_gravity="center"
                    android:gravity="end"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="@dimen/value_35dp"
                        android:layout_height="@dimen/value_35dp"
                        android:src="@drawable/right_arrow_black_new"/>
                </LinearLayout>







            </LinearLayout>

            <LinearLayout
                android:onClick="@{()-> callback.onClickSurveySummaryReport()}"
                android:padding="@dimen/value_10dp"
                android:layout_marginStart="@dimen/value_15dp"
                android:layout_marginEnd="@dimen/value_15dp"
                android:layout_marginTop="@dimen/value_10dp"
                android:layout_width="match_parent"
                android:background="@drawable/bg_for_reports_menu"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_marginStart="@dimen/value_10dp"
                    android:layout_width="@dimen/value_55dp"
                    android:layout_height="@dimen/value_55dp"
                    android:src="@drawable/p_survey_icon"/>

                <TextView
                    android:layout_marginStart="@dimen/value_10dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Survey\nSummary Report"
                    android:textColor="@color/text_color_blue"
                    android:textStyle="bold"
                    android:textSize="@dimen/twenty20_sp"/>

                <LinearLayout
                    android:layout_gravity="center"
                    android:gravity="end"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="@dimen/value_35dp"
                        android:layout_height="@dimen/value_35dp"
                        android:src="@drawable/right_arrow_black_new"/>
                </LinearLayout>







            </LinearLayout>

            <LinearLayout
                android:onClick="@{()-> callback.onClickRegionWiseAnalysisReport()}"
                android:padding="@dimen/value_10dp"
                android:layout_marginStart="@dimen/value_15dp"
                android:layout_marginEnd="@dimen/value_15dp"
                android:layout_marginTop="@dimen/value_10dp"
                android:layout_width="match_parent"
                android:background="@drawable/bg_for_reports_menu"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_marginStart="@dimen/value_15dp"
                    android:layout_width="@dimen/value_55dp"
                    android:layout_height="@dimen/value_55dp"
                    android:src="@drawable/p_survey_icon2"/>

                <TextView
                    android:layout_marginStart="@dimen/value_10dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Region-wise\nAnalysis Report"
                    android:textColor="@color/text_color_blue"
                    android:textStyle="bold"
                    android:textSize="@dimen/twenty20_sp"/>

                <LinearLayout
                    android:layout_gravity="center"
                    android:gravity="end"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="@dimen/value_35dp"
                        android:layout_height="@dimen/value_35dp"
                        android:src="@drawable/right_arrow_black_new"/>
                </LinearLayout>







            </LinearLayout>

            
            
        </LinearLayout>

    </RelativeLayout>

    <data>

        <variable
            name="callback"
            type="com.apollopharmacy.vishwam.ui.home.champs.reports.fragment.ChampsReportsFragmentCallBack" />
    </data>
</layout>