<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_marginTop="@dimen/value_5dp"
            android:layout_marginBottom="@dimen/value_5dp"
            android:layout_marginEnd="@dimen/value_5dp"
            android:layout_width="@dimen/value_75dp"
            android:layout_height="73dp"
            android:elevation="@dimen/value_10dp"
            android:layout_marginStart="@dimen/value_7dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="4dp">



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:ignore="Orientation">

                <ImageView
                    android:id="@+id/imageViewRes"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/app_name"
                    android:scaleType="fitXY"
                    />

                <LinearLayout
                    android:id="@+id/cameraButtonRes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@drawable/red_rounded_corners"
                    android:padding="@dimen/value_4dp"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="@dimen/value_20dp"
                        android:layout_height="@dimen/value_20dp"
                        android:layout_gravity="center"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/ic_baseline_camera_alt_24" />
                </LinearLayout>

                <LinearLayout
                    android:visibility="visible"
                    android:id="@+id/eyeImageRes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true">

                    <ImageView
                        android:layout_width="@dimen/value_20dp"

                        android:layout_height="@dimen/value_20dp"
                        android:src="@drawable/eye2withbackground"/>
                </LinearLayout>


                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/redTrashRes"
                    android:gravity="center"
                    android:layout_width="@dimen/value_20dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_margin="@dimen/value_3dp"
                    android:background="@drawable/red_rounded_corners"
                    android:layout_height="@dimen/value_20dp">

                    <ImageView
                        android:id="@+id/showcapturedimage"
                        android:layout_width="@dimen/text_10sp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:src="@drawable/trash" />


                </LinearLayout>

            </RelativeLayout>


        </androidx.cardview.widget.CardView>

<!--        <ImageView-->
<!--            android:layout_marginEnd="@dimen/value_5dp"-->
<!--            android:id="@+id/imageStatusReeshoot"-->
<!--            android:layout_width="@dimen/value_20dp"-->
<!--            android:layout_height="@dimen/value_20dp"-->
<!--            android:contentDescription="@string/app_name" />-->

    </LinearLayout>


</RelativeLayout>