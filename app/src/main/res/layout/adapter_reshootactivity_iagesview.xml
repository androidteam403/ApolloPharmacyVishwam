<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/light_blue">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_marginBottom="@dimen/value_20dp"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_marginTop="@dimen/value_10dp"
            android:layout_width="@dimen/value_80dp"
            android:layout_height="@dimen/sixty_five65_dp"
            android:layout_marginStart="@dimen/value_7dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="@dimen/value_10dp">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:ignore="Orientation">

                <ImageView
                    android:id="@+id/imageViewRes"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/app_name"
                    android:scaleType="fitXY"
                    android:src="@drawable/capture" />

                <LinearLayout
                    android:id="@+id/cameraButtonRes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@drawable/red_rounded_corners"
                    android:padding="@dimen/value_4dp"
                    android:visibility="visible">

                    <ImageView
                        android:layout_width="@dimen/text_18sp"
                        android:layout_height="@dimen/text_18sp"
                        android:layout_gravity="center"
                        android:src="@drawable/camerawhite" />
                </LinearLayout>


            </RelativeLayout>


        </androidx.cardview.widget.CardView>

    </LinearLayout>


</RelativeLayout>