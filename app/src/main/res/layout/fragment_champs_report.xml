<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".ui.home.champs.reports.ChampsReportFragment">

        <RelativeLayout
            android:id="@+id/formLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#e8f7f2"
            android:paddingHorizontal="@dimen/value_10dp"
            android:paddingTop="@dimen/value_10dp"
            android:paddingBottom="@dimen/value_20dp">

            <TextView
                android:id="@+id/region"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/value_4dp"
                android:text="Region" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/regionSelect"
                android:layout_width="match_parent"
                android:layout_height="@dimen/value_40dp"
                android:layout_below="@+id/region"
                android:background="@drawable/grey_border_bg"
                android:drawableEnd="@drawable/bottomarrow"
                android:drawableTint="#cacaca"
                android:editable="false"
                android:hint="Select Region"
                android:paddingLeft="@dimen/value_15dp"
                android:textSize="@dimen/text_14sp" />

            <TextView
                android:id="@+id/state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/regionSelect"
                android:layout_marginTop="@dimen/value_10dp"
                android:layout_marginBottom="@dimen/value_4dp"
                android:text="State" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/stateSelect"
                android:layout_width="match_parent"
                android:layout_height="@dimen/value_40dp"
                android:layout_below="@+id/state"
                android:background="@drawable/grey_border_bg"
                android:drawableEnd="@drawable/bottomarrow"
                android:drawableTint="#cacaca"
                android:editable="false"
                android:hint="Select State"
                android:paddingLeft="@dimen/value_15dp"
                android:textSize="@dimen/text_14sp" />

            <TextView
                android:id="@+id/parameter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/stateSelect"
                android:layout_marginTop="@dimen/value_10dp"
                android:layout_marginBottom="@dimen/value_4dp"
                android:text="Parameter" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/parameterSelect"
                android:layout_width="match_parent"
                android:layout_height="@dimen/value_40dp"
                android:layout_below="@+id/parameter"
                android:layout_marginBottom="@dimen/value_10dp"
                android:background="@drawable/grey_border_bg"
                android:drawableEnd="@drawable/bottomarrow"
                android:drawableTint="#cacaca"
                android:editable="false"
                android:hint="Select Parameter"
                android:paddingLeft="@dimen/value_15dp"
                android:textSize="@dimen/text_14sp" />


            <LinearLayout
                android:id="@+id/date_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/parameterSelect">

                <LinearLayout
                    android:id="@+id/startDateLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/value_10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/startDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/value_4dp"
                        android:text="Start Date" />

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/startDateSelect"
                        android:layout_width="@dimen/value_120dp"
                        android:layout_height="@dimen/value_40dp"
                        android:background="@drawable/grey_border_bg"
                        android:drawableEnd="@drawable/ic_p_gray_calendar"
                        android:hint="20/11/2022"
                        android:editable="false"
                        android:textStyle="bold"
                        android:paddingLeft="@dimen/value_5dp"
                        android:paddingRight="@dimen/value_5dp"
                        android:textColorHint="@color/black"
                        android:textSize="@dimen/text_12sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/endDateLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/value_10dp"
                    android:layout_toRightOf="@+id/startDateLayout"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/endDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/value_4dp"
                        android:text="End Date" />

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/endDateSelect"
                        android:layout_width="@dimen/value_120dp"
                        android:layout_height="@dimen/value_40dp"
                        android:background="@drawable/grey_border_bg"
                        android:drawableEnd="@drawable/ic_p_gray_calendar"
                        android:hint="20/12/2022"
                        android:editable="false"
                        android:textStyle="bold"
                        android:paddingLeft="@dimen/value_5dp"
                        android:paddingRight="@dimen/value_5dp"
                        android:textColorHint="@color/black"
                        android:textSize="@dimen/text_12sp" />
                </LinearLayout>

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="@dimen/value_80dp"
                    android:layout_height="@dimen/value_40dp"
                    android:layout_gravity="bottom"
                    android:layout_toRightOf="@id/endDateLayout"
                    android:background="@drawable/rounded_green_bg"
                    android:hint="View"
                    android:textColorHint="@color/colorWhite"
                    android:textSize="@dimen/text_18sp" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/formLayout"
            android:layout_marginTop="2dp"
            android:background="#f2f2f2"
            android:paddingVertical="@dimen/value_5dp"
            android:paddingLeft="@dimen/value_20dp">

            <TextView
                android:id="@+id/result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="Result: " />

            <TextView
                android:id="@+id/resultText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/result"
                android:text="0"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="@dimen/value_20dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/value_10dp"
                    android:src="@drawable/ic_grey_search_circle" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/value_10dp"
                    android:src="@drawable/ic_grey_search_circle" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_grey_search_circle" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</layout>