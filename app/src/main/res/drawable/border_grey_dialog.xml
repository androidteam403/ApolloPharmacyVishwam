<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Define the border -->
    <item>
        <shape
            android:shape="rectangle">
            <solid android:color="@android:color/white" />
            <gradient android:startColor="@color/signout_duration_bg"
                android:centerColor="@color/signout_duration_bg"
                android:endColor="@color/signout_duration_bg"/>
            <stroke
                android:color="#CCCCCC"
                android:width="1dp" />
        </shape>
    </item>
</layer-list>
