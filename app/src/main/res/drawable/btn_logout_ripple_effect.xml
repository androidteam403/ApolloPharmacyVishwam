<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/reject_btn_hover_color"> <!-- The ripple will be red -->

    <!-- the normal bg color will be light grey -->
    <item>
        <color android:color="@color/dashboard_pending_text_color" />
    </item>

    <!-- make sure the ripple doesn't exceed the bounds -->
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <solid android:color="?android:colorAccent" />
        </shape>
    </item>

    <item
        android:left="-2dp"
        android:right="-2dp"
        android:top="40dp">
        <shape android:shape="line">
            <padding android:bottom="1dp" />
            <stroke
                android:width="4dp"
                android:color="@color/reject_btn_hover_color" />
        </shape>
    </item>
</ripple>