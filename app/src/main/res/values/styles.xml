        <item name="colorControlNormal">@color/apna_project_actionbar_color</item>
        <item name="colorControlActivated">@color/apna_project_actionbar_color</item>
        <item name="android:textColorPrimary">@color/apna_project_actionbar_color</item>
        <item name="android:textColorSecondary">@color/apna_project_actionbar_color</item>
        <item name="android:height">70dp</item>
    </style>

</resources>