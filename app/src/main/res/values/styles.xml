        <item name="colorAccent">@color/colorPrimary</item>
        <item name="boxStrokeColor">@color/colorPrimary</item>
        <item name="boxStrokeWidth">0.2dp</item>
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="android:textColorPrimary">@color/colorPrimary</item>
        <item name="android:textColorSecondary">@color/colorPrimary</item>
        <item name="android:height">70dp</item>
    </style>

    <style name="TextLabelEditTextApnaProject" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColorHint">@color/apna_project_actionbar_color</item>
        <item name="android:textSize">@dimen/text_14sp</item>
        <item name="colorPrimary">@color/apna_project_actionbar_color</item>
        <item name="strokeColor">@color/apna_project_actionbar_color</item>
        <item name="colorPrimaryDark">@color/apna_project_actionbar_color</item>
