<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="TextLabel" parent="TextAppearance.AppCompat">
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="colorAccent">@color/white</item>
        <item name="boxStrokeColor">@color/white</item>
        <item name="boxStrokeWidth">0.2dp</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="android:height">60dp</item>
    </style>
    <style name="TextVerifyLabel" parent="TextAppearance.AppCompat">
        <item name="android:textColorHint">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="colorAccent">@color/black</item>
        <item name="boxStrokeColor">@color/black</item>
        <item name="boxStrokeWidth">0.2dp</item>
        <item name="colorControlNormal">@color/black</item>
        <item name="colorControlActivated">@color/black</item>
        <item name="android:height">60dp</item>
    </style>

    <style name="NavigationStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MyDialogTheme" parent="@android:style/Theme.Panel">
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.7</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/grey</item>
        <item name="colorControlActivated">@color/material_amber_accent_700</item>
    </style>

    <declare-styleable name="FloatSeekBar">
        <attr name="floatMax" format="float" />
        <attr name="floatMin" format="float" />

    </declare-styleable>

    <style name="SeekBar">
        <item name="android:paddingLeft">30dp</item>
        <item name="android:paddingRight">30dp</item>
        <item name="colorControlNormal">@color/green</item>
        <item name="colorControlActivated">@color/green</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:max">10</item>
        <item name="android:progress">1</item>


    </style>

    <style name="progressBarGreen" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="progressBarStyle">
        <item name="android:indeterminateDrawable">@drawable/progress_drawable_green</item>
    </style>

    <style name="determinentProgressBar" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">

        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/progress_drawable_green</item>
    </style>

    <style name="fadeinandoutcustomDialog" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:background">@null</item>
        <item name="android:windowAnimationStyle">@style/fadeinandoutDialogAnimation</item>
    </style>

    <style name="fadeinandoutDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/anim_frag_fade_in_p</item>
        <item name="android:windowExitAnimation">@anim/anim_frag_fade_out_p</item>
    </style>
</resources>